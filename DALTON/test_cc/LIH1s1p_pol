
#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > LIH1s1p_pol.info <<%EOF%
   LIH1s1p_pol
   -----------
   Molecule:         LIH
   Theory Level:     CC3 / (two-function basis)
   Test Purpose:     Polarizability for 0.00 and 0.50 frequencies 
                     for  non-totally symmetric operator
%EOF%

#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > LIH1s1p_pol.mol <<%EOF%
INTGRL
CC3 polarizability 
LiH molecule
    2    2  X  Y      1.00D-15
        3.0   1    2    0    1
Li    0.0000000000000000   0.000000000   0.20000000
f   3    1
      0.6362897  0.15591627
      0.1478601  0.60768372
      0.0480887  0.39195739
        1.0   1    1    1
H     0.0000000000000000   0.000000000  -0.60000000
f   3    1
      3.4252509  0.15432897
      0.6239137  0.53532814
      0.1688554  0.44463454
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > LIH1s1p_pol.dal <<%EOF%
**DALTON
.RUN WAVE FUNCTIONS
**INTEGRAL
.DIPLEN
.THETA
**WAVE FUNCTION
.CC
*SCF INPUT
.THRESH
 1.0D-12
.NODIIS
*ORBITAL INPUT
.NOSUPSYM
.MOSTART
.H1DIAG
*CC INP
.CC3
.PRINT
 1
.THRENR
1.0D-12
.THRLEQ
1.0D-12
.MAX IT
 100
*CCLR
.OPERATOR
YDIPLEN YDIPLEN
.FREQUE
 2
0.00 0.50
**END OF DALTON
%EOF%
#######################################################################



#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# SCF, MP2 and CC3 energies:
CRIT1=`$GREP "Total SCF   energy: * -2\.7801922471" $log | wc -l`
CRIT2=`$GREP "Total MP2   energy: * -2\.7824034471" $log | wc -l`
CRIT3=`$GREP "Total CC3   energy: * -2\.7976480465" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3` 
CTRL[1]=6
ERROR[1]="ENERGIES NOT CORRECT"


# CC3 polarizability :
CRIT1=`$GREP  "YDIPLEN *\(unrel\.\) *(|-|-0|0)\.0000 *YDIPLEN *\(unrel\.\) *(|-|-0|0)\.0000 *(-|-0)\.52964096" $log | wc -l`
CRIT2=`$GREP  " *(-|-0)\.5000 *(|0)\.5000 *(|0)\.75079172" $log | wc -l`

TEST[2]=`expr $CRIT1  \+ $CRIT2`
CTRL[2]=2
ERROR[2]="CC3 POLARIZABILITY NOT CORRECT"

PASSED=1
for i in 1 2
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

' > LIH1s1p_pol.check
#######################################################################
