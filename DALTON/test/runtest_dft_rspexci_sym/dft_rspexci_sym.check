#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

CRIT1=`$GREP "Final DFT energy\:  * \-76\.38305" $log | wc -l`
CRIT3=`$GREP "Electronic energy\: * \-85\.60122" $log | wc -l`
CRIT2=`$GREP "Nuclear repulsion\: *    9\.218170507464" $log | wc -l`
TEST[1]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[1]=3
ERROR[1]="DFT/B3LYP ENERGY NOT CORRECT"

# Excitation energies
CRIT1=`$GREP " 0*\.36477.* au" $log | wc -l`
CRIT2=`$GREP " 0*\.28013.* au" $log | wc -l`
CRIT3=`$GREP " 0*\.43711.* au" $log | wc -l`
CRIT4=`$GREP " 0*\.34860.* au" $log | wc -l`
TEST[2]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 `
CTRL[2]=4
ERROR[2]="EXCITATION ENERGIES NOT CORRECT"

# PBHT overlap diagnostic
CRIT1=`$GREP "LAMBDA = * 0*\.4842" $log | wc -l`
CRIT2=`$GREP "LAMBDA = * 0*\.4218" $log | wc -l`
CRIT3=`$GREP "LAMBDA = * 0*\.4443" $log | wc -l`
CRIT4=`$GREP "LAMBDA = * 0*\.3534" $log | wc -l`
TEST[3]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 `
CTRL[3]=4
ERROR[3]="PBHT overlap diagnostic NOT CORRECT"

PASSED=1
for i in 1 2 3
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

