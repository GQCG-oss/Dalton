%EOF%
#######################################################################
#  DALTON INPUT
#######################################################################
cat > pehf_fixsol_lao.dal <<'%EOF%'
**DALTON
.RUN PROPERTIES
.PEQM
*PEQM
.SOLVAT
.FIXPVA
.MAXTES
 500
.DIIS
**WAVE FUNCTIONS
.HF
**PROPERTIES
.SHIELD
**END OF
%EOF%
#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL > pehf_fixsol_lao.check
cat >> pehf_fixsol_lao.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Potential readin test
#
CRIT1=`$GREP "Surface area FIXA * 167.899" $log | wc -l`
CRIT2=`$GREP "Number of classical sites\: * 10" $log | wc -l`
CRIT3=`$GREP "Multipole moments upto 2nd order\." $log | wc -l`
CRIT4=`$GREP "Dipole-dipole polarizabilities\." $log | wc -l`
CRIT5=`$GREP "Iterative solver for induced moments will be used" $log | wc -l`
CRIT6=`$GREP "with convergence threshold\: 1\.0E\-08" $log | wc -l`
CRIT7=`$GREP "and DIIS accelerator\." $log | wc -l`
CRIT8=`$GREP "Continuum solvation in H2O solvent\." $log | wc -l`
CRIT9=`$GREP "Number of surface points\: * 377" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9`
CTRL[1]=9
ERROR[1]="INCORRECT POTENTIAL"

#
# Energy tests
#
 CRIT1=`$GREP "Monopoles * (\-|-0)\.01515367...." $log | wc -l`
 CRIT2=`$GREP "Dipoles * ( |0)\.00416494...." $log | wc -l`
 CRIT3=`$GREP "Quadrupoles  * (\-|-0)\.00495317...." $log | wc -l`
 CRIT4=`$GREP "Electronic * (\-|-0)\.06698653...." $log | wc -l`
 CRIT5=`$GREP "Nuclear * ( |0)\.06653656...." $log | wc -l`
 CRIT6=`$GREP "Multipole * ( |0)\.00005840...." $log | wc -l`
 CRIT7=`$GREP "Electronic * ( |0)\.00746928...." $log | wc -l`
 CRIT8=`$GREP "Nuclear * (\-|-0)\.00815463...." $log | wc -l`
 CRIT9=`$GREP "Multipole * (\-|-0)\.01338778...." $log | wc -l`
CRIT10=`$GREP "Total PE energy\: * (\-|-0)\.03040659...." $log | wc -l`
CRIT11=`$GREP "Final HF energy\: * \-188\.32863768...." $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9 \+ $CRIT10 \+ $CRIT11`
CTRL[2]=11
ERROR[2]="PE-HF ENERGY CONTRIBUTIONS NOT CORRECT"

#
# dipole moment of acrolein
#

CRIT1=`$GREP "x * ( |0)\.52108..." $log | wc -l`
CRIT2=`$GREP "y * \-1\.00103..." $log | wc -l`
CRIT3=`$GREP "z * (\-|\-0)\.00004..." $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[3]=3
ERROR[3]="DIPOLE MOMENT NOT CORRECT"

#
# Test of PE-HF shielding constants.
#
CRIT1=`$GREP "\@2 London orbitals \(GIAOs\) has been used\." $log | wc -l`
CRIT2=`$GREP "\@2 C * 84\.6933 * 333\.1296 * \-248\.4362 * \-201\.9899 * ( |0)\.4295 * 208\.1070 * 1\.7900" $log | wc -l`
CRIT3=`$GREP "\@2 C * 123\.8000 * 354\.6785 * \-230\.8785 * \-167\.5610 * ( |0)\.7455 * 182\.4230 * 5\.2777" $log | wc -l`
CRIT4=`$GREP "\@2 C * 114\.8929 * 355\.1557 * \-240\.2628 * \-177\.0348 * ( |0)\.8322 * 196\.4069 * 7\.8138" $log | wc -l`
CRIT5=`$GREP "\@2 O * \-279\.8557 * 508\.8521 * \-788\.7078 * 1160\.9970 * ( |0)\.7614 * 1268\.2254 * 12\.9102" $log | wc -l`
CRIT6=`$GREP "\@2 H * 22\.0883 * 34\.9336 * \-12\.8453 * \-4\.0626 * ( |0)\.7828 * 4\.4583 * 2\.3867" $log | wc -l`
CRIT7=`$GREP "\@2 H * 25\.8086 * 34\.8252 * \-9\.0166 * 5\.6199 * ( |0)\.4947 * 5\.8446 * 1\.9421" $log | wc -l`
CRIT8=`$GREP "\@2 H * 26\.2644 * 32\.3492 * \-6\.0848 * 5\.8871 * ( |0)\.9051 * 6\.6425 * 2\.1616" $log | wc -l`
CRIT9=`$GREP "\@2 H * 26\.0486 * 20\.1502 * 5\.8983 * 5\.0368 * ( |0)\.9911 * 5\.8031 * 1\.1015" $log | wc -l`
TEST[4]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9`
CTRL[4]=9
ERROR[4]="PE-HF MAGNETIC PROPERTIES NOT CORRECT"

PASSED=1
for i in 1 2 3 4
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi
%EOF%
chmod +x pehf_fixsol_lao.check
#######################################################################
