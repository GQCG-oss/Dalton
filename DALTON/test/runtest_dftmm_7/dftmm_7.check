#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi
# 
# Test of energy terms
#
CRIT1=`$GREP "Electrostatic energy: * ( \-|\-0)\.007809176" $log | wc -l`
CRIT2=`$GREP "Polarization energy: * ( \-|\-0)\.000508841" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 `
CTRL[1]=2
ERROR[1]="DFT/MM ENERGT CONTRIBUTIONS NOT CORRECT"
#
# Test of polarizability
#
CRIT1=`$GREP "\@.*XDIPLEN .* XDIPLEN .* 6\.374312[0-9][0-9][0-9][0-9][0-9][0-9](D|E)\+00" $log | wc -l`
CRIT2=`$GREP "\@.*YDIPLEN .* YDIPLEN .* 9\.560682[0-9][0-9][0-9][0-9][0-9][0-9](D|E)\+00" $log | wc -l`
CRIT3=`$GREP "\@.*ZDIPLEN .* ZDIPLEN .* 2\.609147[0-9][0-9][0-9][0-9][0-9][0-9](D|E)\+00" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[2]=3
ERROR[2]="DFT/MM FREQUENCY DEPENDENT POLARIZABILITY NOT CORRECT"

PASSED=1 
for i in 1 2
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi                
