#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# Check 1:
CRIT1=`$GREP "E_disp *: * -0.006432" $log | wc -l`
TEST[1]=`expr $CRIT1`
CTRL[1]=2
ERROR[1]="1ST DISPERSION ENERGY NOT CORRECT"


# Check 2:
CRIT1=`$GREP "Final DFT energy:   *     -79.994887" $log | wc -l`
TEST[2]=`expr $CRIT1`
CTRL[2]=1
ERROR[2]="1ST DFT ENERGY NOT CORRECT"

# Check 3:
#CRIT1=`$GREP "C   _1:  *  ( |0)\.000000" $log | wc -l`
CRIT2=`$GREP "C   _2:  *  3\.6567(0|1).  *  ( |0)\.000000" $log | wc -l`
CRIT3=`$GREP "H   _1:  *  1\.10423.  *  3\.44773.  *  ( |0)\.000000" $log | wc -l`
CRIT4=`$GREP "H   _2:  *  1\.10423.  *  3\.44773.  *  1\.80257.  *  ( |0)\.000000" $log | wc -l`
CRIT5=`$GREP "H   _3:  *  3\.44773.  *  1\.10423.  *  3\.09703.  *  3\.5834..  *  ( |0)\.000000" $log | wc -l`
CRIT6=`$GREP "H   _4:  *  3\.44773.  *  1\.10423.  *  3\.5834..  *  3\.09703.  *  1\.80257.  *  ( |0)\.000000" $log | wc -l`
CRIT7=`$GREP "H   _1:  *  1\.10418.  *  3\.449(49|50).  *  1\.80247.  *  1\.80247.  *  3\.0990..  *  3\.0990.." $log | wc -l`
CRIT8=`$GREP "H   _2:  *  3\.449(49|50).  *  1\.10418.  *  3\.0990..  *  3\.0990..  *  1\.80247.  *  1\.80247." $log | wc -l`
CRIT9=`$GREP "H   _1:  *  1\.10442.  *  4\.7611(2|3). *  1\.80403.  *  1\.80403.  *  4\.5131(1|2).  *  4\.5131(1|2)." $log | wc -l`
CRIT10=`$GREP "H   _2: *   4\.7611(2|3).  *  1\.10442.  *  4\.5131(1|2).  *  4\.5131(1|2).  *  1\.80403.  *  1\.80403." $log | wc -l`
TEST[3]=`expr $CRIT2 + $CRIT3 + $CRIT4 + $CRIT5 + $CRIT6 + $CRIT7 + $CRIT8 + $CRIT9 + $CRIT10`
CTRL[3]=18
ERROR[3]="FINAL GEOMETRY NOT CORRECT"

PASSED=1
for i in 1 2 3 
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} )"
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi

