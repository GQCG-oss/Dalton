#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > pemcscf_1.info <<'%EOF%'
   pemcscf_1
   -----------
   Molecule:         CH2O(DFT)/2 H2O(MM)
   Wave Function:    CASSCF(4,4) / 6-31G
   Test Purpose:     Test of energy, dipole moment and excitation energy through ABACUS
%EOF%
#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > pemcscf_1.mol <<'%EOF%'
ATOMBASIS
CH2O PLUS 2 WATERS
------------------------
AtomTypes=3 NoSymmetry Angstrom
        6.0   1    Basis=6-31G
C           -1.588367    -.770650     .029109 
        8.0   1    Basis=6-31G
O           -1.657083     .436069    -.009750 
        1.0   2    Basis=6-31G
H           -.620668   -1.294822      .054251 
H           -2.508043   -1.382001     .040282
%EOF%
#######################################################################
#  QM/MM INTERACTION INPUT
#######################################################################
cat > pemcscf_1.pot <<'%EOF%'
coordinates
6
AA
X     0.975536     1.507219    -0.082590
X     0.023200     1.300096    -0.088063
X     1.113831     2.040431     0.704778
X     1.633705    -1.233280    -0.078786
X     1.600739    -0.258639    -0.086953
X     2.303878    -1.461228     0.570065
monopoles
6
 1    -0.739083
 2     0.367781
 3     0.371302
 4    -0.739251
 5     0.367701
 6     0.371549
dipoles
6
 1    -0.130726     0.053697     0.127642
 2     0.206730     0.034515    -0.015142
 3    -0.012978    -0.115434    -0.176127
 4     0.104509     0.119958     0.105009
 5    -0.007017    -0.209358    -0.012012
 6    -0.149391     0.032310    -0.145096
quadrupoles
6
 1    -3.891547     0.304260     0.173633    -4.459360     0.423169    -4.191583
 2    -0.005325     0.100015    -0.012868    -0.496247    -0.009445    -0.522055
 3    -0.512511     0.030179     0.049587    -0.348072     0.235727    -0.153360
 4    -4.353401    -0.233572     0.425650    -3.805243    -0.203696    -4.384519
 5    -0.519714    -0.002960    -0.007650     0.013940     0.010074    -0.519177
 6    -0.250836    -0.075418     0.246439    -0.497307    -0.073459    -0.266235
alphas
6
 1     5.476036    -0.086680    -0.072168     5.582289    -0.124016     5.513301
 2     3.488465     0.298404    -0.071204     1.739307    -0.350308     1.360585
 3     1.185490     0.051653     0.313695     2.359411     0.746038     2.948993
 4     5.555285     0.085929    -0.120805     5.451407     0.074565     5.566247
 5     1.509477    -0.036783    -0.366362     3.554625     0.100598     1.528430
 6     2.658086    -0.248537     0.746655     1.223737    -0.356653     2.608086
exlists
1
  1
  1
  1
  2
  2
  2
%EOF%
#
#######################################################################
#  DALTON INPUT
#######################################################################
cat > pemcscf_1.dal <<'%EOF%'
**DALTON
.RUN PROPERTIES
.PEQM
**WAVE FUNCTIONS
.HF
.MCSCF
*OPTIMIZATION
.THRESH
1.0D-10
*SCF INPUT
.NODIIS
.THRESH
 1.0D-10
*CONFIGURATION INPUT
.SYMMETRY
 1
.SPIN MUL
 1
.INACTIVE
 6
.ELECTRONS
 4
.CAS SPACE
 4
**PROPERTIES
.EXCITA
*EXCITA
.NEXCIT
 2
.DIPSTR
.THRESH
 1.0D-7
**END OF
%EOF%
#
#######################################################################
#  CHECK SCRIPT
#######################################################################
#
echo $CHECK_SHELL >pemcscf_1.check
cat >>pemcscf_1.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# General and Energy Tests 
#
CRIT1=`$GREP "Optimization control: MCSCF converged" $log | wc -l`
CRIT2=`$GREP "Monopoles * ( \-|\-0)\.01695" $log | wc -l`
CRIT3=`$GREP "Dipoles: * ( |0)\.005966" $log | wc -l`
CRIT4=`$GREP "Quadrupoles * ( \-|\-0)\.009141" $log | wc -l`
CRIT5=`$GREP "Octopoles * ( |0)\.000000" $log | wc -l`
CRIT6=`$GREP "Electronic * ( \-|\-0)\.069850" $log | wc -l`
CRIT7=`$GREP "Nuclear * ( |0)\.065515" $log | wc -l`
CRIT8=`$GREP "Multipole * ( \-|\-0)\.0056033" $log | wc -l`
CRIT9=`$GREP "Total PE energy: * ( \-|\-0)\.030066" $log | wc -l`
CRIT10=`$GREP "Final MCSCF energy: * \-113\.913571" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9 \+ $CRIT10 `
CTRL[1]=10
ERROR[1]="GENERAL PEQM or PEQM ENERGY CONTRIBUTIONS NOT CORRECT"

#
# Test of PEQM dipole moment
#
CRIT1=`$GREP "x * ( |0)\.14717" $log | wc -l`
CRIT2=`$GREP "y * \-1\.27435" $log | wc -l`
CRIT3=`$GREP "z * ( |0)\.03737" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[2]=3
ERROR[2]="PEQM DIPOLE MOMENT NOT CORRECT"

#
# Test of PEQM excitation energies
#
CRIT1=`$GREP "1        1  *  ( |0)\.1558" $log | wc -l`
CRIT2=`$GREP "1        2  *  ( |0)\.3581" $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 `
CTRL[3]=2
ERROR[3]="PEQM EXCITATION ENERGIES NOT CORRECT"

PASSED=1 
for i in 1 2 3
do
   if [ ${TEST[i]} -lt ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi                
%EOF%
chmod +x pemcscf_1.check
#######################################################################
