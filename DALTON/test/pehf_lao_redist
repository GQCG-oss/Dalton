#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > pehf_lao_redist.info <<'%EOF%'
   pehf_lao_redist
   -----------
   Molecule:         Acrolein and two classical water molecules
   Wave Function:    PE-HF / STO-3G
   Test Purpose:     Test of nuclear magnetic shieldings through
                     ABACUS using LAOs and the PE library with
                     redistribution of charges and removal of
                     dipole polarizabilites
%EOF%
#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > pehf_lao_redist.mol <<'%EOF%'
BASIS
STO-3G
Acrolein
------------------------
AtomTypes=3 NoSymmetry Angstrom
Charge=6.0 Atoms=3
C             -0.145335   -0.546770    0.000607
C              1.274009   -0.912471   -0.000167
C              1.630116   -2.207690   -0.000132
Charge=8.0 Atoms=1
O             -0.560104    0.608977    0.000534
Charge=1.0 Atoms=4
H             -0.871904   -1.386459    0.001253
H              2.004448   -0.101417   -0.000710
H              0.879028   -3.000685    0.000484
H              2.675323   -2.516779   -0.000673
%EOF%
#######################################################################
#  POTENTIAL INPUT
#######################################################################
cat > pehf_lao_redist.pot <<'%EOF%'
! Two water molecules modelled by a Polarizable Embedding potential
! notice that the ORDER 3 have been removed
@COORDINATES
6
AA
O   -3.3285510  -0.1032300  -0.0004160
H   -2.5037950  0.4132210   0.0003390
H   -4.0392140  0.5467290   -0.0008500
O   1.7422970   2.3413610   -0.0007450
H   0.8416780   1.9718070   -0.0008200
H   1.6325590   3.2983010   0.0041540
@MULTIPOLES
ORDER 0
6
1    -0.7423294438
2     0.3699305781
3     0.3723988657
4    -0.7424407021
5     0.3699635356
6     0.3724771666
ORDER 1
6
1        0.0303539300        0.3280749969        0.0000894127
2       -0.1005787187       -0.0557286568       -0.0000906399
3        0.0911510444       -0.0729658327        0.0000575297
4       -0.2840371815        0.1671869101        0.0013661730
5        0.1039146227        0.0490621032        0.0000401115
6        0.0058194611       -0.1165815150       -0.0005822607
ORDER 2
6
1       -3.9516312016       -0.0561791973        0.0008348984       -4.5778807726        0.0000430036       -5.0206878337
2       -0.5774205281       -0.0533068952       -0.0000246837       -0.6043997755       -0.0000510833       -0.5595888419
3       -0.5583105371        0.0466697048        0.0000093367       -0.6224134008        0.0000240992       -0.5582982578
4       -4.4188113058        0.2801417448        0.0002126277       -4.1129942280        0.0039064597       -5.0206529493
5       -0.6455428297       -0.0041180935        0.0001453595       -0.5362599824        0.0001224056       -0.5596286658
6       -0.5562677027        0.0450154899        0.0002165578       -0.6244100291       -0.0004104801       -0.5583164804
@POLARIZABILITIES
ORDER 1 1
6
1        1.5931619660        0.0800886126       -0.0012113893        2.5255643422        0.0013486011        3.3670040387
2        0.7929865198        0.1542303414        0.0001503753        0.6015087761        0.0002890322        0.5925152779
3        0.7209493065       -0.1783490996        0.0000586528        0.6420261847        0.0000623389        0.5751449171
4        2.2823444229       -0.4207398269       -0.0006457588        1.8324399300       -0.0069062619        3.3666855109
5        0.8132771942        0.1387943320        0.0004103386        0.5814638105       -0.0000004496        0.5927954021
6        0.4993246061       -0.0196042351        0.0000571000        0.8612729797        0.0020132268        0.5750737753
EXCLISTS
6 3
1 2 3
2 1 3
3 1 2
4 5 6
5 6 4
6 4 5
%EOF%
#######################################################################
#  DALTON INPUT
#######################################################################
cat > pehf_lao_redist.dal <<'%EOF%'
**DALTON
.RUN PROPERTIES
.PEQM
*PEQM
.BORDER
REDIST 1 2.0 AA 1
**WAVE FUNCTIONS
.HF
**PROPERTIES
.SHIELD
**END OF
%EOF%
#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL > pehf_lao_redist.check
cat >> pehf_lao_redist.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Test of PE-HF shielding constants.
#
CRIT1=`$GREP "\@1 London orbitals \(GIAOs\) has been used." $log | wc -l`
CRIT2=`$GREP "\@1 C * 88\.335[1-3]" $log | wc -l`
CRIT3=`$GREP "\@1 C * 121\.904[0-2]" $log | wc -l`
CRIT4=`$GREP "\@1 C * 119\.775[0-2]" $log | wc -l`
CRIT5=`$GREP "\@1 O * \-364\.98.." $log | wc -l`
CRIT6=`$GREP "\@1 H * 21\.8606" $log | wc -l`
CRIT7=`$GREP "\@1 H * 25\.5005" $log | wc -l`
CRIT8=`$GREP "\@1 H * 26\.8254" $log | wc -l`
CRIT9=`$GREP "\@1 H * 26\.5505" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9`
CTRL[1]=9
ERROR[1]="PE-HF MAGNETIC PROPERTIES NOT CORRECT"

PASSED=1
for i in 1
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi
%EOF%
chmod +x pehf_lao_redist.check
#######################################################################
