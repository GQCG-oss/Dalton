#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

if $GREP -q "not implemented for parallel calculations" $log; then
   echo "TEST ENDED AS EXPECTED"
   exit 0
fi

#                       ! Original MP2-R12 method !
#             MP2-R12/A   correlation energy =   -0.403449906
#             MP2-R12/B   correlation energy =   -0.393864561
#                       ! Improved MP2-R12 method !
#             MP2-R12/A   correlation energy =   -0.395123679
#             MP2-R12/B   correlation energy =   -0.389709677
CRIT1=`$GREP "MP2-R12/B   correlation energy =   (-0| -)\.38970967" $log | wc -l`
TEST[1]=`expr	$CRIT1`
CTRL[1]=1
ERROR[1]="MP2-R12/B ENERGY NOT CORRECT"

PASSED=1
for i in 1 
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

