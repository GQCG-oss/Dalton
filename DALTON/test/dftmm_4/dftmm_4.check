#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi
#
# Test of polarizability
#
CRIT1=`$GREP "\@.*XDIPLEN .* XDIPLEN .* 6\.374222[0-9]*(D|E)\+00" $log | wc -l`
CRIT2=`$GREP "\@.*YDIPLEN .* YDIPLEN .* 9\.560638[0-9]*(D|E)\+00" $log | wc -l`
CRIT3=`$GREP "\@.*ZDIPLEN .* ZDIPLEN .* 2\.609139[0-9]*(D|E)\+00" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[1]=3
ERROR[1]="DFT/MM FREQUENCY DEPENDENT POLARIZABILITY NOT CORRECT"

PASSED=1 
for i in 1 
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi                
