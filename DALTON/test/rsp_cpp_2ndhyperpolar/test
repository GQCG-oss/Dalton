#!/usr/bin/env python                                                                             
#    rsp_cpp_2ndhyperpolar
#    ---------------------                                                                       
#    Molecule:         Ne                                                                        
#    Wave Function:    HF/6-31G
#    Test Purpose:     Damped second-order hyperpolarizability

import os
import sys

sys.path.append(os.path.join(os.path.dirname(__file__), '..'))
from runtest_dalton import Filter, TestRun

test = TestRun(__file__, sys.argv)

f = Filter()
f.add(scf_string    = 'SCF energy         :',
      num_lines     = 1,
      rel_tolerance = 1.0e-8)

f.add(crf_string    = '@ <<Z;Z,Z,Z>>',
      num_lines     = 1,
      rel_tolerance = 1.0e-3,
      ignore_below  = 1.0e-3)

test.run(['GAMMA_ZZZZ_HF_CPP.dal'], ['neon_6-31G.mol'], {'out': f})

sys.exit(test.return_code)
