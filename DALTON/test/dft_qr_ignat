#!/bin/sh

. ./functions || { echo "'functions' library not found." ; exit 1; }

info="
   dft_qr_ignat
   ------------------
   Molecule:         H2O
   Wave Functions:   DFT LDA / aug-cc-pVDZ
   Test Purpose:     DFT LDA hyperpolarizability test w/o symmetry.
"

molecule="BASIS
aug-cc-pVDZ
Water
aug-cc-pVDZ basis
    2    0  X  Z
        8.    1
O      .0000   -.2249  0.0000000000
        1.    2
H    -1.4523    .8996   .0000000000
H     1.4523   1.0000   .0000000000
"

dalton="**DALTON INPUT
.RUN RESPONSE
.DIRECT
**WAVE FUNCTIONS
.DFT
 LDA
*SCF INPUT
.THRESHOLD
1e-10
*DFT INPUT
.GRID TYPE
GC2 SSF
.RADINT
1e-11
**RESPONSE
*QUADRATIC
.IGNAT
.DIPLEN
.E3TEST
.BFREQ
2
0 0.1
**END OF DALTON INPUT
"

test="
check_scf_energy DFT -75.880414456863 1e-10
check_hyperpolarizabilities 0.0 0.0 'X;X,X'   0.24049351 1e-5
check_hyperpolarizabilities 0.0 0.0 'Y;X,X' -18.79765701 1e-5
