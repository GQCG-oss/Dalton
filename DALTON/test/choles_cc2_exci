#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > choles_cc2_exci.info <<'%EOF%'
   choles_cc2_exci
   -----------------
   Molecule:         Water
   Wave Functions:   CC2/cc-pVDZ
   Test Purpose:     Cholesky CC2 excitation energies
%EOF%

#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > choles_cc2_exci.mol <<'%EOF%'
BASIS
cc-pVDZ
............
............
Atomtypes=2
Charge=8.0 Atoms=1
O    -2.66610950   0.12039950   0.00000000
Charge=1.0 Atoms=2
H    -3.30256970  -0.78553700  -1.43043210
H    -3.30256970  -0.78553700   1.43043210
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > choles_cc2_exci.dal <<'%EOF%'
**DALTON
.RUN WAVE
.CHOLES
**INTEGRALS
.DIPLEN
**CHOLESKY
.REDUCE
.SPANDI
  1.0d-3
.THRCOM
 1.0D-6
!.RSTDIA
!.RSTCHO
**WAVE FUNCTION
.CC
*SCF INPUT
.THRESH
 1.0D-8
.MAX DIIS
  100
*ORBITAL
.MOSTART
 HUCKEL
.NOSUPSYM
*CC INP
.PRINT
  1
.FREEZE
  1   0
.CCS
.CC2
*CCEXCI
.NCCEXCI
  2   1   1   0
**END OF DALTON INPUT
%EOF%
#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >choles_cc2_exci.check
cat >>choles_cc2_exci.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

if $GREP -q "not implemented for parallel calculations" $log; then
   echo "TEST ENDED AS EXPECTED"
   exit 0
fi

# SCF and CC2 energies:
CRIT1=`$GREP "Total SCF" $log | $GREP "\-76.026796" | wc -l`
CRIT2=`$GREP "Total CC2" $log | $GREP "\-76.229260" | wc -l`
TEST[1]=`expr $CRIT1 + $CRIT2`
CTRL[1]=5
ERROR[1]="ENERGIES NOT CORRECT"


# Amplitudes
CRIT1=`$GREP "Number of t1 amplitudes" $log | $GREP "25" | wc -l`
CRIT2=`$GREP "Number of t2 amplitudes" $log | $GREP "805" | wc -l`
TEST[2]=`expr $CRIT1 + $CRIT2`
CTRL[2]=4
ERROR[2]="NUMBER OF AMPLITUDES NOT CORRECT"


# CCS excitations
CRIT1=`$GREP "\^1A1" $log | grep "0.434" | wc -l`
CRIT2=`$GREP "\^1A1" $log | grep "0.675" | wc -l`
CRIT3=`$GREP "\^1B1" $log | grep "0.339" | wc -l`
CRIT4=`$GREP "\^1B2" $log | grep "0.500" | wc -l`
CRIT0=`expr $CRIT1 + $CRIT2 + $CRIT3 + $CRIT4 + $CRIT5`
TEST[3]=`expr $CRIT0 + $CRIT6 + $CRIT7 + $CRIT8`
CTRL[3]=8
ERROR[3]="CCS EXCITATION ENERGIES NOT CORRECT"



# CC2 excitations
CRIT1=`$GREP "\^1A1" $log | grep "0.394" | wc -l`
CRIT2=`$GREP "\^1A1" $log | grep "0.656" | wc -l`
CRIT3=`$GREP "\^1B1" $log | grep "0.298" | wc -l`
CRIT5=`$GREP "\^1B2" $log | grep "0.472" | wc -l`
CRIT0=`expr $CRIT1 + $CRIT2 + $CRIT3 + $CRIT4 + $CRIT5`
TEST[4]=`expr $CRIT0 + $CRIT6 + $CRIT7 + $CRIT8`
CTRL[4]=8
ERROR[4]="CC2 EXCITATION ENERGIES NOT CORRECT"



PASSED=1
for i in 1 2 3 4
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi


%EOF%
chmod +x choles_cc2_exci.check
#######################################################################
