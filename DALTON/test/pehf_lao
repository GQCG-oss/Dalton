#######################################################################
#  DALTON INPUT
#######################################################################
cat > pehf_lao.dal <<'%EOF%'
**DALTON
.RUN PROPERTIES
.PEQM
**WAVE FUNCTIONS
.HF
**PROPERTIES
.SHIELD
**END OF
%EOF%
#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL > pehf_lao.check
cat >> pehf_lao.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Potential readin test
#
CRIT1=`$GREP "Number of classical sites: * 10" $log | wc -l`
CRIT2=`$GREP "Multipole moments upto 2nd order." $log | wc -l`
CRIT3=`$GREP "Dipole-dipole polarizabilities." $log | wc -l`
CRIT4=`$GREP "Iterative solver for induced moments" $log | wc -l`
CRIT5=`$GREP "convergence threshold: 1.0E-08" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 `
CTRL[1]=5
ERROR[1]="INCORRECT POTENTIAL"
#
# Test of PE-HF shielding constants.
#
CRIT1=`$GREP "\@1 London orbitals \(GIAOs\) has been used." $log | wc -l`
CRIT2=`$GREP "\@1 C * 84\.6763 * 333\.1422 * \-248\.4658 * (\-|\-0)\.4929 * 230\.5177 * 144\.4844 * 1\.7863" $log | wc -l`
CRIT3=`$GREP "\@1 C * 122\.5623 * 354\.6627 * \-232\.1004 * (\-|\-0)\.1852 * 212\.2199 * 149\.3400 * 1\.2632" $log | wc -l`
CRIT4=`$GREP "\@1 C * 117\.0104 *  354\.7206 * \-237\.7102 * (\-|\-0)\.1643 * 222\.8340 * 157\.9754 * 1\.2317" $log | wc -l`
CRIT5=`$GREP "\@1 O * \-285\.1979 * 508\.8677 * \-794\.0655 * ( |0)\.1812 * 1469\.5355 * 1168\.7113 * ( |0)\.7722" $log | wc -l`
CRIT6=`$GREP "\@1 H * 22\.0459 * 34\.8890 * \-12\.8431 * (\-|\-0)\.1643 * 5\.1122 * 3\.6242 * 1\.2317" $log | wc -l`
CRIT7=`$GREP "\@1 H * 25\.4466 * 34\.4174 * \-8\.9708 * ( |0)\.4629 * 6\.6647 * 5\.7697 * ( |0)\.4654" $log | wc -l`
CRIT8=`$GREP "\@1 H * 26\.5789 * 32\.6268 * \-6\.0479 * ( |0)\.0762 * 7\.6162 * 5\.8572 * ( |0)\.9009" $log | wc -l`
CRIT9=`$GREP "\@1 H * 26\.2839 * 20\.3984 * 5\.8856 * ( |0)\.0334 * 6\.5958 * 5\.0020 * ( |0)\.9559" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9`
CTRL[2]=9
ERROR[2]="PE-HF MAGNETIC PROPERTIES NOT CORRECT"

PASSED=1
for i in 1 2
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi
%EOF%
chmod +x pehf_lao.check
#######################################################################
