#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi

#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > cc3_HF_ccpVDZ_tmom.info <<%EOF%
   cc3_HF_ccpVDZ_tmom
   -----------
   Molecule:         HF
   Theory Level:     CC3 / cc-pVDZ
   Test Purpose:     Transition moment between the ground and an
                     excited state; non-totally symmetric operator.
%EOF%

#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > cc3_HF_ccpVDZ_tmom.mol <<%EOF%
BASIS
cc-pVDZ
CCSD(T) unrelaxed FOP
Dum di dum di da
    2    2  X  Y  Z   1.00D-15
        9.0   1    2    1    1
F     0.0000000000000000   0.000000000   0.08729478
        1.0   1    1    1
H     0.0000000000000000   0.000000000  -1.64558444
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > cc3_HF_ccpVDZ_tmom.dal <<%EOF%
**DALTON
.RUN WAVE FUNCTIONS
**INTEGRAL
.DIPLEN
.DIPVEL
.ANGMOM
**WAVE FUNCTION
.CC
*SCF INPUT
.THRESH
 1.0D-12
.NODIIS
*ORBITAL INPUT
.MOSTART
 H1DIAG
*CC INP
.CC3
.PRINT
 1
.THRENR
5.0D-9
.THRLEQ
5.0D-9
.MAX IT
 100
*CCEXCI
.THREXC
 5.0D-9
.TOLSC
 5.0D-9
.NCCEXCI
 0 1 0 0
 0 0 0 0
*CCOPA
.OPERATOR
XDIPLEN
**END OF DALTON
%EOF%
#######################################################################



#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL > cc3_HF_ccpVDZ_tmom.check
cat >>cc3_HF_ccpVDZ_tmom.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

if $GREP -q "not implemented for parallel calculations" $log; then
   echo "TEST ENDED AS EXPECTED"
   exit 0
fi

# SCF, MP2 and CC3 energies:
CRIT1=`$GREP "Total SCF   energy: * -100\.0194112620" $log | wc -l`
CRIT2=`$GREP "Total MP2   energy: * -100\.2231931820" $log | wc -l`
CRIT3=`$GREP "Total CC3   energy: * -100\.2301803943" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3` 
CTRL[1]=6
ERROR[1]="ENERGIES NOT CORRECT"


# CC3 transiton moments :
CRIT1=`$GREP  " *\| *XDIPLEN *\| *( |-|-0|0)\.19931936 *\| *( |-|-0|0)\.39224922 *\| *( |0)\.07818286 *\|" $log | wc -l`
  
TEST[2]=$CRIT1
CTRL[2]=1
ERROR[2]="CC3 TRANSITION MOMENT NOT CORRECT"

# CC3 excitation energies:
CRIT1=`$GREP  " *\| *\^1B1 *\| *1 *\| *( |0)\.3979860 *\| *10\.82975 *\| *87347\.82. *\| *95\.51 *\|" $log | wc -l`
TEST[3]=$CRIT1
CTRL[3]=1
ERROR[3]="CC3 EXCITATION ENERGIES NOT CORRECT"

PASSED=1
for i in 1 2 3
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

%EOF%
#######################################################################
