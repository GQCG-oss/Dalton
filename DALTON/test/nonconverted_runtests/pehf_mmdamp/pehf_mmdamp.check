#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Potential readin
#
CRIT1=`$GREP "Number of classical sites: * 10" $log | wc -l`
CRIT2=`$GREP "Multipole moments upto 2nd order" $log | wc -l`
CRIT3=`$GREP "Dipole-dipole polarizabilities" $log | wc -l`
CRIT4=`$GREP "Iterative solver for induced moments will be used" $log | wc -l`
CRIT5=`$GREP "with convergence threshold: 1\.0E\-10" $log | wc -l`
CRIT6=`$GREP "Interactions between inducible moments will be damped using Thole damping" $log | wc -l`
CRIT7=`$GREP "Interactions between permanent and inducible moments will be damped using Thole damping" $log | wc -l`
# two hits
CRIT8=`$GREP "with damping coefficient   2\.1304" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8`
CTRL[1]=9
ERROR[1]="INCORRECT POTENTIAL"

#
# Energies
#
CRIT1=`$GREP "Monopoles        *   \-0*\.015225" $log | wc -l`
CRIT2=`$GREP "Dipoles          *     0*\.004137" $log | wc -l`
CRIT3=`$GREP "Quadrupoles      *   \-0*\.004852" $log | wc -l`
CRIT4=`$GREP "Electronic       *   \-0*\.042867" $log | wc -l`
CRIT5=`$GREP "Nuclear          *     0*\.041989" $log | wc -l`
CRIT6=`$GREP "Multipole        *     0*\.000123" $log | wc -l`
CRIT7=`$GREP "Total PE energy: *   \-0*\.016695" $log | wc -l`
CRIT8=`$GREP "Final HF energy: *  \-188\.315119" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8`
CTRL[2]=8
ERROR[2]="ENERGY CONTRIBUTIONS NOT CORRECT"

#
# Induced dipole moments in environment
#
 CRIT1=`$GREP " 1 *   0*\.004747.. *   0*\.010053.. *   0*\.000004.." $log | wc -l`
 CRIT2=`$GREP " 2 *   0*\.012819.. *   0*\.006879.. *   0*\.000006.." $log | wc -l`
 CRIT3=`$GREP " 3 *   0*\.001429.. *   0*\.000394.. *   0*\.000000.." $log | wc -l`
 CRIT4=`$GREP " 4 *   0*\.034093.. *   0*\.023855.. *   0*\.000025.." $log | wc -l`
 CRIT5=`$GREP " 5 *   0*\.002229.. * \-0*\.000307.. * \-0*\.000001.." $log | wc -l`
 CRIT6=`$GREP " 6 * \-0*\.013487.. *   0*\.004201.. *   0*\.000003.." $log | wc -l`
 CRIT7=`$GREP " 7 * \-0*\.014623.. * \-0*\.006660.. *   0*\.000000.." $log | wc -l`
 CRIT8=`$GREP " 8 * \-0*\.001350.. * \-0*\.000725.. * \-0*\.000003.." $log | wc -l`
 CRIT9=`$GREP " 9 * \-0*\.043211.. * \-0*\.013646.. *   0*\.000008.." $log | wc -l`
CRIT10=`$GREP "10 * \-0*\.002310.. * \-0*\.000179.. * \-0*\.000008.." $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9 \+ $CRIT10 `
CTRL[3]=10
ERROR[3]="INDUCED DIPOLE MOMENTS NOT CORRECT"

PASSED=1
for i in 1 2 3
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi
