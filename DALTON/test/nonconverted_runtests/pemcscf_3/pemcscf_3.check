#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

if $GREP -q "not implemented for parallel calculations" $log; then
   echo "TEST ENDED AS EXPECTED"
   exit 0
fi

#
# General and Energy Tests
#
CRIT1=`$GREP "Optimization control: MCSCF converged" $log | wc -l`
CRIT2=`$GREP "Monopoles * \-0*\.016914" $log | wc -l`
CRIT3=`$GREP "Dipoles * 0*\.005938" $log | wc -l`
CRIT4=`$GREP "Quadrupoles * \-0*\.009099" $log | wc -l`
CRIT5=`$GREP "Electronic * \-0*\.069192" $log | wc -l`
CRIT6=`$GREP "Nuclear * 0*\.064880" $log | wc -l`
CRIT7=`$GREP "Multipole * \-0*\.0056031" $log | wc -l`
CRIT8=`$GREP "Total PE energy: * \-0*\.029991" $log | wc -l`
CRIT9=`$GREP "Final MCSCF energy: * \-113\.877472" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9 `

CTRL[1]=9
ERROR[1]="GENERAL PEQM or PEQM ENERGY CONTRIBUTIONS NOT CORRECT"

#
# Test of PEQM dipole moment
#
CRIT1=`$GREP "x * 0*\.147223" $log | wc -l`
CRIT2=`$GREP "y * \-1\.274272" $log | wc -l`
CRIT3=`$GREP "z * 0*\.037331" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[2]=3
ERROR[2]="PEQM DIPOLE MOMENT NOT CORRECT"

#
# Test of PEQM excitation energies
#
CRIT1=`$GREP "1 * 1 * 0*\.15116" $log | wc -l`
CRIT2=`$GREP "1 * 2 * 0*\.33533" $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 `
CTRL[3]=2
ERROR[3]="PEQM EXCITATION ENERGIES NOT CORRECT"

PASSED=1
for i in 1 2 3
do
   if [ ${TEST[i]} -lt ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi
