#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Energies
#
CRIT1=`$GREP "Monopoles * \-0*\.0150300....." $log | wc -l`
CRIT2=`$GREP "Dipoles * " $log | wc -l`
CRIT3=`$GREP "Quadrupoles * " $log | wc -l`
CRIT4=`$GREP "Octopoles * " $log | wc -l`
CRIT5=`$GREP "Electronic * \-0*\.027446......" $log | wc -l`
CRIT6=`$GREP "Nuclear * 0*\.026862......" $log | wc -l`
CRIT7=`$GREP "Multipole * 0*\.000081......" $log | wc -l`
CRIT8=`$GREP "Total PE energy: * \-0*\.015532......" $log | wc -l`
CRIT9=`$GREP "Final HF energy: * \-188\.314193......" $log | wc -l`
CRIT10=`$GREP "Embedding energy: * \-0*\.0155329....." $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9 \+ $CRIT10 `
CTRL[1]=7
ERROR[1]="ENERGY CONTRIBUTIONS NOT CORRECT"

#
# Test of PE-HF one-photon absorption properties
#
 CRIT1=`$GREP "\@ STATE NO\: * 1 \*TRANSITION MOMENT\: * \-*[4-8]\.........E\-06 \*ENERGY\(eV\)\: * 4\.1172..." $log | wc -l`
 CRIT2=`$GREP "\@ STATE NO\: * 2 \*TRANSITION MOMENT\: * \-*0\.91732... * \*ENERGY\(eV\)\: * 8\.4248..." $log | wc -l`
 CRIT3=`$GREP "\@ STATE NO\: * 3 \*TRANSITION MOMENT\: * \-*3\.7.......E\-04 \*ENERGY\(eV\)\: * 8\.7112..." $log | wc -l`
 CRIT4=`$GREP "\@ STATE NO\: * 4 \*TRANSITION MOMENT\: * \-*3\.........E\-05 \*ENERGY\(eV\)\: * 10\.358..." $log | wc -l`
 CRIT5=`$GREP "\@ STATE NO\: * 1 \*TRANSITION MOMENT\: * \-*1\.........E\-05 \*ENERGY\(eV\)\: * 4\.1172..." $log | wc -l`
 CRIT6=`$GREP "\@ STATE NO\: * 2 \*TRANSITION MOMENT\: * \-*1\.5941... * \*ENERGY\(eV\)\: * 8\.4248..." $log | wc -l`
 CRIT7=`$GREP "\@ STATE NO\: * 3 \*TRANSITION MOMENT\: * \-*4\.[56].......E\-04 \*ENERGY\(eV\)\: * 8\.7112..." $log | wc -l`
 CRIT8=`$GREP "\@ STATE NO\: * 4 \*TRANSITION MOMENT\: * \-*7\.........E\-05 \*ENERGY\(eV\)\: * 10\.3582.." $log | wc -l`
 CRIT9=`$GREP "\@ STATE NO\: * 1 \*TRANSITION MOMENT\: * \-*5\.06......E\-03 \*ENERGY\(eV\)\: * 4\.1172..." $log | wc -l`
CRIT10=`$GREP "\@ STATE NO\: * 2 \*TRANSITION MOMENT\: * \-*2\.4.......E\-04 \*ENERGY\(eV\)\: * 8\.4248..." $log | wc -l`
CRIT11=`$GREP "\@ STATE NO\: * 3 \*TRANSITION MOMENT\: * \-*0*\.15523... * \*ENERGY\(eV\)\: * 8\.7112..." $log | wc -l`
CRIT12=`$GREP "\@ STATE NO\: * 4 \*TRANSITION MOMENT\: * \-*2\.47......E\-03 \*ENERGY\(eV\)\: * 10\.358..." $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9 \+ $CRIT10 \+ $CRIT11 \+ $CRIT12 `
CTRL[2]=12
ERROR[2]="ONE-PHOTON ABSORPTION PROPERTIES NOT CORRECT"

PASSED=1
for i in 1 2
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi
