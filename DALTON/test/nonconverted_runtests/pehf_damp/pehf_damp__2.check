#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Potential readin
#
CRIT1=`$GREP "Number of classical sites: * 10" $log | wc -l`
CRIT2=`$GREP "Multipole moments upto 3rd order." $log | wc -l`
CRIT3=`$GREP "Dipole-dipole polarizabilities." $log | wc -l`
CRIT4=`$GREP "Direct solver for induced moments will be used." $log | wc -l`
CRIT5=`$GREP "Interactions between inducible moments will be damped using Thole damping" $log | wc -l`
CRIT6=`$GREP "with damping coefficient   2\.1304" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 `
CTRL[1]=6
ERROR[1]="INCORRECT POTENTIAL"

#
# Energies
#
CRIT1=`$GREP "Monopoles * \-0*\.015707......" $log | wc -l`
CRIT2=`$GREP "Dipoles * 0*\.004251......" $log | wc -l`
CRIT3=`$GREP "Quadrupoles * \-0*\.004995......" $log | wc -l`
CRIT4=`$GREP "Octopoles * \-0*\.002314......" $log | wc -l`
CRIT5=`$GREP "Electronic * \-0*\.07449(6|7)......" $log | wc -l`
CRIT6=`$GREP "Nuclear * 0*\.072657......" $log | wc -l`
CRIT7=`$GREP "Multipole * 0*\.000323......" $log | wc -l`
CRIT8=`$GREP "Total PE energy: * \-0*\.020281......" $log | wc -l`
CRIT9=`$GREP "Final HF energy: * \-188\.318084......" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9 `
CTRL[2]=9
ERROR[2]="ENERGY CONTRIBUTIONS NOT CORRECT"

#
# Induced dipole moments in environment
#
CRIT1=`$GREP "  1 * 0*\.140114.. * 0*\.193037.. * 0*\.00004[12].." $log | wc -l`
CRIT2=`$GREP "  6 * \-0*\.28949[78].. * 0*\.050489.. * 0*\.00009[45].." $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 `
CTRL[3]=2
ERROR[3]="INDUCED DIPOLE MOMENTS NOT CORRECT"

PASSED=1
for i in 1 2 3
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi
