#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Potential readin test
#
CRIT1=`$GREP "Number of classical sites: * 6" $log | wc -l`
CRIT2=`$GREP "Multipole moments upto 2nd order." $log | wc -l`
CRIT3=`$GREP "Dipole-dipole polarizabilities." $log | wc -l`
CRIT4=`$GREP "Iterative solver for induced moments" $log | wc -l`
CRIT5=`$GREP "convergence threshold: 1.0E-08" $log | wc -l`
CRIT6=`$GREP "from site:     2" $log | wc -l`
CRIT7=`$GREP "from site:     5" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5  \+ $CRIT6  \+ $CRIT7 `
CTRL[1]=7
ERROR[1]="INCORRECT POTENTIAL"
#
# Test of PE-HF shielding constants.
#
CRIT1=`$GREP "\@1 London orbitals \(GIAOs\) has been used." $log | wc -l`
CRIT2=`$GREP "\@1 C * 88\.335[1-3]" $log | wc -l`
CRIT3=`$GREP "\@1 C * 121\.904[0-2]" $log | wc -l`
CRIT4=`$GREP "\@1 C * 119\.775[0-2]" $log | wc -l`
CRIT5=`$GREP "\@1 O * \-364\.98.." $log | wc -l`
CRIT6=`$GREP "\@1 H * 21\.8606" $log | wc -l`
CRIT7=`$GREP "\@1 H * 25\.5005" $log | wc -l`
CRIT8=`$GREP "\@1 H * 26\.8254" $log | wc -l`
CRIT9=`$GREP "\@1 H * 26\.5505" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9`
CTRL[2]=9
ERROR[2]="PE-HF MAGNETIC PROPERTIES NOT CORRECT"

PASSED=1
for i in 1 2
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi
