#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Potential readin
#
CRIT1=`$GREP "Number of classical sites: * 10" $log | wc -l`
CRIT2=`$GREP "Multipole moments upto 3rd order." $log | wc -l`
CRIT3=`$GREP "Dipole-dipole polarizabilities." $log | wc -l`
CRIT4=`$GREP "Iterative solver for induced moments will be used" $log | wc -l`
CRIT5=`$GREP "with convergence threshold: 1\.0E\-10" $log | wc -l`
CRIT6=`$GREP "Existing files will be used to restart if possible." $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 `
CTRL[1]=6
ERROR[1]="INCORRECT POTENTIAL"

#
# Convergence
#
CRIT1=`$GREP " DIIS converged in   1 iterations" $log | wc -l`
TEST[2]=`expr $CRIT1 `
CTRL[2]=1
ERROR[2]="CONVERGENCE PROBLEM"

#
# Energies
#
CRIT1=`$GREP "Monopoles * \-0*\.015401......" $log | wc -l`
CRIT2=`$GREP "Dipoles * 0*\.004183......" $log | wc -l`
CRIT3=`$GREP "Quadrupoles * \-0*\.004908......" $log | wc -l`
CRIT4=`$GREP "Octopoles * \-0*\.002292......" $log | wc -l`
CRIT5=`$GREP "Electronic * \-0*\.043153......" $log | wc -l`
CRIT6=`$GREP "Nuclear * 0*\.042259......" $log | wc -l`
CRIT7=`$GREP "Multipole * 0*\.000129......" $log | wc -l`
CRIT8=`$GREP "Total PE energy: * \-0*\.019184......" $log | wc -l`
CRIT9=`$GREP "Final HF energy: * \-188\.317391......" $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9 `
CTRL[3]=9
ERROR[3]="ENERGY CONTRIBUTIONS NOT CORRECT"

#
# Induced dipole moments in environment
#
 CRIT1=`$GREP "  1 * 0*\.004763.. * 0*\.01019[01].. * 0*\.000004.." $log | wc -l`
 CRIT2=`$GREP "  2 * 0*\.012893.. * 0*\.006943.. * 0*\.00000[67].." $log | wc -l`
 CRIT3=`$GREP "  3 * 0*\.001437.. * 0*\.000409.. * 0*\.000000.." $log | wc -l`
 CRIT4=`$GREP "  4 * 0*\.034346.. * 0*\.024048.. * 0*\.000026.." $log | wc -l`
 CRIT5=`$GREP "  5 * 0*\.002182.. * \-0*\.000242.. * \-0*\.000001.." $log | wc -l`
 CRIT6=`$GREP "  6 * \-0*\.013593.. * 0*\.004221.. * 0*\.000003.." $log | wc -l`
 CRIT7=`$GREP "  7 * \-0*\.014711.. * \-0*\.006700.. * 0*\.000000.." $log | wc -l`
 CRIT8=`$GREP "  8 * \-0*\.001365.. * \-0*\.000732.. * \-0*\.000003.." $log | wc -l`
 CRIT9=`$GREP "  9 * \-0*\.043516.. * \-0*\.013744.. * 0*\.000008.." $log | wc -l`
CRIT10=`$GREP " 10 * \-0*\.002330.. * \-0*\.000193.. * \-0*\.000008.." $log | wc -l`
TEST[4]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9 \+ $CRIT10 `
CTRL[4]=10
ERROR[4]="INDUCED DIPOLE MOMENTS NOT CORRECT"

PASSED=1
for i in 1 2 3 4
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi
