#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

if $GREP -q "not implemented for parallel calculations" $log; then
   echo "TEST ENDED AS EXPECTED"
   exit 0
fi

# SCF, MP2 and CCSD energies of 0 iteration:
CRIT1=`$GREP "Final * HF energy: * -100\.01388196" $log | wc -l`
CRIT2=`$GREP "Total MP2   energy: * -100\.22012568" $log | wc -l`
CRIT3=`$GREP " H * ( |0|\-0|\-)\.0000000000 * ( |0|\-0|\-)\.0000000000 * ( |0)\.054453" $log | wc -l`
CRIT4=`$GREP " F * ( |0|\-0|\-)\.0000000000 * ( |0|\-0|\-)\.0000000000 * ( \-|\-0)\.054453" $log | wc -l`
CRIT5=`$GREP "Energy at this geometry is * : * -100\.220126" $log | wc -l`
CRIT6=`$GREP "Norm of gradient * : * ( |0)\.077009" $log | wc -l`
CRIT7=`$GREP "Norm of step * : * ( |0)\.081086" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7` 
CTRL[1]=9
ERROR[1]="INITIAL ITERATION IS ALLREADY NOT CORRECT"


# SCF, MP2 and CCSD energies of 1 iteration:
CRIT1=`$GREP "Final * HF energy: *-100\.01858250" $log | wc -l`
CRIT3=`$GREP "Total MP2   energy: *-100\.22301642" $log | wc -l`
CRIT4=`$GREP " H * ( |0|\-0|-)\.0000000000 * ( |0|\-0|\-)\.0000000000 * ( |0)\.014716" $log | wc -l`
CRIT5=`$GREP " F * ( |0|\-0|\-)\.0000000000 * ( |0|\-0|\-)\.0000000000 * ( \-|\-0)\.014716" $log | wc -l`
CRIT6=`$GREP "Energy at this geometry is * : * -100\.223016" $log | wc -l`
CRIT7=`$GREP "Norm of gradient * : * ( |0)\.020812" $log | wc -l`
CRIT8=`$GREP "Norm of step * : * ( |0)\.030029" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8` 
CTRL[2]=9
ERROR[2]="FIRST ITERATION IS ALLREADY NOT CORRECT"


# SCF, MP2 and CCSD energies of 2 iteration:
CRIT1=`$GREP "Final * HF energy: *-100\.01943291" $log | wc -l`
CRIT3=`$GREP "Total MP2   energy: *-100\.22318964" $log | wc -l`
CRIT4=`$GREP " H * ( |0|\-0|\-)\.0000000000 * ( |0|\-0|\-)\.0000000000 * ( \-|\-0)\.003535" $log | wc -l`
CRIT5=`$GREP " F * ( |0|\-0|\-)\.0000000000 * ( |0|\-0|\-)\.0000000000 * ( |0)\.003535" $log | wc -l`
CRIT6=`$GREP "Energy at this geometry is * : * -100\.223190" $log | wc -l`
CRIT7=`$GREP "Norm of gradient * : * ( |0)\.005000" $log | wc -l`
CRIT8=`$GREP "Norm of step * : * ( |0)\.00581[5-8]" $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8` 
CTRL[3]=9
ERROR[3]="SECOND ITERATION IS NOT CORRECT"

# Final summary:
CRIT1=`$GREP " H * ( |0)\.0000000000 * ( |0)\.0000000000 * 1\.60280[23]" $log | wc -l`
CRIT2=`$GREP " F * ( |0)\.0000000000 * ( |0)\.0000000000 * ( \-|\-0)\.134513" $log | wc -l`
CRIT3=`$GREP "Geometry converged in * 5 *iterations!" $log | wc -l`
CRIT4=`$GREP "Energy at final geometry is * : *-100\.223199 a.u." $log | wc -l`
TEST[4]=`expr $CRIT1 \+ $CRIT2 + $CRIT3 \+ $CRIT4` 
CTRL[4]=10
ERROR[4]="FINAL SUMMARY IS NOT CORRECT"


PASSED=1
for i in 1 2 3 4
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi
