#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Potential readin
#
CRIT1=`$GREP "Number of classical sites: * 10" $log | wc -l`
CRIT2=`$GREP "Multipole moments upto 3rd order." $log | wc -l`
CRIT3=`$GREP "Dipole-dipole polarizabilities." $log | wc -l`
CRIT4=`$GREP "Many-body interactions will be neglected" $log | wc -l`
CRIT5=`$GREP "Direct solver for induced moments will be used." $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 `
CTRL[1]=5
ERROR[1]="INCORRECT POTENTIAL"

#
# Energies
#
CRIT1=`$GREP "Monopoles * \-0*\.015407......" $log | wc -l`
CRIT2=`$GREP "Dipoles * 0*\.004184......" $log | wc -l`
CRIT3=`$GREP "Quadrupoles * \-0*\.004910......" $log | wc -l`
CRIT4=`$GREP "Octopoles * \-0*\.002292......" $log | wc -l`
CRIT5=`$GREP "Electronic * \-0*\.044340......" $log | wc -l`
CRIT6=`$GREP "Nuclear * 0*\.043425......" $log | wc -l`
CRIT7=`$GREP "Multipole * 0*\.000132......" $log | wc -l`
CRIT8=`$GREP "Total PE energy: * \-0*\.019208......" $log | wc -l`
CRIT9=`$GREP "Final HF energy: * \-188\.317408......" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9 `
CTRL[2]=9
ERROR[2]="ENERGY CONTRIBUTIONS NOT CORRECT"

#
# Induced dipole moments in environment
#
 CRIT1=`$GREP "  1 * 0*\.005001.. * 0*\.010434.. * 0*\.000004.." $log | wc -l`
 CRIT2=`$GREP "  2 * 0*\.013144.. * 0*\.007084.. * 0*\.000007.." $log | wc -l`
 CRIT3=`$GREP "  3 * 0*\.001523.. * 0*\.000413.. * 0*\.000000.." $log | wc -l`
 CRIT4=`$GREP "  4 * 0*\.035302.. * 0*\.024697.. * 0*\.000026.." $log | wc -l`
 CRIT5=`$GREP "  5 * 0*\.002414.. * \-0*\.000391.. * \-0*\.000001.." $log | wc -l`
 CRIT6=`$GREP "  6 * \-0*\.013908.. * 0*\.004189.. * 0*\.000003.." $log | wc -l`
 CRIT7=`$GREP "  7 * \-0*\.014953.. * \-0*\.006800.. * 0*\.000000.." $log | wc -l`
 CRIT8=`$GREP "  8 * \-0*\.001416.. * \-0*\.000791.. * \-0*\.000004.." $log | wc -l`
 CRIT9=`$GREP "  9 * \-0*\.044463.. * \-0*\.014073.. * 0*\.000008.." $log | wc -l`
CRIT10=`$GREP " 10 * \-0*\.002380.. * \-0*\.000434.. * \-0*\.000009.." $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9 \+ $CRIT10 `
CTRL[3]=10
ERROR[3]="INDUCED DIPOLE MOMENTS NOT CORRECT"

PASSED=1
for i in 1 2 3
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi
