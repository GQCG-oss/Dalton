#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Potential readin test
#
CRIT1=`$GREP "Number of classical sites: * 10" $log | wc -l`
CRIT2=`$GREP "Multipole moments upto 3rd order." $log | wc -l`
CRIT3=`$GREP "Dipole-dipole polarizabilities." $log | wc -l`
CRIT4=`$GREP "Iterative solver for induced moments" $log | wc -l`
CRIT5=`$GREP "convergence threshold: 1.0E-08" $log | wc -l`
CRIT6=`$GREP "Interactions between particles in the core region and inducible moments" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6`
CTRL[1]=6
ERROR[1]="INCORRECT POTENTIAL"

#
# Energy tests
#
CRIT1=`$GREP "Monopoles * \-0*\.0153897....." $log | wc -l`
CRIT2=`$GREP "Dipoles * 0*\.0041806....." $log | wc -l`
CRIT3=`$GREP "Quadrupoles * \-0*\.0049045....." $log | wc -l`
CRIT4=`$GREP "Octopoles * \-0*\.0022915....." $log | wc -l`
CRIT5=`$GREP "Electronic * \-0*\.039440[67]....." $log | wc -l`
CRIT6=`$GREP "Nuclear * 0*\.038623[89]....." $log | wc -l`
CRIT7=`$GREP "Multipole * 0*\.0001230....." $log | wc -l`
CRIT8=`$GREP "Total PE energy: * \-0*\.0190990....." $log | wc -l`
CRIT9=`$GREP "Final HF energy: * \-188\.3173217....." $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9 `
CTRL[2]=9
ERROR[2]="PE-HF ENERGY CONTRIBUTIONS NOT CORRECT"

PASSED=1
for i in 1 2
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi
