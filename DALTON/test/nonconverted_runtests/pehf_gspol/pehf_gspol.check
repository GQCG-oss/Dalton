#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Potential readin test
#
CRIT1=`$GREP "Number of classical sites: * 10" $log | wc -l`
CRIT2=`$GREP "Multipole moments upto 3rd order." $log | wc -l`
CRIT3=`$GREP "Dipole-dipole polarizabilities." $log | wc -l`
CRIT4=`$GREP "Iterative solver for induced moments" $log | wc -l`
CRIT5=`$GREP "convergence threshold: 1.0E-08" $log | wc -l`
CRIT6=`$GREP "Dynamic response from environment will be neglected" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 `
CTRL[1]=6
ERROR[1]="INCORRECT POTENTIAL"

#
# Energies
#
CRIT1=`$GREP "Monopoles * \-0*\.015401......" $log | wc -l`
CRIT2=`$GREP "Dipoles * 0*\.004183......" $log | wc -l`
CRIT3=`$GREP "Quadrupoles * \-0*\.004908......" $log | wc -l`
CRIT4=`$GREP "Octopoles * \-0*\.002292......" $log | wc -l`
CRIT5=`$GREP "Electronic * \-0*\.043153......" $log | wc -l`
CRIT6=`$GREP "Nuclear * 0*\.042259......" $log | wc -l`
CRIT7=`$GREP "Multipole * 0*\.000129......" $log | wc -l`
CRIT8=`$GREP "Total PE energy: * \-0*\.019184......" $log | wc -l`
CRIT9=`$GREP "Final HF energy: * \-188\.317391......" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9 `
CTRL[2]=9
ERROR[2]="ENERGY CONTRIBUTIONS NOT CORRECT"

#
# dipole moment of acrolein
#
CRIT1=`$GREP "x * 0*\.52015..." $log | wc -l`
CRIT2=`$GREP "y * \-0*\.9324(7|8)..." $log | wc -l`
CRIT3=`$GREP "z * \-0*\.00004..." $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[3]=3
ERROR[3]="DIPOLE MOMENT NOT CORRECT"

#
# Test of excitation energies and oscillator strengths
#
CRIT1=`$GREP " * 1 * 1 *  4\.2522.. * 0*\.00.. * 0*\.00.." $log | wc -l`
CRIT2=`$GREP " * 1 * 2 *  8\.4276.. * 0*\.22.. * 0*\.68.." $log | wc -l`
CRIT3=`$GREP " * 1 * 3 *  8\.7627.. * 0*\.02.. * 0*\.00.." $log | wc -l`
CRIT4=`$GREP " * 1 * 4 * 10\.3594.. * 0*\.00.. * 0*\.00.." $log | wc -l`
TEST[4]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 `
CTRL[4]=4
ERROR[4]="EXCITATION ENERGIES NOT CORRECT"

PASSED=1
for i in 1 2 3 4
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi
