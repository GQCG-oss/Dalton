#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Potential readin
#
CRIT1=`$GREP "Number of classical sites: * 6" $log | wc -l`
CRIT2=`$GREP "Multipole moments upto 2nd order." $log | wc -l`
CRIT3=`$GREP "Dipole-dipole polarizabilities." $log | wc -l`
CRIT4=`$GREP "Iterative solver for induced moments will be used" $log | wc -l`
CRIT5=`$GREP "with convergence threshold: 1\.0E\-08" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 `
CTRL[1]=5
ERROR[1]="INCORRECT POTENTIAL"

#
# Energies
#
CRIT1=`$GREP "Monopoles * \-0*\.004099......" $log | wc -l`
CRIT2=`$GREP "Dipoles * \-0*\.000603......" $log | wc -l`
CRIT3=`$GREP "Quadrupoles * 0*\.002062......" $log | wc -l`
CRIT4=`$GREP "Electronic * 0*\.10723[45]......" $log | wc -l`
CRIT5=`$GREP "Nuclear * \-0*\.115487......" $log | wc -l`
CRIT6=`$GREP "Multipole * \-0*\.004264......" $log | wc -l`
CRIT7=`$GREP "Total PE energy: * \-0*\.015157......" $log | wc -l`
CRIT8=`$GREP "Final HF energy: * \-112\.092713......" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 `
CTRL[2]=8
ERROR[2]="ENERGY CONTRIBUTIONS NOT CORRECT"

#
# Induced dipole moments in environment
#
CRIT1=`$GREP "  1 * 0*\.01015... * 0*\.20477... * \-0*\.01183..." $log | wc -l`
CRIT2=`$GREP "  2 * 0*\.05684... * 0*\.06753... * \-0*\.01669..." $log | wc -l`
CRIT3=`$GREP "  3 * 0*\.01151... * 0*\.05669... * 0*\.04021..." $log | wc -l`
CRIT4=`$GREP "  4 * 0*\.17140... * 0*\.04844... * \-0*\.01443..." $log | wc -l`
CRIT5=`$GREP "  5 * 0*\.02820... * 0*\.16195... * \-0*\.00352..." $log | wc -l`
CRIT6=`$GREP "  6 * 0*\.04501... * \-0*\.00075... * 0*\.01257..." $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 `
CTRL[3]=6
ERROR[3]="INDUCED DIPOLE MOMENTS NOT CORRECT"

#
# dipole moment of formaldehyde
#
CRIT1=`$GREP "x * 0*\.11513..." $log | wc -l`
CRIT2=`$GREP "y * \-1\.28598..." $log | wc -l`
CRIT3=`$GREP "z * 0*\.03951..." $log | wc -l`
TEST[4]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[4]=3
ERROR[4]="DIPOLE MOMENT NOT CORRECT"

#
# frequency independent polarizability
#
CRIT1=`$GREP "Ex *  6\.4283.. * \-0*\.1580... * 3\.84.....E\-02" $log | wc -l`
CRIT2=`$GREP "Ey * \-0*\.1580... * 9\.4956.. * \-0*\.2177..." $log | wc -l`
CRIT3=`$GREP "Ez * 3\.84.....E\-02 * \-0*\.2177... * 2\.5700.." $log | wc -l`
TEST[5]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[5]=3
ERROR[5]="FREQUENCY INDEPENDENT POLARIZABILITY NOT CORRECT"

#
# frequency dependent polarizability
#
CRIT1=`$GREP "Ex * 6\.4535.. * \-0*\.1585... *   3\.86.....E\-02" $log | wc -l`
CRIT2=`$GREP "Ey * \-0*\.1585... *   9\.5309.. * \-0*\.2186..." $log | wc -l`
CRIT3=`$GREP "Ez * 3\.86.....E\-02 * \-0*\.218[56]... * 2\.5788.." $log | wc -l`
TEST[6]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[6]=3
ERROR[6]="FREQUENCY DEPENDENT POLARIZABILITY NOT CORRECT"

PASSED=1
for i in 1 2 3 4 5 6
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi
