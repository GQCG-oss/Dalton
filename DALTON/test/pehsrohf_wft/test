#!/usr/bin/env python

import os
import sys

sys.path.append(os.path.join(os.path.dirname(__file__), '..'))
from runtest_dalton import Filter, TestRun

test = TestRun(__file__, sys.argv)

f = Filter()
#f.add(string = 'Number of classical sites:')
f.add(string = 'Multipole moments upto 2nd order.')
f.add(string = 'Dipole-dipole polarizabilities.')
f.add(string = 'Iterative solver for induced moments will be used')
#f.add(string = 'with convergence threshold:',
#      rel_tolerance = 1.0e-8)

f.add(from_string = 'Polarizable embedding energy contributions:',
      num_lines = 15,
      abs_tolerance = 1.0e-5)

f.add(from_string = 'Polarizable embedding information',
      num_lines = 16,
      abs_tolerance = 1.0e-6)

f.add(from_string = 'Dipole moment components',
      num_lines = 9,
      mask = [3],
      abs_tolerance = 1.0e-5)

test.run(['pehsrohf_wft.dal'], ['pehsrohf_wft.mol'], {'out': f}, args='-put POTENTIAL.INP')

sys.exit(test.return_code)
