#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Potential readin
#
CRIT1=`$GREP "Number of classical sites: * 6" $log | wc -l`
CRIT2=`$GREP "Multipole moments upto 2nd order." $log | wc -l`
CRIT3=`$GREP "Dipole-dipole polarizabilities." $log | wc -l`
CRIT4=`$GREP "Iterative solver for induced moments will be used" $log | wc -l`
CRIT5=`$GREP "with convergence threshold: 1\.0E\-08" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 `
CTRL[1]=5
ERROR[1]="INCORRECT POTENTIAL"

#
# Energies
#
CRIT1=`$GREP "Monopoles   * \-0*\.00499(89|90)....." $log | wc -l`
CRIT2=`$GREP "Dipoles     *   0*\.001184[78]....." $log | wc -l`
CRIT3=`$GREP "Quadrupoles * \-0*\.001767[78]....." $log | wc -l`
CRIT4=`$GREP "Electronic  * \-0*\.01723[01]......" $log | wc -l`
CRIT5=`$GREP "Nuclear     *   0*\.016434[5-9]....." $log | wc -l`
CRIT6=`$GREP "Multipole   * \-0*\.0044812....." $log | wc -l`
CRIT7=`$GREP "Total PE energy: *  \-0*\.010859[56]....." $log | wc -l`
CRIT8=`$GREP "Final HF energy: * \-112\.2875293....." $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 `
CTRL[2]=8
ERROR[2]="ENERGY CONTRIBUTIONS NOT CORRECT"

#
# Induced dipole moments in environment
#
CRIT1=`$GREP "1 * \-0*\.086353.. * 0*\.133806.. * \-0*\.006226.." $log | wc -l`
CRIT2=`$GREP "2 * \-0*\.06285[89].. * 0*\.011291.. * \-0*\.00296[67].." $log | wc -l`
CRIT3=`$GREP "3 * \-0*\.005140.. * 0*\.026227.. *   0*\.017853.." $log | wc -l`
CRIT4=`$GREP "4 *   0*\.032913.. * 0*\.064224.. * \-0*\.006332.." $log | wc -l`
CRIT5=`$GREP "5 * \-0*\.005124.. * 0*\.151178.. *   0*\.005064.." $log | wc -l`
CRIT6=`$GREP "6 * \-0*\.00096[89].. * 0*\.008300.. * \-0*\.007212.." $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 `
CTRL[3]=6
ERROR[3]="INDUCED DIPOLE MOMENTS NOT CORRECT"

#
# dipole moment of formaldehyde
#
CRIT1=`$GREP "x *   0*\.05261" $log | wc -l`
CRIT2=`$GREP "y * \-0*\.42985" $log | wc -l`
CRIT3=`$GREP "z *   0*\.01236" $log | wc -l`
TEST[4]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[4]=3
ERROR[4]="DIPOLE MOMENT NOT CORRECT"

PASSED=1
for i in 1 2 3 4
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi
