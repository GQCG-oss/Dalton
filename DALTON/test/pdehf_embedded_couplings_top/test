#!/usr/bin/env python

import os
import sys

sys.path.append(os.path.join(os.path.dirname(__file__), '..'))
from runtest_dalton import Filter, TestRun

test = TestRun(__file__, sys.argv)

f = Filter()

f.add(from_string = 'Excited state couplings',
      num_lines = 4,
      ignore_sign = True,
      rel_tolerance = 1.0e-4)

test.run(['fd-1.dal'], ['top.mol'], ['top.pot'], args='-put "core.dat" -get "pe_density_1.bin"')

os.rename('fd-1_top_top.pe_density_1.bin', 'pe_density.bin')

test.run(['fd-2.dal'], ['step_02.mol'], ['top.pot'], args='-put "pe_density.bin" -get "pe_fock.bin"')

os.rename('fd-2_step_02_top.pe_fock.bin', 'pe_fock_1.bin')

test.run(['fd-3.dal'], ['bottom.mol'], ['bot.pot'], f={'out': f}, args='-put "pe_fock_1.bin"')

sys.exit(test.return_code)
