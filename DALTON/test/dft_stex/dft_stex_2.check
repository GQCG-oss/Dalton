#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# ?
CRIT1=`$GREP "Spin multiplicity\: * 2" $log | wc -l`
CRIT2=`$GREP "Spatial symmetry\: * 1" $log | wc -l`
CRIT3=`$GREP "Total charge of molecule\: * 1" $log | wc -l`
TEST[1]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[1]=3
ERROR[1]="SPIN MULTIPLICITY, SYMMETRY AND/OR TOTAL CHARGE NOT CORRECT"

# ?
CRIT1=`$GREP "Final DFT energy\: * \-491\.62797422[0-9][0-9][0-9][0-9]" $log | wc -l`
TEST[2]=`expr	$CRIT1`
CTRL[2]=1
ERROR[2]="FINAL DFT ENERGY NOT CORRECT"

PASSED=1
for i in 1 2
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
      echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} );"
      PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
   echo TEST ENDED PROPERLY
   exit 0
else
   echo THERE IS A PROBLEM
   exit 1
fi
