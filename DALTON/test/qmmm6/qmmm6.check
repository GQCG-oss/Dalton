#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# General and Energy Tests 
#
CRIT1=`$GREP "Anisotropic polarization" $log | wc -l`
CRIT2=`$GREP 'QM/MM "QMMM" calculation converged' $log | wc -l`
CRIT3=`$GREP "Final DFT energy: * \-114\.470427" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[1]=3
ERROR[1]="GENERAL QMMM or QMMM ENERGY CONTRIBUTIONS NOT CORRECT"

#
# Test of QMMM freq. dep. hyper polarizability
#

 CRIT1=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(X\;X\,X\) \=   *  4\.1752[0-9][0-9][0-9][0-9]" $log | wc -l`
 CRIT2=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(Y\;X\,X\) \=   *   57\.2211[0-9[0-9][0-9][0-9]" $log | wc -l`
 CRIT3=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(Z\;X\,X\) \=   *   \-1\.7579[0-9][0-9][0-9][0-9]" $log | wc -l`
 CRIT4=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(X\;Y\,X\) \=   *   57\.8513[0-9][0-9][0-9][0-9]" $log | wc -l`
 CRIT5=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(Y\;Y\,X\) \=   *   10\.3190[0-9][0-9][0-9][0-9]" $log | wc -l`
 CRIT6=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(Z\;Y\,X\) \=   *   ( |0)\.1272[0-9][0-9][0-9][0-9]" $log | wc -l`
 CRIT7=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(X\;Z\,X\) \=   *   \-1\.7783[0-9][0-9][0-9][0-9]" $log | wc -l`
 CRIT8=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(Y\;Z\,X\) \=   *   ( |0)\.1215[0-9][0-9][0-9][0-9]" $log | wc -l`
 CRIT9=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(Z\;Z\,X\) \=   *   ( \-|\-0)\.5252[0-9][0-9][0-9][0-9]" $log | wc -l`
CRIT10=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(X\;X\,Y\) \= beta\(X\,Y\,X\)" $log | wc -l`
CRIT11=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(Y\;X\,Y\) \= beta\(Y\,Y\,X\)" $log | wc -l`
CRIT12=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(Z\;X\,Y\) \= beta\(Z\,Y\,X\)" $log | wc -l`
CRIT13=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(X\;Y\,Y\) \=    *  10\.3859[0-9][0-9][0-9][0-9]" $log | wc -l`
CRIT14=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(Y\;Y\,Y\) \=    *  46\.6410[0-9][0-9][0-9][0-9]" $log | wc -l`
CRIT15=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(Z\;Y\,Y\) \=    *  \-1\.1199[0-9][0-9][0-9][0-9]" $log | wc -l`
CRIT16=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(X\;Z\,Y\) \=    *  ( |0)\.1257[0-9][0-9][0-9][0-9]" $log | wc -l`
CRIT17=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(Y\;Z\,Y\) \=    *  \-1\.1159[0-9][0-9][0-9][0-9]" $log | wc -l`
CRIT18=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(Z\;Z\,Y\) \=    *  4\.3499[0-9][0-9][0-9][0-9]" $log | wc -l`
CRIT19=`$GREP "\@ B-freq \= ( |0)\.040000 * C-freq \= ( |0)\.040000  *   beta\(X\;X\,Z\) \= beta\(X\,Z\,X\)" $log | wc -l`
