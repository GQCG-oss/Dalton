#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > cc2_r12_aux_bh_sym.info <<'%EOF%'
   cc2_r12_aux_bh_sym
   -----------
   Molecule:         BH 
   Wave Function:    CC2-R12/A1/A / aug-cc-pVDZ + spdf-Auxbasis
   Test Purpose:     Check CC2-R12/A1/A method with auxiliary basis 
                     and symmetry
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > cc2_r12_aux_bh_sym.mol <<'%EOF%'
#
INTGRL
BH
aug-cc-pVDZ + spdf-Auxbasis
    4  0 2  X  Y      0.10D-14
