#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > cc2_r12_aux_ch4_cbs2a.info <<'%EOF%'
   cc2_r12_aux_ch4_cbs2a
   -----------
   Molecule:         Methane (CH4)
   Wave Function:    CC2-R12 / 6-311G**
   Test Purpose:     Check CABS for CC2-R12 / Ansatz 2 
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > cc2_r12_aux_ch4_cbs2a.mol <<'%EOF%'
# > BASIS                                                                       
# > 6-311G** 6-311++G(3df,3pd)                                                  
INTGRL
CH4: CC2-R12/Ansatz2 excitation energies using symmetry                         
                                                                                
    4  0 2 XY XZ      0.10D-14
 1      6.    1    3    1    1    1
C        0.0000000000000     0.0000000000000     0.0000000000000
H  11    4
     4563.2400000000        0.0019666500        0.0000000000        0.0000000000
                            0.0000000000
      682.0240000000        0.0152306000        0.0000000000        0.0000000000
                            0.0000000000
      154.9730000000        0.0761269000        0.0000000000        0.0000000000
                            0.0000000000
       44.4553000000        0.2608010000        0.0000000000        0.0000000000
                            0.0000000000
       13.0290000000        0.6164620000        0.0000000000        0.0000000000
                            0.0000000000
        1.8277300000        0.2210060000        0.0000000000        0.0000000000
                            0.0000000000
       20.9642000000        0.0000000000        0.1146600000        0.0000000000
                            0.0000000000
        4.8033100000        0.0000000000        0.9199990000        0.0000000000
                            0.0000000000
        1.4593300000        0.0000000000       -0.0030306800        0.0000000000
                            0.0000000000
        0.4834560000        0.0000000000        0.0000000000        1.0000000000
                            0.0000000000
        0.1455850000        0.0000000000        0.0000000000        0.0000000000
                            1.0000000000
H   5    3
       20.9642000000        0.0402487000        0.0000000000        0.0000000000
        4.8033100000        0.2375940000        0.0000000000        0.0000000000
        1.4593300000        0.8158540000        0.0000000000        0.0000000000
        0.4834560000        0.0000000000        1.0000000000        0.0000000000
        0.1455850000        0.0000000000        0.0000000000        1.0000000000
H   1    1
        0.6260000000        1.0000000000
 1      1.    1    2    1    1
H        1.2767310000000     1.2767310000000     1.2767310000000
H   5    3
       33.8650000000        0.0254938000        0.0000000000        0.0000000000
        5.0947900000        0.1903730000        0.0000000000        0.0000000000
        1.1587900000        0.8521610000        0.0000000000        0.0000000000
        0.3258400000        0.0000000000        1.0000000000        0.0000000000
        0.1027410000        0.0000000000        0.0000000000        1.0000000000
H   1    1
        0.7500000000        1.0000000000
 2      0.    1    4    1    1    1    1
C        0.0000000000000     0.0000000000000     0.0000000000000
H   1    0
        0.0438000000
H   1    0
        0.0438000000
H   2    0
        2.5040000000
        0.1565000000
H   1    0
        0.8000000000
 2      0.    1    3    1    1    1
H        1.2767310000000     1.2767310000000     1.2767310000000
H   1    0
        0.0360000000
H   2    0
        3.0000000000
        0.1875000000
H   1    0
        1.0000000000
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > cc2_r12_aux_ch4_cbs2a.dal <<'%EOF%'
**DALTON INPUT
.RUN WAVE FUNCTION
*MOLBAS
.R12AUX
**INTEGRALS
.R12
**WAVE FUNCTION
.CC
*ORBITAL INPUT
.NOSUPSYM
.MOSTART
 H1DIAG
*SCF IN
.THRESH
 1.0D-10
*CC INPUT
.CC2
.PRINT
 5
.FREEZE
 1 0
.THRENR
 1.0D-10
.THRLEQ
 1.0D-08
.MAX IT
 100
*CCEXCI
.THREXC
 1.0D-08
.NCCEXCI
 3 3 3 3 
*R12 INPUT
.NO HYB
.CC2
 2B
.CABS
**END OF DALTON INPUT
%EOF%

#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >cc2_r12_aux_ch4_cbs2a.check
cat >>cc2_r12_aux_ch4_cbs2a.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi   


#           Total SCF   energy:                   -40.1917720926
#           Total MP2-R12/B energy:               -40.3935426249                
#           Total CC2-R12/B energy:               -40.3947503990                
#                                                                               
#                                                                               
#+=============================================================================+
#|  sym. | Exci.  |        CC2-R12/B  Excitation energies            | ||T1||  |
#|(spin, |        +------------------------------------------------------------+
#| spat) |        |     Hartree    |       eV.      |     cm-1       |    %    |
#+=============================================================================+
#| ^1A   |    1   |     0.4905731  |      13.34917  |    107668.354  |  97.34  |
#| ^1A   |    2   |     0.4905731  |      13.34917  |    107668.354  |  97.34  |
#| ^1A   |    3   |     0.5420474  |      14.74986  |    118965.642  |  97.11  |
#+-----------------------------------------------------------------------------+
#| ^1B2  |    1   |     0.4168620  |      11.34339  |     91490.635  |  97.03  |
#| ^1B2  |    2   |     0.4819929  |      13.11569  |    105785.207  |  96.99  |
#| ^1B2  |    3   |     0.4906854  |      13.35223  |    107692.998  |  97.16  |
#+-----------------------------------------------------------------------------+
#| ^1B1  |    1   |     0.4168620  |      11.34339  |     91490.635  |  97.03  |
#| ^1B1  |    2   |     0.4819929  |      13.11569  |    105785.207  |  96.99  |
#| ^1B1  |    3   |     0.4906854  |      13.35223  |    107692.998  |  97.16  |
#+-----------------------------------------------------------------------------+
#| ^1B3  |    1   |     0.4168620  |      11.34339  |     91490.635  |  97.03  |
#| ^1B3  |    2   |     0.4819929  |      13.11569  |    105785.207  |  96.99  |
#| ^1B3  |    3   |     0.4906854  |      13.35223  |    107692.998  |  97.16  |
#+=============================================================================+

#
CRIT1=`$GREP "Total MP2-R12/B energy: *\-40\.393542624" $log | wc -l`
TEST[1]=`expr	$CRIT1`
CTRL[1]=2
ERROR[1]="MP2-R12/B ENERGY NOT CORRECT"
CRIT2=`$GREP "Total CC2-R12/B energy: *\-40\.394750399" $log | wc -l`
TEST[2]=`expr	$CRIT1`
CTRL[2]=2
ERROR[2]="CC2-R12/B ENERGY NOT CORRECT"
CRIT3=`$GREP "\^1A .* 13\.34917" $log | wc -l`
CRIT4=`$GREP "\^1A .* 14\.74986" $log | wc -l` 
TEST[3]=`expr   $CRIT3 \+ $CRIT4`
CTRL[3]=3
ERROR[3]="CC2-R12 Sym. A EXCITATION ENERGIES NOT CORRECT"
CRIT5=`$GREP "\^1B[123] .* 11\.34339" $log | wc -l`
CRIT6=`$GREP "\^1B[123] .* 13\.11569" $log | wc -l`
CRIT7=`$GREP "\^1B[123] .* 13\.35223" $log | wc -l`
TEST[4]=`expr   $CRIT5 \+ $CRIT6 \+ $CRIT7`
CTRL[4]=9
ERROR[4]="CC2-R12 Sym. B EXCITATION ENERGIES NOT CORRECT"

PASSED=1
for i in 1 2 3 4
do 
   if [ ${TEST[i]} -lt ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

%EOF%
#######################################################################
