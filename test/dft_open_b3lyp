#!/bin/sh

. ./functions || { echo "Current dir is not the test dir" ; exit 1; }

info="
   dft_open_b3lyp
   ------------------
   Molecule:         BeH
   Wave Functions:   Open-shell DFT B3LYP / AhlrichsVTZ
   Test Purpose:     Open-shell DFT B3LYP properties test w/o symmetry.
"

molecule="BASIS
Ahlrichs-VTZ
BeH AhlrichsVDZ
--------
    2    0
        4.    1
Be   .0000     .0000     .0000
        1.    1
H1    1.41421356237309504880 1.41421356237309504880    .0000
"

dalton="**DALTON INPUT
.RUN PROPERTIES
.DIRECT
**WAVE FUNCTIONS
.DFT
 B3LYP
*SCF INPUT
.THRESHOLD
1e-10
**END OF DALTON INPUT
"

test="
check_scf_energy DFT -15.119459498670 1e-6
check_dipole    0.450738 5e-6
check_dip_components -0.81010427 -0.81010427 0 1e-6
"

check_gen_input "$0" "$info" "$molecule" "$dalton" "$test"

