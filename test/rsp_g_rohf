#!/bin/sh

. functions || { echo "current dir is not the test dir" ; exit 1; }

info="
   rsp_g_rohf
   ------------------
   Molecule:         CH3
   Wave Functions:   ROHF/STO-3G
   Test Purpose:     Paramagnetic g-tensor
"

molecule="ATOMBASIS
STO-3G
------
    2   1 Z
        6.    1 Basis=STO-3G
C1      0.0006122714    0.0000000000    0.0000000000   
        1.    2 Basis=STO-3G
H1      1.5162556382   -1.3708721537    0.0000000000
H2     -0.7584339548    0.6854360769    1.7695110698
"

dalton="**DALTON INPUT
.RUN RESPONSE
**INTEGRAL
.ANGMOM
.SPIN-ORBIT
**WAVE FUNCTIONS
.HF
*SCF INPUT
.THRESHOLD
1e-12
**RESPONSE
*ESR
#.PRINT
# 200
.G-TENSOR
.OZSO1
.OZSO2
.ADD-SO
#.ECC
**END OF DALTON INPUT
"

test="
check_scf_energy HF -39.072083833207 1e-12
check_general_lr ZANGMOM 'Z.SPNORB' 1.092358543605E-04 1e-9
check_general_lr XANGMOM 'X.SPNORB' 7.058134021302E-05 1e-9
check_general_lr YANGMOM 'Y.SPNORB' 6.193063314014E-05 1e-9
"

check_gen_input "$0" "$info" "$molecule" "$dalton" "$test"
