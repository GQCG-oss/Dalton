#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > aba_prop_file.info <<'%EOF%'
   aba_prop_file
   -----------
   Molecule:         CH2O
   Wave Function:    HF / STO-3G  
   Test Purpose:     Test if correct write to DALTON.PROP from ABACUS
%EOF%
#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > aba_prop_file.mol <<'%EOF%'
ATOMBASIS
CH2O
------------------------
    3              1 1.00D-12
        6.0   1    Basis=STO-3G
C           -1.588367    -.770650     .029109
        8.0   1    Basis=STO-3G
O           -1.657083     .436069    -.009750
        1.0   2    Basis=STO-3G
H           -.620668   -1.294822      .054251
H           -2.508043   -1.382001     .040282
%EOF%
#######################################################################
#  DALTON INPUT
#######################################################################
cat > aba_prop_file.dal <<'%EOF%'
**DALTON
.RUN PROPERTIES
**WAVE FUNCTIONS
.HF
*SCF INPUT
.THRESH
1.0D-12
.PRINT
 3
**PROPERTIES
.EXCITA
*EXCITA
.NEXCIT
 2
.THRESH
1.0D-9
**END OF
%EOF%
#
#######################################################################
#  CHECK SCRIPT
#######################################################################
#
echo $CHECK_SHELL >aba_prop_file.check
cat >>aba_prop_file.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi
#
# Test of energy
#
CRIT1=`$GREP "#  1 1 ENERGY   Ground state Energy =    * \-112\.353697509" $log | wc -l`
TEST[1]=`expr $CRIT1 `
CTRL[1]=1
ERROR[1]="ENERGY NOT CORRECTLY WRITTEN TO PROPERTY FILE"

#
# Test of HF dipole moment
#
CRIT1=`$GREP "#  2 1 * <XDIPLEN > =  *   0*\.0045079" $log | wc -l`
CRIT2=`$GREP "#  3 1 * <YDIPLEN > =  *   0*\.0000399" $log | wc -l`
CRIT3=`$GREP "#  4 1 * <ZDIPLEN > =  * \-0*\.5980637" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[2]=3
ERROR[2]="HF DIPOLE MOMENT NOT CORRECTLY WRITTEN TO PROPERTY FILE"

#
# Test of excitation energies
#
CRIT1=`$GREP " #  5 1 Sy: 1 Sp: 1 Exc:  1 E_tot:      0.0000000000 w:      0.152526" $log | wc -l`
CRIT2=`$GREP " #  6 1 Sy: 1 Sp: 1 Exc:  2 E_tot:      0.0000000000 w:      0.336256" $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 `
CTRL[3]=2
ERROR[3]="HF EXCITATION ENERGIES NOT CORRECTLY WRITTEN TO PROPERTY FILE"

PASSED=1 
for i in 1 2 
do
   if [ ${TEST[i]} -lt ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi                
%EOF%
chmod +x aba_prop_file.check
#######################################################################
