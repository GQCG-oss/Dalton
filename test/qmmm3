#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > qmmm3.info <<'%EOF%'
   qmmm3
   -----------
   Molecule:         CH2O(HF)/2 H2O(MM)
   Wave Function:    HF / cc-pVDZ  
   Test Purpose:     Test of QMMM nuclear magnetic shieldings and J-couplings
%EOF%
#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > qmmm3.mol <<'%EOF%'
ATOMBASIS
CH2O PLUS 2 WATERS
------------------------
AtomTypes=3 NoSymmetry Angstrom
        6.0   1    Basis=cc-pVDZ
C           -1.588367    -.770650     .029109 
        8.0   1    Basis=cc-pVDZ
O           -1.657083     .436069    -.009750 
        1.0   2    Basis=cc-pVDZ
H           -.620668   -1.294822      .054251 
H           -2.508043   -1.382001     .040282
%EOF%
#######################################################################
#  QM/MM INTERACTION INPUT
#######################################################################
cat > qmmm3.pot <<'%EOF%'
AU
6 1 2 1
1        1.8434958651        2.8482311204       -0.1560724807       -0.7390827623       -0.1307264223        0.0536972371        0.1276417760       5.4760362505       -0.0866800183       -0.0721680526        5.5822886395       -0.1240156189        5.5133007097
1        0.0438416461        2.4568253762       -0.1664149517        0.3677809440        0.2067300506        0.0345154175       -0.0151419207       3.4884652220        0.2984044533       -0.0712037833        1.7393065199       -0.3503076238        1.3605853997
1        2.1048355395        3.8558557669        1.3318373989        0.3713018183       -0.0129776857       -0.1154344939       -0.1761271065       1.1854898700        0.0516528099        0.3136952094        2.3594108855        0.7460384264        2.9489928120
2        3.0872550190       -2.3305614354       -0.1488839625       -0.7392506008        0.1045091928        0.1199578441        0.1050086222       5.5552848071        0.0859287441       -0.1208046651        5.4514069390        0.0745648410        5.5662469471
2        3.0249583076       -0.4887568752       -0.1643173557        0.3677014501       -0.0070170988       -0.2093580024       -0.0120115140       1.5094772028       -0.0367827484       -0.3663623981        3.5546245763        0.1005981894        1.5284304352
2        4.3536984454       -2.7613207262        1.0772667234        0.3715491507       -0.1493905839        0.0323104495       -0.1450960317       2.6580864234       -0.2485367227        0.7466547613        1.2237370065       -0.3566527126        2.6080864339
%EOF%
#
#######################################################################
#  DALTON INPUT
#######################################################################
cat > qmmm3.dal <<'%EOF%'
**DALTON
.RUN PROPERTIES
*QMMM
.QMMM
**WAVE FUNCTIONS
.HF
*SCF INPUT
.THRESHOLD
 1.0D-10
**PROPERTIES
.SHIELD
.SPIN-S
*LINRES
.THRESH
1.0D-5
**END OF
%EOF%
#
#######################################################################
#  CHECK SCRIPT
#######################################################################
#
echo $CHECK_SHELL >qmmm3.check
cat >>qmmm3.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Test of QMMM chemical shieldings 
#
CRIT1=`$GREP "\@1C * 4\.886" $log | wc -l`
CRIT2=`$GREP "\@1O * \-370\.543" $log | wc -l`
CRIT3=`$GREP "\@1H * 22\.468" $log | wc -l`
CRIT4=`$GREP "\@1H * 22\.599" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 `
CTRL[1]=4
ERROR[1]="QMMM CHEMICAL SHIELDINGS NOT CORRECT"

#
# Test of QMMM J-couplings
#
CRIT1=`$GREP "Isotropic coupling        :  *  222\.637" $log | wc -l`
CRIT2=`$GREP "Isotropic DSO contribution:  *  ( |0)\.583" $log | wc -l`
CRIT3=`$GREP "Isotropic PSO contribution:  *  \-1\.125" $log | wc -l`
CRIT4=`$GREP "Isotropic SD contribution :  *  ( |0)\.022" $log | wc -l`
CRIT5=`$GREP "Isotropic FC contribution :  *  223\.157" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 `
CTRL[2]=5
ERROR[2]="QMMM SPIN-SPIN COUPLING CONSTANTS NOT CORRECT"

PASSED=1 
for i in 1 2 
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi                
%EOF%
chmod +x qmmm3.check
#######################################################################
