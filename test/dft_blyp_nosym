#!/bin/sh

info='
   dft_blyp_nosym
   --------------
   Molecule:         HCN
   Wave Function:    DFT BLYP / aug-cc-pVDZ
   Test Purpose:     Check BLYP functional w/o symmetry
'

molecule='BASIS 
aug-cc-pVDZ
HCN 
aug-cc-pVDZ basis
    3    0
        1.    1    
H   0.3   0.0    -1.0 
        7.    1    
N   0.3   0.0     1.5
        6.    1    
0   0.0   0.0     0.0 
'

dalton='
**DALTON INPUT
.RUN WAVE 
**WAVE FUNCTIONS
.DFT
 BLYP
**END OF DALTON INPUT
'

test='
check_scf_energy DFT -92.114500240220 1e-10
'
. ./functions || { echo "'functions' library not found." ; exit 1; }
check_gen_input "$0" "$info" "$molecule" "$dalton" "$test"
