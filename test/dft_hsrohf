#!/bin/sh

info="
   dft_hsrohf
   ------------------
   Molecule:         CH2-
   Wave Functions:   LDA
   Test Purpose:     High spin ROHF
"

molecule="BASIS
STO-3G
H atom. DFT test.
TEST.
    2             *   
        6.   1 
C         0.000000         0.000000         0.000000
        1.   2
H        0.0000000         0.741767         0.930527
H        0.0000000        -0.741767         0.930527
  
"

dalton="**DALTON
.RUN WAVE
.DIRECT
**WAVE FUNCTION
.DFT
 LDA
*SCF INPUT
#.DFTTHR
#1e-15 1e-15 1e-15
#.RADINT
#1e-15
#.ANGINT
#41
.HF OCC
 2 0 0 0 
.HSROHF
 1 1 1 0 
*ORBITALS
.NOSUPSYM
**END OF

"

test="
check_scf_energy DFT -36.61236602628 1e-10
"

. ./functions || { echo "'functions' library not found." ; exit 1; }
check_gen_input "$0" "$info" "$molecule" "$dalton" "$test"


