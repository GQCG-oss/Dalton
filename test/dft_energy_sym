#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > dft_energy_sym.info <<'%EOF%'
   dft_energy_sym
   --------------
   Molecule:         H2O2
   Wave Function:    DFT B3LYP / 6-31G**
   Test Purpose:     DFT direct energy calculation w/symmetry
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > dft_energy_sym.mol <<'%EOF%'
BASIS                                                                   
6-31G** 
Hydrogen Peroxide                                                       
                                                                        
    2                           
        8.    2                                                         
O     0.0000000000000000  1.4078458614912979  0.0000000000000000       *
O     0.0000000000000000 -1.4078458614912979  0.0000000000000000       *
        1.    2                                                         
H     0.6908148895270996  1.7261489114716695  1.6677746753855953       *
H    -0.6908148895270996 -1.7261489114716695  1.6677746753855953       *
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > dft_energy_sym.dal <<'%EOF%'
**DALTON
.RUN WAVEFUNCTION
.DIRECT 
**WAVE FUNCTIONS
.DFT
*SCF INPUT
.B3LYP
**END OF 
%EOF%
#######################################################################

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >dft_energy_sym.check
cat >>dft_energy_sym.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# Energy                          -151.463939352995794
CRIT1=`$GREP "DFT energy *\: * \-151\.46393935...." $log | wc -l`
TEST[1]=`expr	$CRIT1`
CTRL[1]=1
ERROR[1]="DFT/B3LYP ENERGY NOT CORRECT"

PASSED=1
for i in 1 
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

%EOF%
#######################################################################
