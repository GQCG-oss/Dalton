#!/bin/sh

info='
   dft_energy_sym
   --------------
   Molecule:         H2O2
   Wave Function:    DFT HF+PZ81 / 6-31G**
   Test Purpose:     DFT direct energy calculation w/symmetry
'

molecule='BASIS
6-31G** 
Hydrogen Peroxide                                                       
                                                                        
    2                           
        8.    2                                                         
O     0.0000000000000000  1.4078458614912979  0.0000000000000000       *
O     0.0000000000000000 -1.4078458614912979  0.0000000000000000       *
        1.    2                                                         
H     0.6908148895270996  1.7261489114716695  1.6677746753855953       *
H    -0.6908148895270996 -1.7261489114716695  1.6677746753855953       *
'

dalton='**DALTON
.RUN WAVE FUNCTIONS
.DIRECT 
**WAVE FUNCTIONS
.DFT
GGAKey hf=0.5 dirac=0.5 pz81=1
**END OF 
'

test='
check_scf_energy DFT  -151.201391782221 2e-9
'                     

. ./functions || { echo "'functions' library not found." ; exit 1; }
check_gen_input "$0" "$info" "$molecule" "$dalton" "$test"
