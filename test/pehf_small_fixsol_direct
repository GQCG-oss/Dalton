#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > pehf_small_fixsol_direct.info <<'%EOF%'
   pehf_small_direct
   -----------
   Molecule:         Acrolein and two classical water molecules
   Wave Function:    PE-HF / 6-31+G*
   Test Purpose:     Test of energies, dipole moment and excitation energies through ABACUS
%EOF%
#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > pehf_small_fixsol_direct.mol <<'%EOF%'
BASIS
6-31+G*
Acrolein
------------------------
AtomTypes=3 NoSymmetry Angstrom
Charge=6.0 Atoms=3
C             -0.145335   -0.546770    0.000607
C              1.274009   -0.912471   -0.000167
C              1.630116   -2.207690   -0.000132
Charge=8.0 Atoms=1
O             -0.560104    0.608977    0.000534
Charge=1.0 Atoms=4
H             -0.871904   -1.386459    0.001253
H              2.004448   -0.101417   -0.000710
H              0.879028   -3.000685    0.000484
H              2.675323   -2.516779   -0.000673
%EOF%
#######################################################################
#  DALTON INPUT
#######################################################################
cat > pehf_small_fixsol_direct.dal <<'%EOF%'
**DALTON                                          
.RUN WAVEFUNCTION                                 
*PEQM                                             
.PEQM                                             
.FIXPVA                                           
.MAXTES                                           
 500                                              
.DIRECT                                           
.SOLVAT                                           
**WAVE FUNCTIONS                                  
.HF                                               
**END OF                                          
%EOF%
#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL > pehf_small_fixsol_direct.check
cat >> pehf_small_fixsol_direct.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Potential readin test
#
CRIT1=`$GREP "Number of surface points:  228" $log | wc -l`
CRIT2=`$GREP "Surface area FIXA   107.1030993" $log | wc -l`
CRIT3=`$GREP "Direct solver for induced moments will be used." $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[1]=3
ERROR[1]="INCORRECT POTENTIAL"
#
# Convergence test 
#
CRIT1=`$GREP "*** DIIS converged in  13 iterations" $log | wc -l`
TEST[2]=`expr $CRIT1 `
CTRL[2]=1
ERROR[2]="CONVERGENCE PROBLEM"
#
# Energy tests
#
CRIT1=`$GREP "Electronic * (|0)\.0006954" $log | wc -l`
CRIT2=`$GREP "Nuclear       * (\-|\-0)\.0149603" $log | wc -l`
CRIT3=`$GREP "Total PE energy: * (\-|\-0)\.0142648" $log | wc -l`
CRIT4=`$GREP "Final HF energy: * \-190\.7772250" $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 `
CTRL[3]=4
ERROR[3]="PE-HF ENERGY CONTRIBUTIONS NOT CORRECT"

PASSED=1 
for i in 1 2 3 
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi                
%EOF%
chmod +x pehf_small_fixsol_direct.check
#######################################################################
