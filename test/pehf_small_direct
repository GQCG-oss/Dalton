#######################################################################
#  DALTON INPUT
#######################################################################
cat > pehf_small_direct.dal <<'%EOF%'
**DALTON
.RUN PROPERTIES
*PEQM
.PEQM
.DIRECT
**WAVE FUNCTIONS
.HF
*SCF INPUT
.THRESHOLD
1.0d-8
**PROPERTIES
.EXCITA
*EXCITA
.NEXCIT
4
.DIPSTR
.THRESH
1.0D-4
**END OF
%EOF%
#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL > pehf_small_direct.check
cat >> pehf_small_direct.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Potential readin test
#
CRIT1=`$GREP "Number of classical sites: * 10" $log | wc -l`
CRIT2=`$GREP "Multipole moments upto 3rd order." $log | wc -l`
CRIT3=`$GREP "Dipole-dipole polarizabilities." $log | wc -l`
CRIT4=`$GREP "Direct solver for induced moments will be used." $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 `
CTRL[1]=4
ERROR[1]="INCORRECT POTENTIAL"
#
# Potential readin test
#
CRIT1=`$GREP "*** DIIS converged in  18 iterations" $log | wc -l`
TEST[2]=`expr $CRIT1 `
CTRL[2]=1
ERROR[2]="CONVERGENCE PROBLEM"
#
# Energy tests
#
CRIT1=`$GREP "Monopoles * (\-|\-0)\.0284746" $log | wc -l`
CRIT2=`$GREP "Dipoles * (|0)\.0069567" $log | wc -l`
CRIT3=`$GREP "Quadrupoles * (\-|\-0)\.0091398" $log | wc -l`
CRIT4=`$GREP "Octopoles * (\-|\-0)\.0026838" $log | wc -l`
CRIT5=`$GREP "Electronic * (\-|\-0)\.0873585" $log | wc -l`
CRIT6=`$GREP "Nuclear       * (|0)\.0841049" $log | wc -l`
CRIT7=`$GREP "Multipole * (|0)\.0002580" $log | wc -l`
CRIT8=`$GREP "Total PE energy: * (\-|\-0)\.0363371" $log | wc -l`
CRIT9=`$GREP "Final HF energy: * \-190\.7976383" $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9 `
CTRL[3]=9
ERROR[3]="PE-HF ENERGY CONTRIBUTIONS NOT CORRECT"

#
# dipole moment of acrolein
#
CRIT1=`$GREP "x * 1\.00264" $log | wc -l`
CRIT2=`$GREP "y * \-1\.81087" $log | wc -l`
CRIT3=`$GREP "z * (\-|\-0)\.00005" $log | wc -l`
TEST[4]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[4]=3
ERROR[4]="DIPOLE MOMENT NOT CORRECT"


#
# Test of PE-HF excitation energies
#
CRIT1=`$GREP "   1        1 * (|0)\.1893" $log | wc -l`
CRIT2=`$GREP "   1        2 * (|0)\.2410" $log | wc -l`
CRIT3=`$GREP "   1        3 * (|0)\.3104" $log | wc -l`
CRIT4=`$GREP "   1        4 * (|0)\.3230" $log | wc -l`
TEST[5]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 `
CTRL[5]=4
ERROR[5]="PE-HF EXCITATION ENERGIES NOT CORRECT"

PASSED=1 
for i in 1 2 3 4 5
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi                
%EOF%
chmod +x pehf_small_direct.check
#######################################################################
