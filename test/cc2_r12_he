#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi

#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > cc2_r12_he.info <<'%EOF%'
   cc2_r12_he
   -----------
   Molecule:         He 
   Wave Function:    CC2-R12/A1/A / AhlrichsVDZ + AhlrichsVTZ
   Test Purpose:     Check CC2-R12/A1/A method with auxiliary basis 
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > cc2_r12_he.mol <<'%EOF%'
#
BASIS
Ahlrichs-VDZ Ahlrichs-VTZ
He

    2    0             .10E-99
 1     2.0    1    1
He     .000000000000000    .000000000000000    0.000000000000000      *
 2     2.0    1    1
He     .000000000000000    .000000000000000    0.000000000000000      *
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > cc2_r12_he.dal <<'%EOF%'

**DALTON INPUT
.RUN WAVE FUNCTION
.DIRECT
*MOLBAS
.R12AUX
**INTEGRALS
.R12
**WAVE FUNCTION
.CC
*ORBITAL INPUT
.NOSUPSYM
.MOSTART
 H1DIAG
*SCF INPUT
.THRESH
 1.0D-10
*CC INPUT
.CC2
.PRINT
 7  
.THRENR
 1.0D-10
.MAX IT
 300
*CCEXCI
.THREXC
 1.D-8
.NCCEXCI
 4 
*R12 INPUT
#.NO HYB
#.R12XXL
#.NO B
#.NO A'               ' 
#.NO 2
.CC2
 1A
**END OF DALTON INPUT
%EOF%

#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >cc2_r12_he.check
cat >>cc2_r12_he.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#            Total SCF   energy:                    -2.8551604793
#            Total MP2-R12/A energy:                -2.8946141180
#            Total CC2-R12/A energy:                -2.8946233415
#
#
# +=============================================================================+
# |  sym. | Exci.  |        CC2-R12/A  Excitation energies            | ||T1||  |
# |(spin, |        +------------------------------------------------------------+
# | spat) |        |     Hartree    |       eV.      |     cm-1       |    %    |
# +=============================================================================+
# | ^1A   |    1   |     1.9458080  |      52.94813  |    427055.503  |  99.95  |
# | ^1A   |    2   |     3.7385300  |     101.73057  |    820512.484  |  99.53  |
# | ^1A   |    3   |     4.6257208  |     125.87226  |   1015228.362  |   0.21  |
# +=============================================================================+
#
#
CRIT1=`$GREP "Total MP2-R12/A energy: * \-2\.8946141180" $log | wc -l`
TEST[1]=`expr	$CRIT1`
CTRL[1]=2
ERROR[1]="MP2-R12/A ENERGY NOT CORRECT"
CRIT2=`$GREP "Total CC2-R12/A energy: * \-2\.8946233415" $log | wc -l`
TEST[2]=`expr	$CRIT2`
CTRL[2]=2
ERROR[2]="CC2-R12/A ENERGY NOT CORRECT"
#
CRIT3=`$GREP "[ \|]* \^1A[ \|]* 1[ \|]* 1\.94580..[ \|]* 52\.9481.[ \|]* 427055\....[ \|]* 99\.95[ \|]" $log | wc -l`
TEST[3]=`expr	$CRIT3`
CTRL[3]=1
ERROR[3]="CC2-R12/A 1A1 EXCITATION ENERGY NOT CORRECT"
CRIT4=`$GREP "[ \|]* \^1A[ \|]* 2[ \|]* 3\.73853..[ \|]* 101\.7305.[ \|]* 820512\....[ \|]* 99\.53[ \|]" $log | wc -l`
TEST[4]=`expr	$CRIT4`
CTRL[4]=1
ERROR[4]="CC2-R12/A 2A1 EXCITATION ENERGY NOT CORRECT"
CRIT5=`$GREP "[ \|]* \^1A[ \|]* 3[ \|]* 4\.62572..[ \|]* 125\.8722.[ \|]* 1015228....[ \|]* ( |0)\.21[ \|]" $log | wc -l`
TEST[5]=`expr	$CRIT5`
CTRL[5]=1
ERROR[5]="CC2-R12/A 3A1 EXCITATION ENERGY NOT CORRECT"

PASSED=1
for i in 1 2 3 4 5
do 
   if [ ${TEST[i]} -lt ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

%EOF%
#######################################################################
