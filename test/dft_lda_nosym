
#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > dft_lda_nosym.info <<%EOF%
   dft_lda_nosym
   -------------
   Molecule:         HCN
   Wave Function:    DFT LDA / aug-cc-pVDZ
   Test Purpose:     Check DFT/LDA w/o symmetry
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > dft_lda_nosym.mol <<%EOF%
BASIS 
aug-cc-pVDZ
HCN
aug-cc-pVDZ basis
    3    0
        1.    1    
H   0.3   0.0    -1.0 
        7.    1    
N   0.3   0.0     1.5
        6.    1    
0   0.0   0.0     0.0
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > dft_lda_nosym.dal <<%EOF%
**DALTON INPUT
.RUN WAVE 
**INTEGRALS
.NOSUP
**WAVE FUNCTIONS
.HF
*HF INPUT
.LDA
*ORBITAL
.NOSUPSYM
*AUXILLIAR
.NOSUPMAT
*END OF INPUT
%EOF%
#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/sh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# Energy                              -91.324722981066
CRIT1=`$GREP "Final * HF energy\: * \-91\.32472298...." $log | wc -l`
TEST[1]=`expr  $CRIT1`
CTRL[1]=1
ERROR[1]="DFT/LDA ENERGY NOT CORRECT"

PASSED=1
for i in 1 
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

' > dft_lda_nosym.check
#######################################################################
