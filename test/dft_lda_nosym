#!/bin/sh
info='
   dft_lda_nosym
   -------------
   Molecule:         HCN
   Wave Function:    DFT LDA / aug-cc-pVDZ
   Test Purpose:     Check DFT/LDA w/o symmetry
'

molecule='BASIS 
aug-cc-pVDZ
HCN
aug-cc-pVDZ basis
    3    0
        1.    1    
H   0.3   0.0    -1.0 
        7.    1    
N   0.3   0.0     1.5
        6.    1    
0   0.0   0.0     0.0
'

dalton='**DALTON INPUT
.RUN WAVE 
**WAVE FUNCTIONS
.DFT
 LDA
**END OF INPUT
'

test='
check_scf_energy DFT -91.324722595374 1e-11
'

. ./functions || { echo "'functions' library not found." ; exit 1; }
check_gen_input "$0" "$info" "$molecule" "$dalton" "$test"
