#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > rsp_hfc.info <<'%EOF%'
   rsp_hfc
   -------
   Molecule:         TiF3
   Wave Function:    Restricted open-shell DFT:BP86  
   Test Purpose:     Single-point calculation of hfc parameters
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > rsp_hfc.mol <<'%EOF%'
BASIS
STO-3G 
TiF3. 

    2              *
       22.    1         
Ti    0.000000  0.000000   0.000000
        9.    3         
F     1.756834  0.000000   0.000000
F    -0.878417  1.521463   0.000000
F    -0.878417 -1.521463  -0.000000
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > rsp_hfc.dal <<'%EOF%'
**DALTON INPUT
.RUN RESPONSE
.DIRECT 
**INTEGRALS
.FC
.SD
**WAVE FUNCTIONS
.DFT 
BP86
*SCF INPUT 
.THRESH 
1.0D-9 
**RESPON
.TRPFLG
*ESR
.MAX IT
  30
.ATOMS 
2 
1 2
.FCCALC
.SDCALC   
*END OF
%EOF%
#######################################################################



#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >rsp_hfc.check
cat >>rsp_hfc.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# Energy
CRIT1=`$GREP "Final * DFT energy\: * \-1136\.25077[12]" $log | wc -l`
TEST[1]=`expr	$CRIT1`
CTRL[1]=1
ERROR[1]="ENERGY NOT CORRECT"

# HFC parameters
CRIT1=`$GREP "TRIPLET OPERATOR\: \"FC Ti 01\" LAGRANGIAN\: * 0*\.3954.. AVERAGE\: * 14\.9416.. TOTAL\: * 15\.3370.." $log | wc -l` 
CRIT2=`$GREP "TRIPLET OPERATOR\: \"FC F  02\" LAGRANGIAN\: * \-0*\.00622. AVERAGE\: *  0*\.3188.. TOTAL\: * 0*\.3125.." $log | wc -l`
CRIT3=`$GREP "TRIPLET OPERATOR\: \"SD 002 y\" LAGRANGIAN\: * (0| )\.0086.. AVERAGE\: * (\-0|\-)\.0446.. TOTAL\: * (\-0|\-)\.0360.." $log | wc -l` 
CRIT4=`$GREP "TRIPLET OPERATOR\: \"SD 006 x\" LAGRANGIAN\: * (\-0|\-)\.0172.. AVERAGE\: *  (0| )\.0893.. TOTAL\: *  (0| )\.0720.." $log | wc -l`
CRIT5=`$GREP "TRIPLET OPERATOR\: \"SD 009 z\" LAGRANGIAN\: * (0| )\.0086.. AVERAGE\: * (\-0|\-)\.0446.. TOTAL\: * (\-0|\-)\.0360.." $log | wc -l`
CRIT6=`$GREP "TRIPLET OPERATOR\: \"SD 003 y\" LAGRANGIAN\: * (0| )\.0462.. AVERAGE\: * (\-0|\-)\.0274.. TOTAL\: * (0| )\.0188.." $log | wc -l`
CRIT7=`$GREP "TRIPLET OPERATOR\: \"SD 007 x\" LAGRANGIAN\: * (\-0|\-)\.1023.. AVERAGE\: * (\-0|\-)\.0170.. TOTAL\: * (\-0|\-)\.1193.." $log | wc -l`
CRIT8=`$GREP "TRIPLET OPERATOR\: \"SD 010 z\" LAGRANGIAN\: *  (0| )\.0560.. AVERAGE\:  * (0| )\.0444.. TOTAL\: *  (0| )\.1005.." $log | wc -l`
TEST[2]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ \
		$CRIT7 \+ $CRIT8`
CTRL[2]=8 
ERROR[2]="HFC PARAMETERS NOT CORRECT"

PASSED=1
for i in 1 2 
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi

%EOF%
#######################################################################
