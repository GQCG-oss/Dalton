
#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > r12_sym.info <<%EOF%
   r12_sym
   -------
   Molecule:         Methane (CH4)
   Wave Function:    MP2-R12 / 6-311G**
   Test Purpose:     Check R12 method with symmetry
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > r12_sym.mol <<%EOF%
BASIS
6-311G**
Direct MP2-R12/B calculation using symmetry

    2    2 XY XZ
        6.    1
C      0.000000000000000   0.000000000000000   0.000000000000000       *
        1.    1
H      1.276731000000000   1.276731000000000   1.276731000000000       *
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > r12_sym.dal <<%EOF%
**DALTON INPUT
.RUN WAVE FUNCTION
.DIRECT
**INTEGRALS
.R12
**WAVE FUNCTIONS
.CC
*HF INPUT
.THRESHOLD
 1D-10
*CC INPUT
.MP2
.PRINT
 3
*ORBITALS
.MOSTART
 H1DIAG
*END OF INPUT
%EOF%

#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi
#                       ! Original MP2-R12 method !
#             MP2-R12/A   correlation energy =   -0.276347821
#             MP2-R12/B   correlation energy =   -0.249692209
#
CRIT1=`$GREP "MP2-R12/B   correlation energy =   \-0\.2496922" $log | wc -l`
TEST[1]=`expr	$CRIT1`
CTRL[1]=1
ERROR[1]="MP2-R12/B ENERGY NOT CORRECT"

PASSED=1
for i in 1 
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

' > r12_sym.check
#######################################################################
