
#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > dft_properties_sym.info <<%EOF%
   dft_properties_sym
   ------------------
   Molecule:         H2O
   Wave Functions:   DFT B3LYP / cc-pVDZ
   Test Purpose:     DFT B3LYP properties test w/symmetry:
                     Shieldings, excitation energies, spin-spin, darwin,
                     mass-vel., dipol, spin-orbit,  P-viola
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > dft_properties_sym.mol <<%EOF%
BASIS 
cc-pVDZ
H2O

    2    
        8.    1        
O     0.0  0.0000000000 0.0
        1.    2    
H     1.430    0.0  1.1
H    -1.430    0.0  1.1
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > dft_properties_sym.dal <<%EOF%
**DALTON INPUT
.RUN PROPERTIES
**INTEGRALS 
.NOSUP
**WAVE FUNCTIONS
.HF
*HF INPUT
.B3LYP
.THRESH
 1.0d-10
*ORBITAL
.NOSUPSYM
*AUXILLIAR
.NOSUPMAT
**PROPERTIES 
.SHIELDINGS
.EXCITA
.SPIN-SPIN
*EXCITA
.NEXCIT
 2 
*END OF INPUT
%EOF%
#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/sh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# Energy                              -76.383052152909
CRIT1=`$GREP "Final * HF energy\: * \-76\.3830521....." $log | wc -l`
CRIT2=`$GREP "Nuclear repulsion\: * 9\.218170507..." $log | wc -l`
CRIT3=`$GREP "Electronic energy\: * \-85\.6012226....." $log | wc -l`
TEST[1]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[1]=3
ERROR[1]="DFT/B3LYP ENERGY NOT CORRECT"

# Relativistic prop.
CRIT1=`$GREP "Darwin correction\: * (0| )\.198757245. au" $log | wc -l`
CRIT2=`$GREP "Mass\-velocity correction\: * (\-0| \-)\.250296919. au" $log | wc -l`
TEST[2]=`expr	$CRIT1 \+ $CRIT2`
CTRL[2]=2
ERROR[2]="RELATIVISTIC PROPERTIES NOT CORRECT"

# Dipole moment
CRIT1=`$GREP "(0| )\.748785 au * 1\.903222 Debye" $log | wc -l`
TEST[3]=`expr	$CRIT1`
CTRL[3]=1
ERROR[3]="DIPOLE MOMENT NOT CORRECT"

# Excitation energies
#            1        1    0.364775     9.926038
#            1        2    0.623601    16.969035
CRIT1=`$GREP "1 * 1 * (0| )\.36477. *  9\.9259.." $log | wc -l`
CRIT2=`$GREP "1 * 2 * (0| )\.62359. * 16\.9689.." $log | wc -l`
TEST[4]=`expr	$CRIT1 \+ $CRIT2`
CTRL[4]=2
ERROR[4]="EXCITATION ENERGIES NOT CORRECT"

# O shieldings
CRIT1=`$GREP "O * x * 328\.4383.... * (0| )\.00000000 * (0| )\.00000000" $log | wc -l`
CRIT2=`$GREP "O * y * (0| )\.00000000 * 363\.3210.... * (0| )\.00000000" $log | wc -l`
CRIT3=`$GREP "O * z * (0| )\.00000000 * (0| )\.00000000 * 349\.4173...." $log | wc -l`
TEST[5]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[5]=3
ERROR[5]="SHIELDINGS O NOT CORRECT"

# H1 shieldings
CRIT1=`$GREP "H * 1x * 25\.0155....  * (0| )\.00000000 * (0| )\.00000000" $log | wc -l`
CRIT2=`$GREP "H * 1y * (0| )\.00000000 * 39\.5312.... * 9\.0775...." $log | wc -l`
CRIT3=`$GREP "H * 1z * (0| )\.00000000 * 6\.5836.... * 31\.4199...." $log | wc -l`
TEST[6]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[6]=3
ERROR[6]="SHIELDINGS H1 NOT CORRECT"

# H2 shieldings
CRIT1=`$GREP "H * 2x * 25\.0155....  * (0| )\.00000000 * (0| )\.00000000" $log | wc -l`
CRIT2=`$GREP "H * 2y * (0| )\.00000000 * 39\.5312.... * \-9\.0775...." $log | wc -l`
CRIT3=`$GREP "H * 2z * (0| )\.00000000 * \-6\.5836.... * 31\.4199...." $log | wc -l`
TEST[7]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[7]=3
ERROR[7]="SHIELDINGS H2 NOT CORRECT"

# Spin spin 
CRIT1=`$GREP "Isotropic coupling * \: * \-2\.5081 Hz" $log | wc -l`
CRIT2=`$GREP "Anisotropic coupling * \: * \-36\.6354 Hz" $log | wc -l`
CRIT3=`$GREP "Asymmetry * \: * (\-0| \-)\.0891" $log | wc -l`
CRIT4=`$GREP "S parameter * \: * 36\.6838 Hz" $log | wc -l`
CRIT5=`$GREP "A parameter * \: * 6\.1938 Hz" $log | wc -l`
CRIT6=`$GREP "Isotropic DSO contribution\: * \-7\.1975 Hz" $log | wc -l`
CRIT7=`$GREP "Isotropic PSO contribution\: * 7\.6125 Hz" $log | wc -l`
CRIT8=`$GREP "Isotropic SD contribution \: * (0| )\.7577 Hz" $log | wc -l`
CRIT9=`$GREP "Isotropic FC contribution \: * \-3\.6808 Hz" $log | wc -l`
TEST[8]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ \
		$CRIT7 \+ $CRIT8 \+ $CRIT9`
CTRL[8]=9
ERROR[8]="SPIN-SPIN NOT CORRECT"

PASSED=1
for i in 1 2 3 4 5 6 7 8
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

' > dft_properties_sym.check
#######################################################################
