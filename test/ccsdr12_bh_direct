#######################################################################
#  DALTON INPUT
#######################################################################
cat > ccsdr12_bh_direct.dal <<'%EOF%'

**DALTON INPUT
.RUN WAVE FUNCTION
.DIRECT
*MOLBAS
.R12AUX
**INTEGRALS
.R12
**WAVE FUNCTION
.CC
*ORBITAL INPUT
.NOSUPSYM
.MOSTART
 H1DIAG
*SCF IN  
.THRESH
 1.0D-12
*CC INPUT
.CCSD
.PRINT
 4 
.FROIMP
  1 0 0 0 
  0 0 0 0 
.THRENR
 1.0D-12
.MAX IT
 300
*R12 INPUT
#.NO HYB
#.R12XXL
#.NO A
#.NO A'
#.NO 2
.CC2
 1B
**END OF DALTON INPUT
%EOF%

#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >ccsdr12_bh_direct.check
cat >>ccsdr12_bh_direct.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi
#            Total SCF   energy:                   -25.1264273369
#            Total MP2-R12/B energy:               -25.2006815211
#            Total CCSD(R12)/B energy:             -25.2240489668



CRIT1=`$GREP "Total MP2-R12/B energy: *  \-25\.2006815211" $log | wc -l`
TEST[1]=`expr	$CRIT1`
CTRL[1]=2
ERROR[1]="MP2-R12/B ENERGY NOT CORRECT"
CRIT2=`$GREP "Total CCSD\(R12\)/B energy:  * \-25\.2240489668" $log | wc -l`
TEST[2]=`expr	$CRIT2`
CTRL[2]=2
ERROR[2]="CCSD(R12)/B ENERGY NOT CORRECT"
#

PASSED=1
for i in 1 2
do 
   if [ ${TEST[i]} -lt ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

%EOF%
#######################################################################
