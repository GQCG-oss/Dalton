#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > energy_corehole.info <<'%EOF%'
   energy_corehole
   ---------------
   Molecule:         CO
   Wave Functions:   MCSCF (RAS)
   Test Purpose:     Core-hole excitations using both a frozen and a
                     relaxed core orbital
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > energy_corehole.mol <<'%EOF%'
INTGRL
Calculation of core-hole excitations using both a frozen and a relaxed
core orbital. This is a three step job
    2    2  X  Y       1.D-15
       8.     1    3    1    1    1
O   0.000000             0.000000                  2.132
   11    5
