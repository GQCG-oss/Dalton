#######################################################################
#  DALTON INPUT
#######################################################################
cat > energy_corehole__1.dal <<'%EOF%'
**DALTON INPUT
.RUN WAVE FUNCTIONS
**WAVE FUNCTIONS
.HF
*SCF INPUT
.DOUBLY OCCUPIED
   5 1 1 0
.THRESHOLD
  1.D-04
.NONCANONICAL
*OPTIMIZATION
.NEO ALWAYS
.DETERMIN
**END OF INPUT
%EOF%

cat > energy_corehole__2.dal <<'%EOF%'
**DALTON INPUT
.RUN WAVE FUNCTIONS
**WAVE FUNCTIONS
.MCSCF
.WESTA
*CONFIGURATION INPUT
.INACTIVE
 2 0 0 0
.RAS1 SPACE
