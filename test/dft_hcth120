#!/bin/sh

info='
   dft_hcth120
   --------
   Molecule:         NeH+
   Wave Function:    DFT HCTH120 / cc-pVTZ
   Test Purpose:     HCTH120 functional test.
'

molecule='BASIS
cc-pVTZ
NeH+ molecule with HCTH120 functional
---------------------------
Atomtypes=2 Charge=1
Atoms=1  Charge=10
Ne    0.0000     0.0000    0.0000
Atoms=1 Charge=1
H     0.0000     0.0000    1.2000
'

dalton='**DALTON
.RUN RESPONSE
**WAVE FUNCTIONS
.DFT
 HCTH120
*DFT INPUT
.RADINT
 1.e-9
**RESPONSE
*LINEAR
.SINGLE RESIDUE
.TRIPLET
.ROOTS
 1 0 0 0  0 0 0 0
**END OF 
'

test='
check_scf_energy DFT -128.816606435683 1e-11
check_exc_energy 1 1  27.042017 1-e5
'

. ./functions || { echo "'functions' library not found." ; exit 1; }
check_gen_input "$0" "$info" "$molecule" "$dalton" "$test"
