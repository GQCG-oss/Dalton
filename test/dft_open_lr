#!/bin/sh

. functions || { echo "current dir is not the test dir" ; exit 1; }

info="
   dft_properties_sym
   ------------------
   Molecule:         H2O+
   Wave Functions:   DFT B3LYP / aug-cc-pVDZ
   Test Purpose:     DFT B3LYP polarizability test w/symmetry.
"

molecule="BASIS
aug-cc-pVDZ
Water
aug-cc-pVDZ basis
    2  1 2  X  Z
        8.    1
O      .0000   -.2249  0.0000000000
        1.    1
H     1.4523    .8996   .0000000000
"

dalton="**DALTON INPUT
.RUN RESPONSE
.DIRECT
**INTEGRAL
.NOSUP
**WAVE FUNCTIONS
.DFT
 B3LYP
*SCF INP
.THRESHOLD
1e-10
**RESPONSE
*LINEAR
.DIPLEN
.THCLR
1e-7
*END OF INPUT
"

test="
check_scf_energy DFT -75.940797586758 1e-6
check_polarizabilities 5.956539048061 5.082779265466 4.123393725350 1e-4
"
check_gen_input "$0" "$info" "$molecule" "$dalton" "$test"
