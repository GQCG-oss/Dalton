
#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > dft_blyp_sym.info <<%EOF%
   dft_blyp_sym
   ------------
   Molecule:         HCN
   Wave Function:    DFT BLYP / aug-cc-pVDZ
   Test Purpose:     Check BLYP functional w/symmetry
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > dft_blyp_sym.mol <<%EOF%
BASIS 
aug-cc-pVDZ
HCN 
aug-cc-pVDZ basis
    3    
        1.    1    
H   0.3   0.0    -1.0 
        7.    1    
N   0.3   0.0     1.5
        6.    1    
0   0.0   0.0     0.0 
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > dft_blyp_sym.dal <<%EOF%
**DALTON INPUT
.RUN WAVE 
**INTEGRALS
.NOSUP
**WAVE FUNCTIONS
.HF
*HF INPUT
.BLYP
*ORBITAL
.NOSUPSYM
*AUXILLIAR
.NOSUPMAT
*END OF INPUT
%EOF%
#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#                                    -92.114493330518
CRIT1=`$GREP "Final * HF energy\: * \-92\.1144933....." $log | wc -l`
TEST[1]=`expr	$CRIT1`
CTRL[1]=1
ERROR[1]="DFT/BLYP ENERGY NOT CORRECT"

PASSED=1
for i in 1 
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

' > dft_blyp_sym.check
#######################################################################
