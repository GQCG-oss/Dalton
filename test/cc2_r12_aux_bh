#######################################################################
#  DALTON INPUT
#######################################################################
cat > cc2_r12_aux_bh.dal <<'%EOF%'

**DALTON INPUT
.RUN WAVE FUNCTION
.DIRECT
**INTEGRALS
.R12
.AUXBAS
**WAVE FUNCTION
.CC
*ORBITAL INPUT
.NOSUPSYM
.MOSTART
 H1DIAG
*SCF INPUT
.THRESH
 1.0D-10
*CC INPUT
.CC2
.PRINT
 7  
.FROIMP
  1
  0
.THRENR
 1.0D-10
.MAX IT
 300
*CCEXCI
.THREXC
 1.D-8
.NCCEXCI
 8 
*R12 INPUT
.NO HYB
.R12XXL
.NO B
.NO A'
.NO 2
*END OF
%EOF%

#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >cc2_r12_aux_bh.check
cat >>cc2_r12_aux_bh.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#            Total SCF   energy:                   -25.1264273369
#            Total MP2-R12/A energy:               -25.1997874361
#            Total CC2-R12/A energy:               -25.2000360238
#
#
# +=============================================================================+
# |  sym. | Exci.  |        CC2-R12/A  Excitation energies            | ||T1||  |
# |(spin, |        +------------------------------------------------------------+
# | spat) |        |     Hartree    |       eV.      |     cm-1       |    %    |
# +=============================================================================+
# | ^1A   |    1   |     0.1106037  |       3.00968  |     24274.716  |  97.90  |
# | ^1A   |    2   |     0.1106037  |       3.00968  |     24274.716  |  97.90  |
# | ^1A   |    3   |     0.2394679  |       6.51625  |     52557.124  |  97.12  |
# | ^1A   |    4   |     0.2794722  |       7.60483  |     61337.057  |  97.30  |
# | ^1A   |    5   |     0.2795057  |       7.60574  |     61344.405  |  97.09  |
# | ^1A   |    6   |     0.2795057  |       7.60574  |     61344.405  |  97.09  |
# | ^1A   |    7   |     0.3295271  |       8.96689  |     72322.850  |  97.45  |
# | ^1A   |    8   |     0.3984909  |      10.84349  |     87458.644  |  97.09  |
# +=============================================================================+
#

CRIT1=`$GREP "Total MP2-R12/A energy:               -25.1997874361" $log | wc -l`
TEST[1]=`expr	$CRIT1`
CTRL[1]=2
ERROR[1]="MP2-R12/A ENERGY NOT CORRECT"
CRIT2=`$GREP "Total CC2-R12/A energy:               -25.2000360238" $log | wc -l`
TEST[2]=`expr	$CRIT2`
CTRL[2]=1
ERROR[2]="CC2-R12/A ENERGY NOT CORRECT"
#
CRIT3=`$GREP "\| ^1A   \|    1   \|     ( |0)\.1106...  \|       3\.0096.  \|     24274\...   \|  97\.90  \|" $log | wc -l`
TEST[3]=`expr	$CRIT3`
CTRL[3]=1
ERROR[3]="CC2-R12/A 1A1 EXCITATION ENERGY NOT CORRECT"
CRIT3=`$GREP "\| ^1A   \|    2   \|     ( |0)\.1106...  \|       3\.0096.  \|     24274\...   \|  97\.90  \|" $log | wc -l`
TEST[3]=`expr	$CRIT3`
CTRL[3]=1
ERROR[3]="CC2-R12/A 2A1 EXCITATION ENERGY NOT CORRECT"
CRIT4=`$GREP "\| ^1A   \|    3   \|     ( |0)\.2394...  \|       6\.5162.  \|     52557\...   \|  97\.12  \|" $log | wc -l`
TEST[4]=`expr	$CRIT4`
CTRL[4]=1
ERROR[4]="CC2-R12/A 3A1 EXCITATION ENERGY NOT CORRECT"
CRIT5=`$GREP "\| ^1A   \|    4   \|     ( |0)\.2794...  \|       7\.6048.  \|     61337\...   \|  97\.30  \|" $log | wc -l`
TEST[5]=`expr	$CRIT5`
CTRL[5]=1
ERROR[5]="CC2-R12/A 4A1 EXCITATION ENERGY NOT CORRECT"

PASSED=1
for i in 1 2 3 4 5
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

%EOF%
#######################################################################
