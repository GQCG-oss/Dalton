
#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > cc_rsp_twophot5.info <<%EOF%
   cc_rsp_twophot5
   ---------------
   Molecule:         HF in C2
   Wave Function:    CCSD / 6-31G**
   Test Purpose:     Twophoton transition moments
%EOF%

#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > cc_rsp_twophot5.mol <<%EOF%
BASIS
6-31G**
Hydrogen flourid
small test basis
    2    1  Y         1.00D-15
        9.0   1    
F     0.0000000000000000  0.0000000000000000 1.76320000000000000      
        1.0   1
H     0.0000000000000000  0.0000000000000000 0.00000000000000000      
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > cc_rsp_twophot5.dal <<%EOF%
**GENERAL
.RUNSIR
**INTEGRAL
.DIPLEN
**SIRIUS
.CC
*ORBITALS 
.NOSUPSYM
*SCF INPUT 
.THRESH
 1.0d-12
*CC INPUT 
.CCSD
.NSYM
 2
.THRENR
 1.0d-8
.THRLEQ
 1.0d-8
.PRINT
  5
*CCEXCI
.NCCEXCI
 0 3 
.THREXC
 1.0d-7
*CCSM
.SELSTA
 2 3 0.01
.OPERATOR
YDIPLEN XDIPLEN YDIPLEN XDIPLEN
XDIPLEN YDIPLEN XDIPLEN YDIPLEN
*CCLRSD
.DIPOLE
*END OF
%EOF%
#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# SCF, MP2 and CCSD energies:
CRIT1=`$GREP "Final    HF energy:" $log | $GREP "\-100.00891992" | wc -l`
CRIT2=`$GREP "Total MP2   energy:                  \-100.19366261" $log | wc -l`
CRIT3=`$GREP "Total CCSD  energy:                  \-100.19779093" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[1]=5
ERROR[1]="ENERGIES NOT CORRECT"


# CCSD twophoton transition moment
CRIT1=`$GREP "M\^AB_of\(\-w\): * ( |\-|0|\-0)\.165298.[0-9]" $log |
       $GREP "M\^CD_fo\(w\): * ( |\-)(4\.|0\.4|\.4|0\.04|\.04)922989" | wc -l`
CRIT2=`$GREP "M\^CD_of\(\-w\): * ( |\-|0|\-0)\.165298.[0-9]" $log |
       $GREP "M\^AB_fo\(w\): * ( |\-)(4\.|0\.4|\.4|0\.04|\.04)922989" $log | wc -l`
CRIT3=`$GREP "M\^AB_of\(\-w\) x M\^CD_fo\(w\)   = * (8\.|0\.8|\.8|0.008|\.008)13763[0-9]" $log | wc -l`
CRIT4=`$GREP "M\^CD_of\(\-w\) x M\^AB_fo\(w\)\]\* = * (8\.|0\.8|\.8|0.008|\.008)13763[0-9]" $log | wc -l`
CRIT5=`$GREP "CCSD S\^of_AB,CD\( * ( |0).010000\)" $log | $GREP "(8\.|0\.8|\.8|0.008|\.008)13763[0-9]" | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5`
CTRL[2]=10
ERROR[2]="CCSD TWOPHOTON TRANSITION MOMENTS NOT CORRECT"

# CCSD excitation energies
CRIT1=`$GREP "\^1A.  \|    3   \|     1\.328216.  \|      36\.1426.  \|    291509\....  \|   ( |0)\.35" $log | wc -l`
TEST[3]=`expr $CRIT1`
CTRL[3]=1
ERROR[3]="CC EXCITATION ENERGIES NOT CORRECT"


PASSED=1
for i in 1 2 3
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi                
' > cc_rsp_twophot5.check
#######################################################################
