#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi

#######################################################################
#  TEST DESCRIPTION
#######################################################################
#
cat > dft_properties_sym.info <<'%EOF%'
    TEST FOR DFT-PROPERTIES IN PARALLEL    
    ------------------------------------
    Molecule: H2O 
    Wave Functions: dft/b3lyp    
    Test Purpose:  Dft/b3lyp properties test in parallel : 
                   spin-spin, darwin, mass-vel., dipol
%EOF%
#
#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > dft_parallell_properties.mol <<'%EOF%'
BASIS 
STO-3G
DFT PROPERTIES TEST 
cc-pVDZ basis
    2    
        8.    1        
O     0.0  0.0000000000 0.0
        1.    2    
H1    1.430    0.0  1.1
H2   -1.430    0.0  1.1
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > dft_parallell_properties.dal <<'%EOF%'
**DALTON INPUT
.RUN PROPERTIES
.PARALL
.DIRECT
**WAVE FUNCTIONS
.DFT
*SCF INPUT
.B3LYP
.THRESH
 1.0d-10
**PROPERTIES 
.SPIN-SPIN
.MOLGRA
**END OF INPUT
%EOF%
#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >dft_parallell_properties.check
cat >>dft_parallell_properties.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi


# FINAL ENERGY 27422990
CRIT1=`$GREP "Final * HF energy\: * \-75\.274229905..." $log | wc -l`
CRIT2=`$GREP "Nuclear repulsion\: * 9\.218170507..." $log | wc -l`
CRIT3=`$GREP "Electronic energy\: * \-84\.492400413..." $log | wc -l`
TEST[1]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[1]=3
ERROR[1]="NOT CORRECT DFT ENERGY"


# ?
CRIT1=`$GREP "Darwin correction\: * (0| )\.129446504. au" $log | wc -l`
CRIT2=`$GREP "Mass\-velocity correction\: * (\-0| \-)\.166917718. au" $log | wc -l`
TEST[2]=`expr	$CRIT1 \+ $CRIT2`
CTRL[2]=2
ERROR[2]="NOT CORRECT REL PROP"

# ?
CRIT1=`$GREP "(0| )\.661110 au * 1\.680389 Debye" $log | wc -l`
TEST[3]=`expr	$CRIT1`
CTRL[3]=1
ERROR[3]="NOT CORRECT DIPOLE MOMENT"


# Spin spin 
CRIT1=`$GREP "Isotropic coupling * \: * \-10\.1862 Hz" $log | wc -l`
CRIT2=`$GREP "Anisotropic coupling * \: * \-43\.9184 Hz" $log | wc -l`
CRIT3=`$GREP "Asymmetry * \: * (\-0| \-)\.7808" $log | wc -l`
CRIT4=`$GREP "S parameter * \: * 48\.1745 Hz" $log | wc -l`
CRIT5=`$GREP "A parameter * \: * 12\.1707 Hz" $log | wc -l`
CRIT6=`$GREP "Isotropic DSO contribution\: * \-6\.5453 Hz" $log | wc -l`
CRIT7=`$GREP "Isotropic PSO contribution\: * 4\.4209 Hz" $log | wc -l`
CRIT8=`$GREP "Isotropic SD contribution \: * (0| )\.7781 Hz" $log | wc -l`
CRIT9=`$GREP "Isotropic FC contribution \: * \-8\.8399 Hz" $log | wc -l`
TEST[4]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ \
		$CRIT7 \+ $CRIT8 \+ $CRIT9`
CTRL[4]=9
ERROR[4]="NOT CORRECT SPIN-SPIN"


PASSED=1
for i in 1 2 3 4
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

%EOF%
#######################################################################




