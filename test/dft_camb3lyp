#!/bin/sh

info='
   dft_camb3lyp
   --------------
   Molecule:         hydrogen atom
   Wave Function:    DFT CAM-B3LYP / aug-cc-pVTZ
   Test Purpose:     DFT open-shell energy and dipole moment in field
'

molecule='BASIS
aug-cc-pVTZ
Hydrogen atom
=============                                                           
    1   2  X  Z
Charge=1. Atoms=1                                                         
H     0 0 0
'

dalton='**DALTON
.RUN PROPERTIES
.DIRECT
**INTEGRALS
.DIPLEN
**WAVE FUNCTIONS
.DFT
 CAMB3LYP
*HAMILTIONAN
.FIELD
0.0001
YDIPLEN
**END OF 
'

test='
check_scf_energy DFT  -0.498914920772 1e-10
check_dipole 0.00051596 1e-6
'                     

. ./functions || { echo "'functions' library not found." ; exit 1; }
check_gen_input "$0" "$info" "$molecule" "$dalton" "$test"
