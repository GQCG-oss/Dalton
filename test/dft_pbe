#!/bin/sh

info='
   dft_pbe
   --------
   Molecule:         He
   Wave Function:    DFT PBE / cc-pVDZ
   Test Purpose:     PBE functional test.
'

molecule='BASIS
cc-pVTZ
He atom with PBE functional
---------------------------
    1
        2.    1
He    .0000     .0000     .0000
'

dalton='**DALTON
.RUN RESPONSE
**WAVE FUNCTIONS
.DFT
 PBE
! Molpro form:
! GGAKey pbex=1 pw91c=1
*DFT INPUT
.RADINT
1e-9
**RESPONSE
*LINEAR
.SINGLE RESIDUE
.TRIPLET
.ROOTS
1 0 0 0  0 0 0 0
**END OF 
'

test='
check_scf_energy DFT  -2.892135314973 1e-11
check_exc_energy 1 1 26.231827 1-e5
'

. ./functions || { echo "'functions' library not found." ; exit 1; }
check_gen_input "$0" "$info" "$molecule" "$dalton" "$test"
