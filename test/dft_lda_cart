#!/bin/sh

info='
   dft_lda_cart
   ------------
   Molecule:         HCN
   Wave Function:    DFT LDA / aug-cc-pVDZ
   Test Purpose:     Check DFT-code with Cartesians
'

molecule='BASIS 
aug-cc-pVDZ
HCN 
aug-cc-pVDZ basis
C   3    
        1.    1    
H   0.3   0.0    -1.0 
        7.    1    
N   0.3   0.0     1.5
        6.    1    
0   0.0   0.0     0.0
'

dalton='**DALTON INPUT
.RUN WAVE 
**WAVE FUNCTIONS
.DFT
LDA
**END OF INPUT
'

test='
check_scf_energy DFT -91.339783336169 5e-12
'

. ./functions || { echo "'functions' library not found." ; exit 1; }
check_gen_input "$0" "$info" "$molecule" "$dalton" "$test"
