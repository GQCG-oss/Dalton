
#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > rsp_sreslrso.info <<%EOF%
   rsp_sreslrso
   ------------
   Molecule:         LiH
   Wave Function:    MCSCF (CAS) / 4-31G
   Test Purpose:     Single residue of the linear response function and
                     spin-orbit operator
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > rsp_sreslrso.mol <<%EOF%
BASIS
4-31G
Calculation of single residue of the linear response function and
spin-orbit operator
    2    2  X  Y    1 1.00D-12
        1.0   1
 H           .0000000000             .0000000000            2.0969699107
        3.0   1
 Li          .0000000000             .0000000000            -.9969699107
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > rsp_sreslrso.dal <<%EOF%
**DALTON INPUT
.RUN RESPONS
**INTEGRALS
.SPIN-ORBIT
**WAVEFUNCTION
.HF
.MP2
.MCSCF
*HF INPUT
.HF OCCUPATION
 2 0 0 0
*CONFIGURATION INPUT
.INACTIVE
 1 0 0 0
.ELECTRONS
 2
.CAS SPACE
 2 0 0 0
.SYMMET
 1
.SPIN MULT
 1
*OPTIMIZATION
.DETERMIN
**RESPONS
*LINEAR
.SINGLE
.SPIN-ORBIT
.ROOTS
 1 1 0 0
*END OF
%EOF%
#######################################################################



#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# Basis set
CRIT1=`$GREP "H * 1 * 1 * 4 * 2 * \[4s\|2s\]" $log | wc -l`
CRIT2=`$GREP "Li * 1 * 3 * 17 * 9 * \[8s3p\|3s2p\]" $log | wc -l`
CRIT3=`$GREP "total\: * 2 * 4 * 21 * 11" $log | wc -l`
TEST[1]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[1]=3
ERROR[1]="BASIS SET NOT READ CORRECTLY"

# Geometry
CRIT1=`$GREP "Total number of coordinates\: * 6" $log | wc -l`
CRIT2=`$GREP "1 * H * x * (0| )\.0000000000" $log | wc -l`
CRIT3=`$GREP "2 * y * (0| )\.0000000000" $log | wc -l`
CRIT4=`$GREP "3 * z * 2\.0969699107" $log | wc -l`
CRIT5=`$GREP "4 * Li * x * (0| )\.0000000000" $log | wc -l`
CRIT6=`$GREP "5 * y * (0| )\.0000000000" $log | wc -l`
CRIT7=`$GREP "6 * z * (\-0|\-)\.9969699107" $log | wc -l`
TEST[2]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ \
		$CRIT7`
CTRL[2]=7
ERROR[2]="GEOMETRY NOT READ CORRECTLY"

# Symmetry
CRIT1=`$GREP "Number of coordinates in each symmetry\: * 2 * 2 * 2 * 0" $log | wc -l`
CRIT2=`$GREP "Number of orbitals in each symmetry\: * 7 * 2 * 2 * 0" $log | wc -l`
TEST[3]=`expr	$CRIT1 \+ $CRIT2`
CTRL[3]=2
ERROR[3]="SYMMETRY NOT CORRECT"

# Energies
CRIT1=`$GREP "Hartree\-Fock total energy \: * \-7\.97734936.[0-9]" $log | wc -l`
CRIT2=`$GREP "\= MP2 second order energy \: * \-7\.99019271.[0-9]" $log | wc -l`
CRIT3=`$GREP "Final MCSCF energy\: * \-7\.9941305296.[0-9]" $log | wc -l`
TEST[4]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[4]=3
ERROR[4]="ENERGIES NOT CORRECT"

# Response setup
CRIT1=`$GREP "Linear Response single residue calculation" $log | wc -l`
CRIT2=`$GREP "Spin orbit matrix elements requested" $log | wc -l`
CRIT3=`$GREP "1 Excitation energies are calculated for symmetry no\. * 1" $log | wc -l`
CRIT4=`$GREP "1 Excitation energies are calculated for symmetry no\. * 2" $log | wc -l`
CRIT5=`$GREP "1 property residues are calculated with labels\:" $log | wc -l`
TEST[5]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5`
CTRL[5]=5
ERROR[5]="RESPONSE CALCULATION NOT SET UP CORRECLY"

# Excitation energy
CRIT1=`$GREP "\@Excitation energy \: * (0| )\.1006360[0-9] * au" $log | wc -l`
CRIT2=`$GREP "\@Total energy \: * \-7\.893494[0-9] * au" $log | wc -l`
TEST[6]=`expr	$CRIT1 \+ $CRIT2`
CTRL[6]=2
ERROR[6]="EXCITATION ENERGY NOT CORRECT"

# Transition moment
CRIT1=`$GREP "\@STATE NO\: * 1 \*TRANSITION MOMENT\: (\-| )2\.4147205[0-9](D|E)\-07 \*ENERGY\(eV\)\: * 3\.937210[0-9]" $log | wc -l`
CRIT2=`$GREP "\@Excitation energy \: * (0| )\.1446898[0-9] * au" $log | wc -l`
CRIT3=`$GREP "\@Total energy \: * \-7\.849440[0-9] * au" $log | wc -l`
CRIT4=`$GREP "\@Operator type\: * Y SPNORB" $log | wc -l`
CRIT5=`$GREP "\@Spin\-orbit coupling constant \(Y SPNORB\) \: (\-| )5\.2996989[0-9](D|E)\-02 cm\-1" $log | wc -l`
CRIT6=`$GREP "(\-| )2\.4147205[0-9](D|E)\-07 au" $log | wc -l`
TEST[7]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6`
CTRL[7]=6
ERROR[7]="TRANSITION MOMENT NOT CORRECT"

PASSED=1
for i in 1 2 3 4 5 6 7
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi

' > rsp_sreslrso.check
#######################################################################
