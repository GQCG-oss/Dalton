
#######################################################################
#  TEST DESCRIPTION
#######################################################################
#
#*# prop_vibana
#*# -----------
#*# Molecule:         Pyrimidine cation
#*# Wave Function:    Open-shell HF
#*# Test Purpose:     Vibrational analysis
#
#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > prop_vibana.mol <<%EOF%
BASIS                                                                         
cc-pVDZ                                                                       
Vibrational analysis of open-shell molecule
(test65)
    3    2X  Z                                                                
        7.0   1                                                               
N     2.0588848837817086  1.6649387832804063  0.0000000000000000
        6.0   3                                                 
C     2.1950849457091071 -0.8171562127831691  0.0000000000000000
C     0.0000000000000000 -2.2480833143699051  0.0000000000000000
C     0.0000000000000000  3.0343811449315075  0.0000000000000000
        1.0   3                                                             
H     4.0723206213690837 -1.6336311777068284  0.0000000000000000
H     0.0000000000000000  5.0728155006112949  0.0000000000000000
H     0.0000000000000000 -4.2874161167537146  0.0000000000000000
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > prop_vibana.dal <<%EOF%
*DALTON INPUT
.RUN PROPERTIES
**WAVE FUNCTIONS
.HF
*HF INP
.HF OCCUP
11    6    2    1
.OPEN SHELL
 2
.THRESH
1.0D-10
**PROPERTIES
.VIBANA
*END OF
%EOF%
#######################################################################



#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/ksh
log=$1

if [ `uname` = IRIX64 ]; then
   GREP="egrep"
else
   GREP="egrep -a"
fi

# Basis set
CRIT1=`$GREP "Basis set used is \"cc\-pVDZ\" from the basis set library\." $log | wc -l`
CRIT2=`$GREP "N * 2 * 7 * 26 * 14 * \[9s4p1d\|3s2p1d\]" $log | wc -l`
CRIT3=`$GREP "C * 2 * 6 * 26 * 14 * \[9s4p1d\|3s2p1d\]" $log | wc -l`
CRIT4=`$GREP "C * 1 * 6 * 26 * 14 * \[9s4p1d\|3s2p1d\]" $log | wc -l`
CRIT5=`$GREP "H * 2 * 1 * 7 * 5 * \[4s1p\|2s1p\]" $log | wc -l`
CRIT6=`$GREP "H * 1 * 1 * 7 * 5 * \[4s1p\|2s1p\]" $log | wc -l`
CRIT7=`$GREP "total\: * 10 * 42 * 184 * 104" $log | wc -l`
CRIT8=`$GREP "Spherical harmonic basis used\." $log | wc -l`
TEST[1]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ \
		$CRIT7 \+ $CRIT8`
CTRL[1]=10
ERROR[1]="BASIS SET NOT READ CORRECTLY"

# Geometry
CRIT1=`$GREP "Total number of coordinates\: 30" $log | wc -l`
