CRIT9=`$GREP "H * y * 0\.00624[0-9] * \-0\.01267[0-9] * 0\.00085[0-9] * 0\.00451[0-9] * \-0\.00017[0-9] * \-0\.40511[0-9]" $log | wc -l`
CRIT10=`$GREP "H * y * \-0\.00474[0-9] * \-0\.00002[0-9] * 0\.01038[0-9] * \-0\.01285[0-9] * \-0\.39582[0-9] * 0\.00064[0-9]" $log | wc -l`
