CRIT22=`$GREP "H * y * 0\.06363[0-9] * \-0\.03686[0-9] * 0\.20614[0-9] * \-0\.21825[0-9] * \-0\.03220[0-9] * 0\.00560[0-9]" $log | wc -l`
CRIT23=`$GREP "H * x * \-0\.01422[0-9] * 0\.07968[0-9] * \-0\.00425[0-9] * 0\.00013[0-9] * 0\.00082[0-9] * \-0\.05326[0-9]" $log | wc -l`
