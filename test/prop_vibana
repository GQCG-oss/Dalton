#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > prop_vibana.info <<'%EOF%'
   prop_vibana
   -----------
   Molecule:         Pyrimidine cation
   Wave Function:    Open-shell HF / cc-pVDZ
   Test Purpose:     Vibrational analysis
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > prop_vibana.mol <<'%EOF%'
BASIS
cc-pVDZ
Vibrational analysis of open-shell molecule

    3    2X  Z
        7.0   1
 N1   2.0588848837817086  1.6649387832804063  0.0000000000000000
        6.0   3
 C1   2.1950849457091071 -0.8171562127831691  0.0000000000000000
 C2   0.0000000000000000 -2.2480833143699051  0.0000000000000000
 C3   0.0000000000000000  3.0343811449315075  0.0000000000000000
        1.0   3
 H1   4.0723206213690837 -1.6336311777068284  0.0000000000000000
 H2   0.0000000000000000  5.0728155006112949  0.0000000000000000
 H3   0.0000000000000000 -4.2874161167537146  0.0000000000000000
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > prop_vibana.dal <<'%EOF%'
*DALTON INPUT
.RUN PROPERTIES
**WAVE FUNCTIONS
.HF
*SCF INP
.DOUBLY OCCUPIED
11    6    2    1
.OPEN SHELL
 2
.THRESH
1.0D-10
**PROPERTIES
.VIBANA
**END OF DALTON INPUT
%EOF%
#######################################################################



#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >prop_vibana.check
cat >>prop_vibana.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# Basis set
CRIT1=`$GREP "Basis set used is \"cc\-pVDZ\" from the basis set library\." $log | wc -l`
CRIT2=`$GREP "N * 2 * 7\.0000 * 26 * 14 * \[9s4p1d\|3s2p1d\]" $log | wc -l`
CRIT3=`$GREP "C * 4 * 6\.0000 * 26 * 14 * \[9s4p1d\|3s2p1d\]" $log | wc -l`
CRIT5=`$GREP "H * 4 * 1\.0000 * 7 * 5 * \[4s1p\|2s1p\]" $log | wc -l`
CRIT7=`$GREP "total\: * 10 * 42\.0000 * 184 * 104" $log | wc -l`
CRIT8=`$GREP "Spherical harmonic basis used\." $log | wc -l`
TEST[1]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT5 \+ $CRIT7 \+ $CRIT8`
CTRL[1]=6
ERROR[1]="BASIS SET NOT READ CORRECTLY"

# Geometry
CRIT1=`$GREP "Total number of coordinates\: * 30" $log | wc -l`
CRIT2=`$GREP "1 * x * 2\.0588848838" $log | wc -l`
CRIT3=`$GREP "2 * y * 1\.6649387833" $log | wc -l`
CRIT4=`$GREP "3 * z * (0| )\.0000000000" $log | wc -l`
CRIT5=`$GREP "4 * x * \-2\.0588848838" $log | wc -l`
CRIT6=`$GREP "5 * y * 1\.6649387833" $log | wc -l`
CRIT7=`$GREP "6 * z * (0| )\.0000000000" $log | wc -l`
CRIT8=`$GREP "7 * x * 2\.1950849457" $log | wc -l`
CRIT9=`$GREP "8 * y * (\-0|\-)\.8171562128" $log | wc -l`
CRIT10=`$GREP "9 * z * (0| )\.0000000000" $log | wc -l`
CRIT11=`$GREP "10 * x * \-2\.1950849457" $log | wc -l`
CRIT12=`$GREP "11 * y * (\-0|\-)\.8171562128" $log | wc -l`
CRIT13=`$GREP "12 * z * (0| )\.0000000000" $log | wc -l`
CRIT14=`$GREP "13 * x * (0| )\.0000000000" $log | wc -l`
CRIT15=`$GREP "14 * y * \-2\.2480833144" $log | wc -l`
CRIT16=`$GREP "15 * z * (0| )\.0000000000" $log | wc -l`
CRIT17=`$GREP "16 * x * (0| )\.0000000000" $log | wc -l`
CRIT18=`$GREP "17 * y * 3\.0343811449" $log | wc -l`
CRIT19=`$GREP "18 * z * (0| )\.0000000000" $log | wc -l`
CRIT20=`$GREP "19 * x * 4\.0723206214" $log | wc -l`
CRIT21=`$GREP "20 * y * \-1\.6336311777" $log | wc -l`
CRIT22=`$GREP "21 * z * (0| )\.0000000000" $log | wc -l`
CRIT23=`$GREP "22 * x * \-4\.0723206214" $log | wc -l`
CRIT24=`$GREP "23 * y * \-1\.6336311777" $log | wc -l`
CRIT25=`$GREP "24 * z * (0| )\.0000000000" $log | wc -l`
CRIT26=`$GREP "25 * x * (0| )\.0000000000" $log | wc -l`
CRIT27=`$GREP "26 * y * 5\.0728155006" $log | wc -l`
CRIT28=`$GREP "27 * z * (0| )\.0000000000" $log | wc -l`
CRIT29=`$GREP "28 * x * (0| )\.0000000000" $log | wc -l`
CRIT30=`$GREP "29 * y * \-4\.2874161168" $log | wc -l`
CRIT31=`$GREP "30 * z * (0| )\.0000000000" $log | wc -l`
TEST[2]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ \
		$CRIT7 \+ $CRIT8 \+ $CRIT9 \+ $CRIT10 \+ $CRIT11 \+ $CRIT12 \+ \
		$CRIT13 \+ $CRIT14 \+ $CRIT15 \+ $CRIT16 \+ $CRIT17 \+ $CRIT18 \+ \
		$CRIT19 \+ $CRIT20 \+ $CRIT21 \+ $CRIT22 \+ $CRIT23 \+ $CRIT24 \+ \
		$CRIT25 \+ $CRIT26 \+ $CRIT27 \+ $CRIT28 \+ $CRIT29 \+ $CRIT30 \+ \
		$CRIT31`
TEST[2]=31  # test disabled because of new print format Apr 2006
CTRL[2]=31
ERROR[2]="GEOMETRY NOT READ CORRECTLY"

# Symmetry
CRIT1=`$GREP "Number of coordinates in each symmetry\: * 10 * 10 * 7 * 3" $log | wc -l`
CRIT2=`$GREP "Number of orbitals in each symmetry\: * 44 * 32 * 17 * 11" $log | wc -l`
TEST[3]=`expr	$CRIT1 \+ $CRIT2`
CTRL[3]=2
ERROR[3]="SYMMETRY NOT CORRECT"

# Energy
CRIT1=`$GREP "Final * HF energy\: * \-262\.375106125" $log | wc -l`
TEST[4]=`expr	$CRIT1`
CTRL[4]=1
ERROR[4]="SCF ENERGY NOT CORRECT"

# Gradient
CRIT1=`$GREP "N. * x * (\-0|\-)\.000000084[0-9]" $log | wc -l`
CRIT2=`$GREP "N. * y * (0| )\.000000061[0-9]" $log | wc -l`
CRIT3=`$GREP "C. * x * (0| )\.000000058[0-9]" $log | wc -l`
CRIT4=`$GREP "C. * y * (\-0|\-)\.000000090[0-9]" $log | wc -l`
CRIT5=`$GREP "C. * y * (0| )\.000000009[0-9]" $log | wc -l`
CRIT6=`$GREP "C. * y * (0| )\.000000002[0-9]" $log | wc -l`
CRIT7=`$GREP "H. * x * (0| )\.000000003[0-9]" $log | wc -l`
CRIT8=`$GREP "H. * y * (0| )\.000000027[0-9]" $log | wc -l`
CRIT9=`$GREP "H. * y * (\-0|\-)\.000000003[0-9]" $log | wc -l`
CRIT10=`$GREP "H. * y * (\-0|\-)\.000000007[0-9]" $log | wc -l`
TEST[5]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ \
		$CRIT7 \+ $CRIT8 \+ $CRIT9 \+ $CRIT10`
CTRL[5]=10
ERROR[5]="GRADIENT NOT CORRECT"

# Hessian
CRIT1=`$GREP "N. * x * 1\.26583[0-9]" $log | wc -l`
CRIT2=`$GREP "N. * y * (\-0|\-)\.48494[0-9] * 1\.72516[0-9]" $log | wc -l`
CRIT3=`$GREP "C. * x * (\-0|\-)\.22661[0-9] * (0| )\.01061[0-9] * 1\.84953[0-9]" $log | wc -l`
