CRIT28=`$GREP "H. * x * (0| )\.00207[0-9] * (0| )\.00136[0-9] * (0| )\.00048[0-9] * (0| )\.06308[0-9]" $log | wc -l`
CRIT29=`$GREP "N. * z * (0| )\.19762[0-9]" $log | wc -l`
CRIT30=`$GREP "C. * z * (\-0|\-)\.14804[0-9] * (0| )\.38308[0-9]" $log | wc -l`
CRIT31=`$GREP "C. * z * (0| )\.00387[0-9] * (\-0|\-)\.14105[0-9] * (0| )\.13590[0-9]" $log | wc -l`
CRIT32=`$GREP "C. * z * (\-0|\-)\.10258[0-9] * (\-0|\-)\.01103[0-9] * (0| )\.01629[0-9] * (0| )\.15060[0-9]" $log | wc -l`
CRIT33=`$GREP "H. * z * (0| )\.02954[0-9] * (\-0|\-)\.10863[0-9] * (0| )\.03318[0-9] * (\-0|\-)\.00314[0-9] * (0| )\.05329[0-9]" $log | wc -l`
CRIT34=`$GREP "H. * z * (0| )\.00023[0-9] * (0| )\.02227[0-9] * (\-0|\-)\.00192[0-9] * (\-0|\-)\.05114[0-9] * (0| )\.00161[0-9] * (0| )\.03156[0-9]" $log | wc -l`
CRIT35=`$GREP "H. * z * (0| )\.01935[0-9] * (0| )\.00340[0-9] * (\-0|\-)\.04626[0-9] * (0| )\.00100[0-9] * (\-0|\-)\.00584[0-9] * (\-0|\-)\.00261[0-9]" $log | wc -l`
CRIT36=`$GREP "H. * z * (0| )\.03096[0-9]" $log | wc -l`
