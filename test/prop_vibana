CRIT5=`$GREP "C. * y * (\-0|\-)\.05988[0-9] * (\-0|\-)\.10895[0-9] * (\-0|\-)\.28308[0-9] * (\-0|\-)\.43421[0-9] * (0| )\.90819[0-9]" $log | wc -l`
CRIT6=`$GREP "C. * y * (0| )\.39054[0-9] * (\-0|\-)\.57892[0-9] * (0| )\.08760[0-9] * (\-0|\-)\.06883[0-9] * (0| )\.00282[0-9] * 1\.06277[0-9]" $log | wc -l`
CRIT7=`$GREP "H. * x * (0| )\.00811[0-9] * (0| )\.00460[0-9] * (\-0|\-)\.67035[0-9] * (0| )\.21583[0-9] * (0| )\.02659[0-9] * (\-0|\-)\.00355[0-9]" $log | wc -l`
