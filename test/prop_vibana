CRIT7=`$GREP "13 * A1 * 1143\.7[0-9] * (0| )\.00521[0-9] * (0| )\.08[0-9] * (0| )\.002[0-9]" $log | wc -l`
CRIT8=`$GREP "18 * A1 * 1035\.3[0-9] * (0| )\.00471[0-9] * 8\.18[0-9] * (0| )\.193[0-9]" $log | wc -l`
CRIT9=`$GREP "21 * A1 * 694\.7[0-9] * (0| )\.00316[0-9] * 8\.48[0-9] * (0| )\.200[0-9]" $log | wc -l`
CRIT10=`$GREP "3 * B2 * 3370\.8[0-9] * (0| )\.01535[0-9] * 43\.62[0-9] * 1\.032[0-9]" $log | wc -l`
CRIT11=`$GREP "6 * B2 * 1658\.0[0-9] * (0| )\.00755[0-9] * 193\.58[0-9] * 4\.581[0-9]" $log | wc -l`
CRIT12=`$GREP "8 * B2 * 1565\.9[0-9] * (0| )\.00713[0-9] * 3.24[0-9] * (0| )\.076[0-9]" $log | wc -l`
CRIT13=`$GREP "9 * B2 * 1434\.1[0-9] * (0| )\.00653[0-9] * 6\.84[0-9] * (0| )\.162[0-9]" $log | wc -l`
CRIT14=`$GREP "10 * B2 * 1279\.0[0-9] * (0| )\.00582[0-9] * 46\.12[0-9] * 1\.091[0-9]" $log | wc -l`
CRIT15=`$GREP "12 * B2 * 1199\.1[0-9] * (0| )\.00546[0-9] * 18\.68[0-9] * (0| )\.442[0-9]" $log | wc -l`
CRIT16=`$GREP "16 * B2 * 1050\.6[0-9] * (0| )\.00478[0-9] * (0| )\.07[0-9] * (0| )\.001[0-9]" $log | wc -l`
CRIT17=`$GREP "20 * B2 * 710\.6[0-9] * (0| )\.00323[0-9] * 6\.40[0-9] * (0| )\.151[0-9]" $log | wc -l`
CRIT18=`$GREP "14 * B1 * 1109\.1[0-9] * (0| )\.00505[0-9] * (0| ).000 * (0| )\.0000" $log | wc -l`
CRIT19=`$GREP "17 * B1 * 1036\.9[0-9] * (0| )\.00472[0-9] * (0| )\.04[0-9] * (0| )\.001[0-9]" $log | wc -l`
CRIT20=`$GREP "19 * B1 * 923\.9[0-9] * (0| )\.00421[0-9] * 25\.08[0-9] * (0| )\.593[0-9]" $log | wc -l`
CRIT21=`$GREP "22 * B1 * 515\.6[0-9] * (0| )\.00235[0-9] * 114\.85[0-9] * 2\.718[0-9]" $log | wc -l`
CRIT22=`$GREP "24 * B1 * 390\.2[0-9] * (0| )\.00177[0-9] * 1\.23[0-9] * (0| )\.029[0-9]" $log | wc -l`
CRIT23=`$GREP "15 * A2 * 1067\.3[0-9] * (0| )\.00486[0-9] * (0| ).000 * (0| )\.0000" $log | wc -l`
CRIT24=`$GREP "23 * A2 * 483\.1[0-9] * (0| )\.00220[0-9] * (0| ).000 * (0| )\.0000" $log | wc -l`
TEST[8]=`expr	$CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ \
		$CRIT7 \+ $CRIT8 \+ $CRIT9 \+ $CRIT10 \+ $CRIT11 \+ $CRIT12 \+ \
		$CRIT13 \+ $CRIT14 \+ $CRIT15 \+ $CRIT16 \+ $CRIT17 \+ $CRIT18 \+ \
		$CRIT19 \+ $CRIT20 \+ $CRIT21 \+ $CRIT22 \+ $CRIT23 \+ $CRIT24`
CTRL[8]=24
ERROR[8]="VIBRATIONAL FREQUENCIES NOT CORRECT"

PASSED=1
for i in 1 2 3 4 5 6 7 8
do
   if [ ${TEST[i]} -lt ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi

%EOF%
