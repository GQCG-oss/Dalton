CRIT10=`$GREP "H. * y * (\-0|\-)\.00474[0-9] * (\-0|\-)\.00002[0-9] * (0| )\.01038[0-9] * (\-0|\-)\.01285[0-9] * (\-0|\-)\.39582[0-9] * (0| )\.00064[0-9]" $log | wc -l`
CRIT11=`$GREP "H. * x * (0| )\.69142[0-9]" $log | wc -l`
CRIT12=`$GREP "H. * y * (\-0|\-)\.24298[0-9] * (0| )\.24452[0-9]" $log | wc -l`
CRIT13=`$GREP "H. * y * (\-0|\-)\.00005[0-9] * (\-0|\-)\.00010[0-9] * (0| )\.41360[0-9]" $log | wc -l`
CRIT14=`$GREP "H. * y * (\-0|\-)\.00043[0-9] * (0| )\.00091[0-9] * (\-0|\-)\.00006[0-9] * (0| )\.40719[0-9]" $log | wc -l`
CRIT15=`$GREP "N. * x * (0| )\.56626[0-9]" $log | wc -l`
CRIT16=`$GREP "N. * y * (\-0|\-)\.06186[0-9] * 1\.21455[0-9]" $log | wc -l`
CRIT17=`$GREP "C. * x * (\-0|\-)\.31898[0-9] * (0| )\.13581[0-9] * 1\.57341[0-9]" $log | wc -l`
CRIT18=`$GREP "C. * y * (\-0|\-)\.19977[0-9] * (\-0|\-)\.53299[0-9] * (\-0|\-)\.19214[0-9] * 1\.34659[0-9]" $log | wc -l`
CRIT19=`$GREP "C. * x * (0| )\.14193[0-9] * (\-0|\-)\.26519[0-9] * (\-0|\-)\.61643[0-9] * (\-0|\-)\.10674[0-9] * (0| )\.70212[0-9]" $log | wc -l`
CRIT20=`$GREP "C. * x * (\-0|\-)\.37499[0-9] * (0| )\.11382[0-9] * (0| )\.03449[0-9] * (0| )\.33453[0-9] * (\-0|\-)\.13616[0-9] * (0| )\.52639[0-9]" $log | wc -l`
CRIT21=`$GREP "H. * x * (0| )\.00712[0-9] * (0| )\.01473[0-9] * (\-0|\-)\.68573[0-9] * (0| )\.22334[0-9] * (\-0|\-)\.02252[0-9] * (0| )\.00978[0-9]" $log | wc -l`
