
#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > energy_douglaskroll.info <<%EOF%
   energy_douglaskroll
   -------------------
   Molecule:         N2
   Wave Function:    Hartree-Fock
   Test Purpose:     Check the construction and use of Douglas-Kroll
                     one-electron potential for the calculation of SCF
                     energies
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > energy_douglaskroll.mol <<%EOF%
BASIS
cc-pVDZ
cs2 geom Amos Battaglia mp
cs2
    1
        7.    2
N     0.0 0.0 1.01
N     0.0 0.0 -1.01
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > energy_douglaskroll.dal <<%EOF%
**DALTON INPUT
.RUN WAVE FUNCTION
.DOUGLAS-KROLL
**INTEGRALS
**WAVE FUNCTION
.HF
*ORBITAL
.MOSTART
 H1DIAG
.NOSUPSYM
*END OF INPUT
%EOF%
#######################################################################



#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi


# Hartree-Fock energy
CRIT1=`$GREP "Final * HF energy\: * \-109\.0100313330[0-9][0-9]" $log | wc -l`
TEST[1]=`expr	$CRIT1`
CTRL[1]=1
ERROR[1]="ENERGY NOT CORRECT"


PASSED=1
for i in 1
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi

' > energy_douglaskroll.check
#######################################################################
