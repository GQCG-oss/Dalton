#!/bin/bash

# example cdash recipe
# adapt it to your needs and put it in crontab
# radovan bast <radovan.bast@uit.no> 2011-04-28

# set environment variables
# source /opt/intel/bin/compilervars.sh ia32
# export PATH=$PATH':/opt/intel/mkl'

TMP_DIR=/tmp/dalton
SCRATCH_DIR=/scratch/dalton-cdash-scratch
mkdir -p $TMP_DIR

git clone git@repo.ctcc.no:dalton.git $TMP_DIR

cd $TMP_DIR
./setup --fc=ifort --cc=icc --debug --scratch=$SCRATCH_DIR -D BUILDNAME="linux-ifort-debug"

cd $TMP_DIR/build

# choose make Experimental or make Nightly
  make Experimental
# make Nightly

rm -rf $TMP_DIR $SCRATCH_DIR

exit 0
