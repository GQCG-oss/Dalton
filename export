#!/bin/sh
   echo "export: adding files to tar-achive..."
   tar cf Dalton.new.tar \
      dalton.gnr configure export \
      crilib.cld equivalences Makefile.in \
      include/*.h \
      sirius/*.F   sirius/Makefile \
      eri/*.F     eri/Makefile \
      rsp/*.F     rsp/Makefile \
      abacus/*.F  abacus/*.c abacus/Makefile \
      gp/*.F gp/Makefile \
      amfi/*.F amfi/Makefile \
      pdpack/*.F  pdpack/Makefile \
      basis/* \
      test/trueresult/*out test/*.dal test/*.mol test/run.sh test/CONTENTS \
      Doc/*.tex Doc/*idx Doc/*.ind  Doc/*.bbl\
      tools/*.F tools/*.f\
      2> export.log
      echo "        done, see export.log for messages."
      echo " - gzip'ing archive..."
      echo
      gzip --best Dalton.new.tar
