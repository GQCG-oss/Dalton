#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > par_dftmm_3.info <<'%EOF%'
   par_dftmm_3
   -----------
   Molecule:         CH2O(DFT)/2 H2O(MM)
   Wave Function:    B3LYP / STO-3G  
   Test Purpose:     Test of DFT/MM Linear Response through ABACUS
%EOF%
#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > par_dftmm_3.mol <<'%EOF%'
ATOMBASIS
CH2O PLUS 2 WATERS
------------------------
    5    0         1 1.00D-12
        6.0   1    Basis=STO-3G
C           -1.588367    -.770650     .029109 0 1
        8.0   1    Basis=STO-3G
O           -1.657083     .436069    -.009750 0 2
        1.0   2    Basis=STO-3G
H           -.620668   -1.294822      .054251 0 3
H           -2.508043   -1.382001     .040282 0 4
   -0.669     2   Basis=MM
O             .975536    1.507219    -.082590 1 1
O            1.633705   -1.233280    -.078786 2 1
    0.3345    4   Basis=MM
H             .023200    1.300096    -.088063 1 2
H            1.113831    2.040431     .704778 1 3
H            1.600739    -.258639    -.086953 2 2
H            2.303878   -1.461228     .570065 2 3
%EOF%
#######################################################################
#  QM/MM INTERACTION INPUT
#######################################################################
cat > par_dftmm_3.pot <<'%EOF%'
**SYSTP
.NUMMTP
 1
.TYPE
 0
.MODEL
 SPC
.CHARGS
 4
 0.0000
 0.0000
 0.0000
 0.0000
*******
.TYPE
 1-2
.MODEL
 SPC_E01
.ALPISO
 1
 9.501
*******
**TWOIA (i,j=0,1,2,...,N; if i=0 then j.neq.0)
.LJ_A
 2
 0.00000
 0.00000
.LJ_B
 2
 0.000
 0.000
**END OF
%EOF%
#
#######################################################################
#  DALTON INPUT
#######################################################################
cat > par_dftmm_3.dal <<'%EOF%'
**DALTON
.RUN PROPERTIES
*QM3
.QM3
.PRINT
 1
.THRDIP
 1.0D-12
.MAXDIP
 180
.INTDIR
**INTEGRALS
.DIPLEN
.NUCPOT
.NELFLD
.PRINT
 2
**WAVE FUNCTIONS
.DFT
B3LYP
*SCF INPUT
.THRESH
1.0D-12
**PROPERTIES
.ALPHA
*ABALNR
.THRESH
1.0D-9
.FREQUE
 1
 0.040
**END OF DALTON INPUT
%EOF%
#
#######################################################################
#  CHECK SCRIPT
#######################################################################
#
echo $CHECK_SHELL >par_dftmm_3.check
cat >>par_dftmm_3.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

#
# Test of polarizability
# djw: ugly fix for XLF/SUSE compilation
#
CRIT1=`$GREP "Polarizability tensor for frequency     ( |0).040000 au" $log | wc -l`
CRIT2=`$GREP "Ex * 6\.37422[0-9] * ( \-|\-0)\.19551.. * (( |0)\.03597..|3\.5976...E\-02)" $log | wc -l`
CRIT3=`$GREP "Ey * ( \-|\-0)\.19551.. * 9\.56063(..|. ) * ( \-|\-0)\.22295.." $log | wc -l`
CRIT4=`$GREP "Ez * (( |0)\.03597..|3\.5976...E\-02) * ( \-|\-0)\.22295.. * 2\.6091(3|4)." $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 `
CTRL[1]=4
ERROR[1]="DFT/MM FREQUENCY DEPENDENT POLARIZABILITY NOT CORRECT"

PASSED=1 
for i in 1 
do
   if [ ${TEST[i]} -lt ${CTRL[i]} ]; then
     echo "${ERROR[i]} ( test = ${TEST[i]}; control = ${CTRL[i]} ); "
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi                
%EOF%
chmod +x par_dftmm_3.check
#######################################################################
