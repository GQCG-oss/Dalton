#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > acene_5_pariK.info <<'%EOF%'
   acene_5_pariK
   -------------
   Molecule:         C60/6-31G
   Wave Function:    HF
   Profile:          Exchange Matrix
   CPU Time:         9 min 30 seconds
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > acene_5_pariK.mol <<'%EOF%'
BASIS
cc-pVTZ Aux=cc-pVTZdenfit
ring 6
EXCITATION DIAGNOSTIC
Atomtypes=2 Nosymmetry 
Charge=6.0 Atoms=26
C        1.3771581239            0.0000000000            0.0000000000
C       -1.3771581239            0.0000000000            0.0000000000
C        2.6573167155            2.3231190448            0.0000000000
C       -2.6573167155            2.3231190448            0.0000000000
C        2.6573167155           -2.3231190448            0.0000000000
C       -2.6573167155           -2.3231190448            0.0000000000
C        1.3760848728            4.6257711891            0.0000000000
C       -1.3760848728            4.6257711891            0.0000000000
C        1.3760848728           -4.6257711891            0.0000000000
C       -1.3760848728           -4.6257711891            0.0000000000
C        2.6557768117            6.9721726247            0.0000000000
C       -2.6557768117            6.9721726247            0.0000000000
C        2.6557768117           -6.9721726247            0.0000000000
C       -2.6557768117           -6.9721726247            0.0000000000
C        1.3740031395            9.2487437378            0.0000000000
C       -1.3740031395            9.2487437378            0.0000000000
C        1.3740031395           -9.2487437378            0.0000000000
C       -1.3740031395           -9.2487437378            0.0000000000
C        2.6595765418           11.6354825921            0.0000000000
C       -2.6595765418           11.6354825921            0.0000000000
C        2.6595765418          -11.6354825921            0.0000000000
C       -2.6595765418          -11.6354825921            0.0000000000
C        1.3523849376           13.8475133958            0.0000000000
C       -1.3523849376           13.8475133958            0.0000000000
C        1.3523849376          -13.8475133958            0.0000000000
C       -1.3523849376          -13.8475133958            0.0000000000
Charge=1.0 Atoms=16
H        4.7076166007            2.3235922350            0.0000000000
H       -4.7076166007            2.3235922350            0.0000000000
H        4.7076166007           -2.3235922350            0.0000000000
H       -4.7076166007           -2.3235922350            0.0000000000
H        4.7063027531            6.9734477243            0.0000000000
H       -4.7063027531            6.9734477243            0.0000000000
H        4.7063027531           -6.9734477243            0.0000000000
H       -4.7063027531           -6.9734477243            0.0000000000
H        4.7087221288           11.6364025739            0.0000000000
H       -4.7087221288           11.6364025739            0.0000000000
H        4.7087221288          -11.6364025739            0.0000000000
H       -4.7087221288          -11.6364025739            0.0000000000
H        2.3515443920           15.6345403780            0.0000000000
H       -2.3515443920           15.6345403780            0.0000000000
