#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > acene_1_pariK.info <<'%EOF%'
   acene_1_pariK
   -------------
   Molecule:         C60/6-31G
   Wave Function:    HF
   Profile:          Exchange Matrix
   CPU Time:         9 min 30 seconds
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > acene_1_pariK.mol <<'%EOF%'
BASIS
cc-pVTZ Aux=cc-pVTZdenfit
ring 2
EXCITATION DIAGNOSTIC
Atomtypes=2 Nosymmetry
Charge=6.0 Atoms=10
C        0.0000000000            1.3510624627            0.0000000000
C        0.0000000000           -1.3510624627            0.0000000000
C        4.5861200889            1.3352076305            0.0000000000
C       -4.5861200889            1.3352076305            0.0000000000
C        4.5861200889           -1.3352076305            0.0000000000
C       -4.5861200889           -1.3352076305            0.0000000000
C        2.3476431694            2.6430873534            0.0000000000
C       -2.3476431694            2.6430873534            0.0000000000
C        2.3476431694           -2.6430873534            0.0000000000
C       -2.3476431694           -2.6430873534            0.0000000000
Charge=1.0 Atoms=8
H        6.3665845112            2.3463325186            0.0000000000
H       -6.3665845112            2.3463325186            0.0000000000
H        6.3665845112           -2.3463325186            0.0000000000
H       -6.3665845112           -2.3463325186            0.0000000000
H        2.3459293541            4.6924808668            0.0000000000
H       -2.3459293541            4.6924808668            0.0000000000
H        2.3459293541           -4.6924808668            0.0000000000
H       -2.3459293541           -4.6924808668            0.0000000000
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > acene_1_pariK.dal <<'%EOF%'
**PROFILE
.EXCHANGE
**INTEGRALS
.PARI-K
**WAVE FUNCTIONS
.HF
*DENSOPT
*END OF INPUT
%EOF%

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >acene_1_pariK.check
cat >> acene_1_pariK.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi
CRIT1=`$GREP "Exchange energy, mat_dotproduct\(D,K\)\= * \-XXX\.XXXXXX" $log | wc -l`
TEST[1]=`expr  $CRIT1`
CTRL[1]=1
ERROR[1]="ENERGY NOT CORRECT -"

PASSED=1
for i in 1
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
      echo ${ERROR[i]}
      PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
   echo PROF ENDED PROPERLY
   exit 0
else
   echo THERE IS A PROBLEM
   exit 1
fi

%EOF%
#######################################################################
