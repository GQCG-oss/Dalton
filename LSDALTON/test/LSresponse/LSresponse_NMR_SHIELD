#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > LSresponse_NMR_SHIELD.info <<'%EOF%'
   LSresponse_NMR_SHIELD 
   -------------
   Molecule:         Methane with -OH, -F, and Cl
   Wave Function:    DFT (B3LYP) / 6-31G 
   Test Purpose:     Test nuclear magnetic shielding tensor
                     
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > LSresponse_NMR_SHIELD.mol <<'%EOF%'
ATOMBASIS
Calculation of London shielding constants through ABACUS
Methane with -OH, -F, and Cl, b3lyp/6-31+g(d,p) optimized geo.
Atomtypes=5 Nosymmetry
Charge=1.  Atoms=2  Bas=6-31G
H     0.520821    0.080551    1.451675
H     1.965224   -1.097271    0.053015
Charge=6.  Atoms=1  Bas=6-31G
C     0.430423    0.005605    0.364687
Charge=8.  Atoms=1  Bas=3-21G
O     1.023374   -1.101579   -0.177807
Charge=9.  Atoms=1  Bas=3-21G
F     0.989971    1.157250   -0.160167
Charge=17. Atoms=1  Bas=3-21G
Cl   -1.303842   -0.036443   -0.048756
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > LSresponse_NMR_SHIELD.dal <<'%EOF%'
**WAVE FUNCTIONS
.DFT
B3LYP
*DENSOPT
.RH
.DIIS
.CONVDYN
TIGHT
**RESPONSE
*SHIELD
*SOLVER
.CONVDYN
TIGHT
*END OF INPUT
%EOF%
#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >LSresponse_NMR_SHIELD.check
cat >>LSresponse_NMR_SHIELD.check <<'%EOF%'

log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# ENERGY                                                                              
CRIT1=`$GREP "Final DFT energy\: *\-663\.776768" $log | wc -l`         
TEST[1]=`expr   $CRIT1`        
CTRL[1]=1                                       
ERROR[1]="DFT ENERGY NOT CORRECT -"  

# Absolute chemical shift
CRIT1=`$GREP "H * 61.914" $log | wc -l` 
CRIT2=`$GREP "H * 69.137" $log | wc -l` 
CRIT3=`$GREP "C * 236.48" $log | wc -l` 
CRIT4=`$GREP "O * 315.54" $log | wc -l` 
CRIT5=`$GREP "F * 328.49" $log | wc -l` 
CRIT6=`$GREP "Cl * 676.72" $log | wc -l` 
TEST[2]=`expr   $CRIT1 + $CRIT2 + $CRIT3 + $CRIT4 + $CRIT5 + $CRIT6`     
CTRL[2]=6
ERROR[2]="Absolute chemical shift are wrong"     

CRIT1=`$GREP " H * X  * 57\.001[0-9][0-9][0-9][0-9][0-9] * 2\.301[0-9][0-9][0-9][0-9][0-9] * 6\.432[0-9][0-9][0-9][0-9][0-9]" $log | wc -l` 
CRIT2=`$GREP " H * Y  * 1\.7905[0-9][0-9][0-9][0-9] * 48\.009[0-9][0-9][0-9][0-9][0-9] * 1\.3735[0-9][0-9][0-9][0-9]" $log | wc -l` 
CRIT3=`$GREP " H * Z  * 7\.3035[0-9][0-9][0-9][0-9] * \-3\.6253[0-9][0-9][0-9][0-9] * 80\.734[0-9][0-9][0-9][0-9][0-9]" $log | wc -l` 
CRIT4=`$GREP " H * X  * 93\.752[0-9][0-9][0-9][0-9][0-9] * \-7\.2321[0-9][0-9][0-9][0-9] * 0?\.4672" $log | wc -l` 
CRIT5=`$GREP " C * Y  * 0?\.109[0-9][0-9][0-9][0-9][0-9] * 217\.79[0-9][0-9][0-9][0-9][0-9][0-9] * \-20\.620[0-9][0-9][0-9][0-9][0-9]" $log | wc -l` 
CRIT6=`$GREP " O * Z  * 1\.604[0-9][0-9][0-9][0-9][0-9] * 1\.925[0-9][0-9][0-9][0-9][0-9] * 301\.02[0-9][0-9][0-9][0-9][0-9][0-9]" $log | wc -l` 
CRIT7=`$GREP " F * Y  * \-36\.00[0-9][0-9][0-9][0-9][0-9][0-9] * 324\.43[0-9][0-9][0-9][0-9][0-9][0-9] * 28\.332[0-9][0-9][0-9][0-9][0-9]" $log | wc -l` 
CRIT8=`$GREP " Cl * Y  * \-12\.848[0-9][0-9][0-9][0-9][0-9] * 542\.60[0-9][0-9][0-9][0-9][0-9][0-9] * 17\.365[0-9][0-9][0-9][0-9][0-9]" $log | wc -l` 
TEST[3]=`expr   $CRIT1 + $CRIT2 + $CRIT3 + $CRIT4 + $CRIT5 + $CRIT6 + $CRIT7 + $CRIT8`     
CTRL[3]=8
ERROR[3]="Shielding tensor is wrong"     

# B3LYP  B3LYP  B3LYP  B3LYP  B3LYP  B3LYP  B3LYP  B3LYP  B3LYP 
# ENERGY                                                                              
#CRIT1=`$GREP "Final DFT energy\: *\-663\.518098" $log | wc -l`         
#TEST[1]=`expr   $CRIT1`        
#CTRL[1]=1                                       
#ERROR[1]="DFT ENERGY NOT CORRECT -"  
# Absolute chemical shift
#CRIT1=`$GREP "H * 61.914" $log | wc -l` 
#CRIT2=`$GREP "H * 69.137" $log | wc -l` 
#CRIT3=`$GREP "C * 236.48" $log | wc -l` 
#CRIT4=`$GREP "O * 315.54" $log | wc -l` 
#CRIT5=`$GREP "F * 328.49" $log | wc -l` 
#CRIT6=`$GREP "Cl * 676.72" $log | wc -l` 
#TEST[2]=`expr   $CRIT1 + $CRIT2 + $CRIT3 + $CRIT4 + $CRIT5 + $CRIT6`     
#CTRL[2]=6
#ERROR[2]="Absolute chemical shift are wrong"     
#CRIT1=`$GREP " H * X  * 54\.961[0-9][0-9][0-9][0-9][0-9] * 3\.121[0-9][0-9][0-9][0-9][0-9] * 5\.668[0-9][0-9][0-9][0-9][0-9]" $log | wc -l` 
#CRIT2=`$GREP " H * Y  * 2\.0288[0-9][0-9][0-9][0-9] * 45\.706[0-9][0-9][0-9][0-9][0-9] * 0?\.86246[0-9][0-9][0-9]" $log | wc -l` 
#CRIT3=`$GREP " H * Z  * 7\.7664[0-9][0-9][0-9][0-9] * \-4\.0714[0-9][0-9][0-9][0-9] * 79\.080[0-9][0-9][0-9][0-9][0-9]" $log | wc -l` 
#CRIT4=`$GREP " H * X  * 92\.667[0-9][0-9][0-9][0-9][0-9] * \-9\.1118[0-9][0-9][0-9][0-9] * \-0?\.53711[0-9][0-9][0-9]" $log | wc -l` 
#CRIT5=`$GREP " C * Y  * 1\.8425[0-9][0-9][0-9][0-9] * 233\.73[0-9][0-9][0-9][0-9][0-9][0-9] * \-13\.235[0-9][0-9][0-9][0-9][0-9]" $log | wc -l` 
#CRIT6=`$GREP " O * Z  * \-1\.6068[0-9][0-9][0-9][0-9] * 6\.1949[0-9][0-9][0-9][0-9] * 301\.25[0-9][0-9][0-9][0-9][0-9][0-9]" $log | wc -l` 
#CRIT7=`$GREP " F * Y  * \-31\.022[0-9][0-9][0-9][0-9][0-9] * 306\.15[0-9][0-9][0-9][0-9][0-9][0-9] * 36\.259[0-9][0-9][0-9][0-9][0-9]" $log | wc -l` 
#CRIT8=`$GREP " Cl * Y  * \-24\.172[0-9][0-9][0-9][0-9][0-9] * 481\.18[0-9][0-9][0-9][0-9][0-9][0-9] * 32\.415[0-9][0-9][0-9][0-9][0-9]" $log | wc -l` 
#TEST[3]=`expr   $CRIT1 + $CRIT2 + $CRIT3 + $CRIT4 + $CRIT5 + $CRIT6 + $CRIT7 + $CRIT8`     
#CTRL[3]=8
#ERROR[3]="Shielding tensor is wrong"     

# Memory test
CRIT1=`$GREP "Allocated memory \(TOTAL\): * 0 byte" $log | wc -l`
TEST[4]=`expr  $CRIT1`
CTRL[4]=1
ERROR[4]="Memory leak -"

PASSED=1
for i in 1 2 3 4
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi

%EOF%
#######################################################################
