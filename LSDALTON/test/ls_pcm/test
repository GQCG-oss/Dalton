#!/usr/bin/env python

import os
import sys

sys.path.append(os.path.join(os.path.dirname(__file__), '..'))
from runtest_lsdalton import Filter, TestRun

test = TestRun(__file__, sys.argv)

f = Filter()
f_hf = Filter()
f_hf.add(string = 'Nuclear repulsion:',
      rel_tolerance = 1.0e-9)
f_hf.add(string = 'Electronic energy:',
      rel_tolerance = 1.0e-9)
f_hf.add(string = 'PCM polarization energy:',
      abs_tolerance = 1.0e-7)
f_hf.add(string = 'Final HF energy:',
      rel_tolerance = 1.0e-9)

test.run(['arh_energy_hf.dal', 'energy_hf.dal', 'energy_hf_separate.dal'], ['H2O.mol', 'CH4.mol'], {'out': f_hf}, args = '-put @pcmsolver.inp')

f_dft = Filter()
f_dft.add(string = 'Nuclear repulsion:',
      rel_tolerance = 1.0e-9)
f_dft.add(string = 'Electronic energy:',
      rel_tolerance = 1.0e-9)
f_dft.add(string = 'PCM polarization energy:',
      abs_tolerance = 1.0e-7)
f_dft.add(string = 'Final DFT energy:',
      rel_tolerance = 1.0e-9)
test.run(['arh_energy_lda.dal', 'energy_lda.dal', 'energy_lda_separate.dal'], ['H2O.mol', 'CH4.mol'], {'out': f_dft}, args = '-put @pcmsolver.inp')

sys.exit(test.return_code)
