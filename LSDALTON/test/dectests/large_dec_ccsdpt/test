#!/usr/bin/env python

import os
import sys
import shutil

sys.path.append(os.path.join(os.path.dirname(__file__), '..', '..'))
from runtest_lsdalton import Filter, TestRun

test = TestRun(__file__, sys.argv)

# Input files:
DAL = "large_dec_ccsdpt"
MOL  = "hexadecaoctaene"


# Define filter
# =============
f = Filter()
f.add(string = 'E: Hartree-Fock energy',
      rel_tolerance = 1.0e-8)


#f.add(from_string = 'Print single and pair fragment energies',
#      to_string   = 'RI-MP2 Lagrangian correlation energy :',
#      abs_tolerance = 5.0e-4)

f.add(string = 'Allocated memory (TOTAL)')

f.add(string = 'Memory in use for array4',
      rel_tolerance = 1.0e-9)


# Build list of files to use for restart
# ======================================
hf_restart  = ['cmo_orbitals.u','lcm_orbitals.u','dens.restart','fock.restart','overlapmatrix']
   
put_restart = ['-put','"'] + hf_restart + ['"']
arg_restart = " ".join(put_restart)

# Run second calculation with RESTART keyword
# ===========================================
test.run([DAL+'.dal'], [MOL+'.mol'], {'out': f}, args = arg_restart)

sys.exit(test.return_code)

