#!/usr/bin/env python

import os
import sys

sys.path.append(os.path.join(os.path.dirname(__file__), '..', '..'))
from runtest_lsdalton import Filter, TestRun

test = TestRun(__file__, sys.argv)

f = Filter()
f.add(string = 'Final HF energy',
      rel_tolerance = 1.0e-8)

f.add(string = 'Correlation energy',
      rel_tolerance = 1.0e-3)

f.add(string = 'Total CCSD(T) energy',
      rel_tolerance = 1.0e-8)

f.add(from_string = 'VALENCE LOCALITY',
      to_string   = 'Min. sigma_4 and orb.number',
      abs_tolerance = 1.0e-4)

f.add(from_string = 'VIRTUAL LOCALITY',
      to_string   = 'Min. sigma_4 and orb.number',
      abs_tolerance = 1.0e-4)

f.add(from_string = 'Print single and pair fragment energies',
      to_string   = 'Total CCSD(T) occupied correlation energy',
      abs_tolerance = 1.0e-5)

f.add(string = 'Allocated memory (TOTAL)')

f.add(string = 'Memory in use for array3',
      rel_tolerance = 1.0e-9)

f.add(string = 'Memory in use for array4',
      rel_tolerance = 1.0e-9)

test.run(['decccsdpt_fragopt.dal'], ['ethylene.mol'], {'out': f})

sys.exit(test.return_code)
