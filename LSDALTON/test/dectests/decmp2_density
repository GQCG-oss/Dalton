#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > decmp2_density.info <<'%EOF%'
   DEC-MP2 density matrix using frozen core
   ----------------------------------------
   Molecule:         C2H4
   Wave Function:    MP2 / 6-31G
   Test Purpose:     Calculate DEC-MP2 energy and density matrix (Kasper K)
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > decmp2_density.mol <<'%EOF%'
BASIS
3-21G


Atomtypes=2 Charge=0 Nosymmetry Angstrom 
Charge=6.0 Atoms=2
C          0.65790       -0.00446        0.06398
C         -0.65783        0.00446       -0.06385
Charge=1.0 Atoms=4
H          1.16103        0.06607        1.02388
H          1.33519       -0.08301       -0.78143
H         -1.33549        0.08301        0.78127
H         -1.16080       -0.06606       -1.02386
%EOF%
#######################################################################
#  DALTON INPUT
#######################################################################
cat > decmp2_density.dal <<'%EOF%'
**WAVE FUNCTIONS
.HF
*DENSOPT
.ARH
.START
TRILEVEL
.CONVDYN
TIGHT
**INFO
.DEBUG_MPI_MEM
**DEC
.FROZENCORE
.DENSITY
.FOT
1.0e-5
.MEMORY
2.0
*END OF INPUT
%EOF%
#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >decmp2_density.check
cat >>decmp2_density.check <<'%EOF%'

log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# HF ENERGY 
CRIT1=`$GREP "Final HF energy: * \-77\.60012314" $log | wc -l`
TEST[1]=`expr   $CRIT1`
CTRL[1]=1
ERROR[1]="HF ENERGY NOT CORRECT -"

# Total correlation energy 
CRIT1=`$GREP "Correlation energy  \: * \-0.1805" $log | wc -l`
TEST[2]=`expr   $CRIT1`
CTRL[2]=1
ERROR[2]="Total MP2 Lagrangian correlation energy is not correct"

# Number of electrons for Hartree-Fock state
CRIT1=`$GREP "HF state \: Number of electrons = * 16.000000" $log | wc -l`
TEST[3]=`expr   $CRIT1`
CTRL[3]=1
ERROR[3]="Total number of electrons for Hartree-Fock state is not correct"

# Number of electrons for MP2 state
CRIT1=`$GREP "MP2 state\: Number of electrons = * 1[5-6].[0-9]" $log | wc -l`
TEST[4]=`expr   $CRIT1`
CTRL[4]=1
ERROR[4]="Total number of electrons for MP2 state is not correct"

# Memory test for total memory                                             
CRIT1=`$GREP "Allocated memory \(TOTAL\): * 0 byte" $log | wc -l`         
TEST[5]=`expr  $CRIT1`                                                    
CTRL[5]=1                                                                 
ERROR[5]="Memory leak -"

# Memory test for array4                                                  
CRIT1=`$GREP "Memory in use for array4 * \: * 0.000 * GB" $log | wc -l`   
TEST[6]=`expr  $CRIT1`                                                    
CTRL[6]=1                                                                 
ERROR[6]="Memory leak for array4 -" 

# MPI Memory test
CRIT1=`$GREP "[0-9][0-9] byte  \- Should be zero \- otherwise a leakage is present" $log | wc -l`
TEST[7]=`expr  $CRIT1`
CTRL[7]=0
ERROR[7]="MPI Memory leak -"

PASSED=1
for i in 1 2 3 4 5 6 7
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi

%EOF%




