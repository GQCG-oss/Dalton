#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi

DIR="`dirname \"$0\"`"

#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > LSlib_cam_reg.info <<'%EOF%'
   LSlib_cam_reg
   -------------
   Molecule:         5 HCN molecules placed 20 atomic units apart
   Wave Function:    cam-B3LYP/STO-2G
   Test Purpose:     Check LSlib routines
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > LSlib_cam_reg.mol <<'%EOF%'
BASIS
STO-2G
2 HCN molecules placed 20 atomic units apart
STRUCTURE IS NOT OPTIMIZED. STO-2G basis 
Atomtypes=3 Nosymmetry
Charge=1. Atoms=2
H   0.0   0.0    -1.0 
H   0.0  20.0    -1.0 
Charge=7. Atoms=2
N   0.0   0.0     1.5
N   0.0  20.0     1.5
Charge=6. Atoms=2
C   0.0   0.0     0.0
C   0.0  20.0     0.0
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > LSlib_cam_reg.dal <<'%EOF%'
**WAVE FUNCTIONS
.DFT
 CAMB3LYP
*DFT INPUT
.GRID3
*END OF INPUT
%EOF%

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >LSlib_cam_reg.check
cat $DIR/../../tools/lslibtester.sh >> LSlib_cam_reg.check

#######################################################################
#  REF FILE
#######################################################################
cp $DIR/ref/LSlib_cam_reg.ref LSlib_cam_reg.ref
#######################################################################
