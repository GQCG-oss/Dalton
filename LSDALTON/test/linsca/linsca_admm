#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > linsca_admm.info <<'%EOF%'
   linsca_admm
   -------------
   Molecule:         HCN
   Wave Function:    HF
   Test Purpose:     Check ADMM exchange energy (JCTC 6(8):2348â€“2364, 2010) 
                     and gradient contributions.
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > linsca_admm.mol <<'%EOF%'
BASIS
6-31G* Aux=3-21G
HCN molecule

Atomtypes=3 Nosymmetry
Charge=1. Atoms=1
H   0.0   0.0    -1.0 
Charge=7. Atoms=1
N   0.0   0.0     1.5
Charge=6. Atoms=1
C   0.0   0.0     0.0
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > linsca_admm.dal <<'%EOF%'
**GENERAL
.NOGCBASIS
**INTEGRALS
.ADMM-DF
**WAVE FUNCTIONS
.HF
*DENSOPT
.START
TRILEVEL
.NOATOMSTART
.RH
.DIIS
.CONVTHR
8.0d-5
**RESPONS
*MOLGRA
*END OF INPUT
%EOF%

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >linsca_admm.check
cat >> linsca_admm.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# ENERGY test
CRIT1=`$GREP "Final HF energy: * -91.4060652[7-8]" $log | wc -l`
TEST[1]=`expr  $CRIT1`
CTRL[1]=1
ERROR[1]="ENERGY NOT CORRECT -"

# GRADIENT test
CRIT1=`$GREP "H * \-?0?\.000000000[0-9] * \-?0?\.000000000[0-9] * 2\.6779095" $log | wc -l`
CRIT2=`$GREP "N * \-?0?\.000000000[0-9] * \-?0?\.000000000[0-9] * \-3\.1058367" $log | wc -l`
CRIT3=`$GREP "C * \-?0?\.000000000[0-9] * \-?0?\.000000000[0-9] * 0\.4279336" $log | wc -l`
TEST[2]=`expr  $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[2]=3
ERROR[2]="GRADIENT NOT CORRECT -"

# Memory test
CRIT1=`$GREP "Allocated memory \(TOTAL\): * 0 byte" $log | wc -l`
TEST[3]=`expr  $CRIT1`
CTRL[3]=1
ERROR[3]="Memory leak -"

PASSED=1
for i in 1 2 3
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
      echo ${ERROR[i]}
      PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
   echo TEST ENDED PROPERLY
   exit 0
else
   echo THERE IS A PROBLEM
   exit 1
fi

%EOF%
#######################################################################
