#!/bin/sh
#
# This is the script for generating files for a specific Dalton test job.
#
# For the .check file ksh or bash is preferred, otherwise use sh
# (and hope it is not the old Bourne shell, which will not work)
#
if [ -x /bin/ksh ]; then
   CHECK_SHELL='#!/bin/ksh'
elif [ -x /bin/bash ]; then
   CHECK_SHELL='#!/bin/bash'
else
   CHECK_SHELL='#!/bin/sh'
fi


#######################################################################
#  TEST DESCRIPTION
#######################################################################
cat > linsca_admm_df.info <<'%EOF%'
   linsca_admm_df
   -------------
   Molecule:         HCN
   Wave Function:    HF
   Test Purpose:     Check ADMM exchange (JCTC 5,3010. 2009)
                     and gradient contributions.
%EOF%

#######################################################################
#  MOLECULE INPUT
#######################################################################
cat > linsca_admm_df.mol <<'%EOF%'
BASIS
6-31G* Aux=df-def2 CABS=6-31G JK=3-21G
HCN molecule

Atomtypes=3 Nosymmetry
Charge=1. Atoms=1
H   0.0   0.0    -1.0 
Charge=7. Atoms=1
N   0.0   0.0     1.5
Charge=6. Atoms=1
C   0.0   0.0     0.0
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > linsca_admm_df.dal <<'%EOF%'
**INTEGRALS
.ADMM-JK
.DENSFIT
**WAVE FUNCTIONS
.HF
*DENSOPT
.START
TRILEVEL
.NOATOMSTART
.RH
.DIIS
#.CONVTHR
#1.5d-5
**RESPONS
*MOLGRA
*END OF INPUT
%EOF%

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo $CHECK_SHELL >linsca_admm_df.check
cat >> linsca_admm_df.check <<'%EOF%'
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# ENERGY test
CRIT1=`$GREP "Final HF energy: * -91.4060974[7-8]" $log | wc -l`
TEST[1]=`expr  $CRIT1`
CTRL[1]=1
ERROR[1]="ENERGY NOT CORRECT -"

# GRADIENT test
CRIT1=`$GREP "H * \-?0?\.000000000[0-9] * \-?0?\.000000000[0-9] *   2\.677927532[0-9]" $log | wc -l`
CRIT2=`$GREP "N * \-?0?\.000000000[0-9] * \-?0?\.000000000[0-9] * \-3\.105817785[0-9]" $log | wc -l`
CRIT3=`$GREP "C * \-?0?\.000000000[0-9] * \-?0?\.000000000[0-9] *   0\.427896775[0-9]" $log | wc -l`
TEST[2]=`expr  $CRIT1 \+ $CRIT2 \+ $CRIT3 `
CTRL[2]=3
ERROR[2]="GRADIENT NOT CORRECT -"

# Memory test
CRIT1=`$GREP "Allocated memory \(TOTAL\): * 0 byte" $log | wc -l`
TEST[3]=`expr  $CRIT1`
CTRL[3]=1
ERROR[3]="Memory leak -"

PASSED=1
for i in 1 2 3
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
      echo ${ERROR[i]}
      PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
   echo TEST ENDED PROPERLY
   exit 0
else
   echo THERE IS A PROBLEM
   exit 1
fi

%EOF%
#######################################################################
