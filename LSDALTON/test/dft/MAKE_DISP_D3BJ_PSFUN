#/bin/bash
#### Simen Reine: provide functional name in small letters to set up a simple testcase for a new functional
dal=$1
DAL=`echo $dal | tr '[:lower:]' '[:upper:]'`
mkdir LSDALTON_dftdisp_d3bj_psfun_$dal
git add LSDALTON_dftdisp_d3bj_psfun_$dal

cp LSDALTON_dftdisp_d3bj_psfun_b3lyp/h2o.mol LSDALTON_dftdisp_d3bj_psfun_$dal
more LSDALTON_dftdisp_d3bj_psfun_b3lyp/b3lyp.dal | sed "s/B3LYP/"$DAL"/g" > LSDALTON_dftdisp_d3bj_psfun_$dal/$dal.dal
more LSDALTON_dftdisp_d3bj_psfun_b3lyp/test     | sed "s/b3lyp/"$dal"/g" > LSDALTON_dftdisp_d3bj_psfun_$dal/test
mkdir LSDALTON_dftdisp_d3bj_psfun_$dal/result
cd LSDALTON_dftdisp_d3bj_psfun_$dal
~/Dalton/2014/build-debug5.0/lsdalton $dal h2o
cd ..
cp LSDALTON_dftdisp_d3bj_psfun_$dal/${dal}_h2o.out LSDALTON_dftdisp_d3bj_psfun_$dal/result/

git add LSDALTON_dftdisp_d3bj_psfun_$dal/h2o.mol
git add LSDALTON_dftdisp_d3bj_psfun_$dal/$dal.dal
git add LSDALTON_dftdisp_d3bj_psfun_$dal/test
git add LSDALTON_dftdisp_d3bj_psfun_$dal/result
git add LSDALTON_dftdisp_d3bj_psfun_$dal/result/${dal}_h2o.out

