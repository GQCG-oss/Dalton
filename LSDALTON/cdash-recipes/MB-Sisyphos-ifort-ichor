TMP_DIR=/home/sisyphos/NightlyTesting/tmp/DaltonIfortIchor
SCRATCH_DIR=/tmp/sisyphos/DaltonIfortIchor
rm -rf $TMP_DIR
rm -rf $SCRATCH_DIR

git clone git@repo.ctcc.no:dalton.git $TMP_DIR
cd $TMP_DIR
export OMP_NUM_THREADS=8
export DALTON_TMPDIR=$SCRATCH_DIR
export DALTON_NUM_MPI_PROCS=1
export CTEST_PROJECT_NAME=LSDALTON

source /opt/intel/bin/compilervars.sh intel64
source /opt/intel/composer_xe_2011_sp1.11.339/mkl/bin/mklvars.sh intel64
export MATH_ROOT=/opt/intel/composer_xe_2011_sp1.11.339/mkl

./setup --fc=ifort --cc=icc --cxx=icpc --int64 --timings --omp --ichor -D BUILDNAME="MB-Sisyphos-ifort-ichor" build

cd build
ctest --track Ichor -D Nightly -L linsca
exit 0

