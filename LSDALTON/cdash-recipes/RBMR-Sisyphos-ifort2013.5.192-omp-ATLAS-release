TMP_DIR=/home/sisyphos/NightlyTesting/tmp/DaltonIfortRelease
SCRATCH_DIR=/tmp/sisyphos/DaltonIfortRelease
rm -rf $TMP_DIR
rm -rf $SCRATCH_DIR

git clone --recursive git@gitlab.com:dalton/dalton.git $TMP_DIR
cd $TMP_DIR
git checkout Dalton2015

export OMP_NUM_THREADS=6
source /opt/intel/bin/compilervars.sh intel64

#source /opt/intel/mkl/bin/mklvars.sh intel64
#export MATH_ROOT=/opt/intel/mkl
export MATH_ROOT=/lib64/atlas
export DALTON_TMPDIR=$SCRATCH_DIR
export DALTON_NUM_MPI_PROCS=1
export CTEST_PROJECT_NAME=LSDALTON

./setup --fc=ifort --cc=icc --cxx=icpc --omp -DENABLE_DEC=ON -DENABLE_TENSORS=ON -D BUILDNAME="RB-Sisyphos-ifort2013.5.192-omp-ATLAS-release" build

cd build
make release
#this creates a tar file named DALTON-Source.tar.gz
if [[ -e  DALTON-Source.tar.gz ]]; then
 tar -zxvf DALTON-Source.tar.gz
 cd DALTON-Source
./setup --fc=ifort --cc=icc --cxx=icpc --omp -DENABLE_DEC=ON -DENABLE_TENSORS=ON -D BUILDNAME="RBMR-Sisyphos-ifort2013.5.192-omp-ATLAS-release" build
 cd build
 ctest --track ReleaseBranch2015MakeRelease -D Nightly -L linsca
fi
exit 0

