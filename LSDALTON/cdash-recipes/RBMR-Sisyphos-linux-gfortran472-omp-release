TMP_DIR=/home/sisyphos/NightlyTesting/tmp/DaltonGfortranReleaseRBMR
SCRATCH_DIR=/tmp/sisyphos/DaltonGfortranReleaseRBMR
rm -rf $TMP_DIR
rm -rf $SCRATCH_DIR

git clone --recursive git@gitlab.com:dalton/dalton.git $TMP_DIR
cd $TMP_DIR
git checkout Dalton2015
export OMP_NUM_THREADS=6
#export MATH_ROOT=
export DALTON_TMPDIR=$SCRATCH_DIR
export DALTON_NUM_MPI_PROCS=1
export CTEST_PROJECT_NAME=LSDALTON

./setup --fc=gfortran --cc=gcc --cxx=g++ --omp -DENABLE_DEC=ON -D BUILDNAME="RB-Sisyphos-linux-gfortran472-omp-release" build

cd build
make release
#this creates a tar file named DALTON-Source.tar.gz
if [[ -e  DALTON-Source.tar.gz ]]; then
 tar -zxvf DALTON-Source.tar.gz
 cd DALTON-Source
./setup --fc=gfortran --cc=gcc --cxx=g++ --omp -DENABLE_DEC=ON -D BUILDNAME="RBMR-Sisyphos-linux-gfortran472-omp-release" build
 cd build
 ctest --track ReleaseBranch2015MakeRelease -D Nightly -L linsca
fi
exit 0
