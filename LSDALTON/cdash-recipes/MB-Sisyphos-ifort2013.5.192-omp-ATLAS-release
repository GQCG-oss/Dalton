TMP_DIR=/home/sisyphos/NightlyTesting/tmp/DaltonIfortRelease
SCRATCH_DIR=/tmp/sisyphos/DaltonIfortRelease
rm -rf $TMP_DIR
rm -rf $SCRATCH_DIR

git clone --recursive git@gitlab.com:dalton/dalton.git $TMP_DIR
cd $TMP_DIR
export OMP_NUM_THREADS=6
source /opt/intel/bin/compilervars.sh intel64

#source /opt/intel/mkl/bin/mklvars.sh intel64
#export MATH_ROOT=/opt/intel/mkl
export MATH_ROOT=/lib64/atlas
export DALTON_TMPDIR=$SCRATCH_DIR
export DALTON_NUM_MPI_PROCS=1
export CTEST_PROJECT_NAME=LSDALTON

./setup --fc=ifort --cc=icc --cxx=icpc --omp -DENABLE_DEC=ON -D BUILDNAME="MB-Sisyphos-ifort2013.5.192-omp-ATLAS-release" build

cd build
ctest -D Nightly -L linsca
exit 0

