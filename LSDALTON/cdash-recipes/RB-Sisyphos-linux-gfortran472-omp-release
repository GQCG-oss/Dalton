TMP_DIR=/home/sisyphos/NightlyTesting/tmp/DaltonGfortranReleaseRB
SCRATCH_DIR=/tmp/sisyphos/DaltonGfortranReleaseRB
rm -rf $TMP_DIR
rm -rf $SCRATCH_DIR

git clone git@repo.ctcc.no:dalton.git $TMP_DIR
git checkout Dalton2013_release
cd $TMP_DIR
export OMP_NUM_THREADS=6
#export MATH_ROOT=
export DALTON_TMPDIR=$SCRATCH_DIR
export DALTON_NUM_MPI_PROCS=1
export CTEST_PROJECT_NAME=LSDALTON

./setup --fc=gfortran --cc=gcc --cxx=g++ --omp -D BUILDNAME="RB-Sisyphos-linux-gfortran472-omp-release" build

cd build
ctest -D Nightly -L linsca
exit 0
