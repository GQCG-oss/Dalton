TMP_DIR=/home/sisyphos/NightlyTesting/tmp/DaltonPGIDebug
SCRATCH_DIR=/tmp/sisyphos/DaltonPGIDebug
rm -rf $TMP_DIR
rm -rf $SCRATCH_DIR

PATH=/opt/pgi/linux86-64/14.9/bin:$PATH
export LM_LICENSE_FILE=/opt/pgi/linux86-64/14.1/license.file

git clone --recursive git@gitlab.com:dalton/dalton.git $TMP_DIR
cd $TMP_DIR
export OMP_NUM_THREADS=6
#export MATH_ROOT=
export DALTON_TMPDIR=$SCRATCH_DIR
export DALTON_NUM_MPI_PROCS=1
export CTEST_PROJECT_NAME=LSDALTON

./setup --fc=pgf90 --cc=pgcc --cxx=pgc++ --check --type=debug -D BUILDNAME="MB-Sisyphos-pgi-debug" -D ENABLE_EFS=OFF -D ENABLE_VPOTDAMP=OFF build

cd build
ctest -D Nightly -L linsca
exit 0

