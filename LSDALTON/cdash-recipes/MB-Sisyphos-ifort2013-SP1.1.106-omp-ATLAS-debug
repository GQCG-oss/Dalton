TMP_DIR=/home/sisyphos/NightlyTesting/tmp/DaltonIfortDebug
SCRATCH_DIR=/tmp/sisyphos/DaltonIfortDebug
rm -rf $TMP_DIR
rm -rf $SCRATCH_DIR

git clone git@repo.ctcc.no:dalton.git $TMP_DIR
cd $TMP_DIR
export OMP_NUM_THREADS=6
#export MATH_ROOT=/opt/intel/mkl
export MATH_ROOT=/lib64/atlas
export DALTON_TMPDIR=$SCRATCH_DIR
export DALTON_NUM_MPI_PROCS=1
export CTEST_PROJECT_NAME=LSDALTON

./setup --fc=ifort --cc=icc --cxx=icpc --omp --type=debug --check -D BUILDNAME="MB-Sisyphos-ifort2013-SP1.1.106-omp-ATLAS-debug" build

cd build
ctest -D Nightly -L linsca
exit 0

