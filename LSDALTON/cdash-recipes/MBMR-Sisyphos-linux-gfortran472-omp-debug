TMP_DIR=/home/sisyphos/NightlyTesting/tmp/DaltonGfortranDebugMBMR
SCRATCH_DIR=/tmp/sisyphos/DaltonGfortranDebugMBMR
rm -rf $TMP_DIR
rm -rf $SCRATCH_DIR

git clone git@repo.ctcc.no:dalton.git $TMP_DIR
cd $TMP_DIR
export OMP_NUM_THREADS=6
#export MATH_ROOT=
export DALTON_TMPDIR=$SCRATCH_DIR
export DALTON_NUM_MPI_PROCS=1
export CTEST_PROJECT_NAME=LSDALTON

./setup --fc=gfortran --cc=gcc --cxx=g++ --omp --check --type=debug --coverage --blas=builtin --lapack=builtin -D BUILDNAME="MBMR-Sisyphos-linux-gfortran472-omp-debug" build
cd build
make release
#this creates a tar file named DALTON-2013.1-Source.tar.gz
tar -zxvf DALTON-2013.1-Source.tar.gz
cd DALTON-2013.1-Source
./setup --fc=gfortran --cc=gcc --cxx=g++ --omp --check --type=debug --coverage --blas=builtin --lapack=builtin -D BUILDNAME="MBMR-Sisyphos-linux-gfortran472-omp-debug" build
cd build
ctest -D Nightly -L linsca
exit 0
