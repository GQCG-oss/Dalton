TMP_DIR=/home/sisyphos/NightlyTesting/tmp/DaltonIfortReleaseMPI
SCRATCH_DIR=/tmp/sisyphos/DaltonIfortReleaseMPI
rm -rf $TMP_DIR
rm -rf $SCRATCH_DIR

git clone git@repo.ctcc.no:dalton.git $TMP_DIR
cd $TMP_DIR
export OMP_NUM_THREADS=3
export DALTON_TMPDIR=$SCRATCH_DIR
export DALTON_NUM_MPI_PROCS=2
export CTEST_PROJECT_NAME=LSDALTON
#openmpi
export PATH=/usr/lib64/openmpi/bin:$PATH
export LD_LIBRARY_PATH=/usr/lib64/openmpi/lib:$LD_LIBRARY_PATH
export MATH_ROOT=/opt/intel/mkl

./setup --fc=mpif90 --cc=mpicc --cxx=mpic++ --csr --scalapack --int64 --mkl=parallel --static --timings --mpi --omp -D BUILDNAME="MB-Sisyphos-ifort2013-SP1.1.106-openMPI-omp-int64-MKL-release" build

cd build
ctest -D Nightly -L linsca
exit 0

