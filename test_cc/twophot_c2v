
#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > twophot_c2v.mol <<%EOF%
BASIS
6-31G**
Hydrogen flourid
small test basis
    2    2  Y  X      1.00D-15
        9.0   1    
F     0.0000000000000000  0.0000000000000000 1.76320000000000000      
        1.0   1
H     0.0000000000000000  0.0000000000000000 0.00000000000000000      
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > twophot_c2v.dal <<%EOF%
**GENERAL
.RUNSIR
**INTEGRAL
.DIPLEN
**SIRIUS
.CC
*ORBITALS 
.NOSUPSYM
*SCF INPUT 
.THRESH
 1.0d-12
*CC INPUT 
.CCS
.CC2
.CCSD
.NSYM
 4
.THRENR
 1.0d-8
.THRLEQ
 1.0d-8
*CCEXCI
.NCCEXCI
 0 0 0 1
.THREXC
 1.0d-7
*CCSM
.SELSTA
 4 1 0.0
.OPERATOR
YDIPLEN XDIPLEN YDIPLEN XDIPLEN
XDIPLEN YDIPLEN XDIPLEN YDIPLEN
*END OF
*END OF
%EOF%
#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/ksh
log=$1

if [ `uname` = IRIX64 ]; then
   GREP="egrep"
else
   GREP="egrep -a"
fi

# SCF, MP2 and CCSD energies:
CRIT1=`$GREP "Final * HF energy:" $log | $GREP "\-100.00891992" | wc -l`
CRIT2=`$GREP "Total MP2 * energy: * \-100.19366261" $log | wc -l`
CRIT3=`$GREP "Total CC2 * energy: * \-100.19468693" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[1]=5
ERROR[1]="ENERGIES NOT CORRECT"


# CCS twophoton transition moment
CRIT1=`$GREP "TSM:[ ]*(5\.|0\.5|0.05)238618." $log | wc -l`
CRIT2=`$GREP "ABLMOM[ ]*( |\-|0|\-0)\.364653.*[ ]* CDRMOM[ ]*( |\-|0|\-0)\.143659." $log | wc -l`
CRIT3=`$GREP "CDLMOM[ ]*( |\-|0|\-0)\.364653.*[ ]* ABRMOM[ ]*( |\-|0|\-0)\.143659." $log | wc -l`
CRIT4=`$GREP " w moment product  \(ablmom\*cdlmom\):[ ]+(5\.|0\.5|0\.05)238618." $log | wc -l`
CRIT5=`$GREP "\-w moment product \(cdlmom\*abrmom\):[ ]+(5\.|0\.5|0\.05)238618." $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5`
CTRL[2]=10
ERROR[2]="CCS TWOPHOTON TRANSITION MOMENTS NOT CORRECT"

# CC2 twophoton transition moment
CRIT1=`$GREP "TSM:[ ]*0.337647." $log | wc -l`
CRIT2=`$GREP "ABLMOM[ ]*( |0)\.815478.*[ ]* CDRMOM[ ]*( |0)\.414048." $log | wc -l`
CRIT3=`$GREP "CDLMOM[ ]*( |0)\.815478.*[ ]* ABRMOM[ ]*( |0)\.414048." $log | wc -l`
CRIT4=`$GREP " w moment product  \(ablmom\*cdlmom\):[ ]+( |0)\.337647." $log | wc -l`
CRIT5=`$GREP "\-w moment product \(cdlmom\*abrmom\):[ ]+( |0)\.337647." $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5`
CTRL[3]=10
ERROR[3]="CC2 TWOPHOTON TRANSITION MOMENTS NOT CORRECT"

# CCSD twophoton transition moment
CRIT1=`$GREP "TSM:[ ]*(7\.|0\.7|0\.007)995971." $log | wc -l`
CRIT2=`$GREP "ABLMOM[ ]*( |\-|0|\-0)\.168028.*[ ]* CDRMOM[ ]*( |\-)(4\.|0\.4|0\.04)758689." $log | wc -l`
CRIT3=`$GREP "CDLMOM[ ]*( |\-|0|\-0)\.168028.*[ ]* ABRMOM[ ]*( |\-)(4\.|0\.4|0\.04)758689." $log | wc -l`
CRIT4=`$GREP " w moment product  \(ablmom\*cdlmom\):[ ]+(7\.|0\.7|0\.007)995971." $log | wc -l`
CRIT5=`$GREP "\-w moment product \(cdlmom\*abrmom\):[ ]+(7\.|0\.7|0\.007)995971." $log | wc -l`
TEST[4]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5`
CTRL[4]=10
ERROR[4]="CCSD TWOPHOTON TRANSITION MOMENTS NOT CORRECT"

# CCS/CC2/CCSD excitation energies
CRIT1=`$GREP "\^1A2  \|    1   \|     1\.455144.  \|      39\.596..  \|    319367\....  \| 100\.00" $log | wc -l`
CRIT2=`$GREP "\^1A2  \|    1   \|     1\.518329.  \|      41\.315..  \|    333234\....  \|  99\.13" $log | wc -l`
CRIT3=`$GREP "\^1A2  \|    1   \|     1\.328216.  \|      36\.142..  \|    291509\....  \|   ( |0)\.35" $log | wc -l`
TEST[5]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[5]=3
ERROR[5]="CC EXCITATION ENERGIES NOT CORRECT"


PASSED=1
for i in 1 2 3 4 5
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi                
' > twophot_c2v.check
#######################################################################
