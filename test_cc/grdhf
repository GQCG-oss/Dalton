
#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > grdhf.mol <<%EOF%
BASIS
STO-3G
Hydrogen flourid
small test basis
    2    2  Y  X      1.00D-15
        9.0   1    
F     0.0000000000000000  0.0000000000000000 1.76320000000000000      
        1.0   1
H     0.0000000000000000  0.0000000000000000 -0.0001000000000000      
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > grdhf.dal <<%EOF%
**GENERAL
.RUNSIR
**INTEGRAL
.DIPLEN
.DEROVL
.DERHAM
**WAVE FUNCTIONS
.TITLE
   test case for CC2 gradient calculation
.CC
*ORBITALS 
.NOSUPSYM
*SCF INPUT 
.THRESH
 1.0d-12
*CC INPUT 
.CCS
.MP2
.CC2
.CCSD
.THRENR
 1.0d-10
.THRLEQ
 1.0d-10
.PRINT
 2
*DERIVA
*END OF
%EOF%
#######################################################################

 
#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# SCF, MP2, CC2 and CCSD energies:
CRIT1=`$GREP "Final    HF energy: * -98\.57217047" $log | wc -l`
CRIT2=`$GREP "Total MP2   energy: * -98\.59022718" $log | wc -l`
CRIT3=`$GREP "Total CC2   energy: * -98\.59034337" $log | wc -l`
CRIT4=`$GREP "Total CCSD  energy: * -98\.59926180" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4` 
CTRL[1]=7
ERROR[1]="ENERGIES ARE NOT CORRECT"


# CCS gradient:
CRIT1=`$GREP " F * ( |0)\.0000000000 * ( |0)\.0000000000 * ( \-|\-0)\.03274218" $log | wc -l`
CRIT2=`$GREP " H * ( |0)\.0000000000 * ( |0)\.0000000000 * ( |0)\.03274218" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 ` 
CTRL[2]=2
ERROR[2]="CCS GRADIENT IS NOT CORRECT"

# MP2 gradient:
CRIT1=`$GREP " F * ( |0)\.0000000000 * ( |0)\.0000000000 * ( \-|\-0)\.05650016" $log | wc -l`
CRIT2=`$GREP " H * ( |0)\.0000000000 * ( |0)\.0000000000 * ( |0)\.05650016" $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 ` 
CTRL[3]=2
ERROR[3]="MP2 GRADIENT IS NOT CORRECT"

# CC2 gradient:
CRIT1=`$GREP " F * ( |0)\.0000000000 * ( |0)\.0000000000 * ( \-|\-0)\.05675738" $log | wc -l`
CRIT2=`$GREP " H * ( |0)\.0000000000 * ( |0)\.0000000000 * ( |0)\.05675738" $log | wc -l`
TEST[4]=`expr $CRIT1 \+ $CRIT2 ` 
CTRL[4]=2
ERROR[4]="CC2 GRADIENT IS NOT CORRECT"

# CCSD gradient:
CRIT1=`$GREP " F * ( |0)\.0000000000 * ( |0)\.0000000000 * ( \-|\-0)\.07449921" $log | wc -l`
CRIT2=`$GREP " H * ( |0)\.0000000000 * ( |0)\.0000000000 * ( |0)\.07449921" $log | wc -l`
TEST[5]=`expr $CRIT1 \+ $CRIT2 ` 
CTRL[5]=2
ERROR[5]="CCSD GRADIENT IS NOT CORRECT"


PASSED=1
for i in 1 2 3 4 5
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi
' > grdhf.check
chmod +x grdhf.check
#######################################################################
