
#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > beta.mol <<%EOF%
BASIS
6-31G**
Hydrogen flourid
small test basis
    2    1  Y  X      1.00D-15
        9.0   1    
F     0.0000000000000000  0.0000000000000000 1.76320000000000000      
        1.0   1
H     0.0000000000000000  0.0000000000000000 0.00000000000000000      
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > beta.dal <<%EOF%
**GENERAL
.RUNSIR
**INTEGRAL
.DIPLEN
**WAVE FUNCTIONS
.TITLE
  first hyperpolarizability for the HF molecule
  for CCS and CCSD wavefunctions compute:
  - parallel (beta_||) and orthogonal averages (beta_|_)
  - A & B coefficients  (2. and 4. order dispersion coefficients)
.CC
*ORBITALS 
.NOSUPSYM
*SCF INPUT 
.THRESH
 1.0d-12
*CC INPUT 
.CCS
.CCSD
.THRENR
 1.0d-8
.THRLEQ
 1.0d-8
*CCQR
.NOBMAT
.AVERAGE
HYPERPOLARIZABILITY
.DISPCF
  4
*END OF
*END OF
%EOF%
#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/ksh
log=$1

if [ `uname` = IRIX64 ]; then
   GREP="egrep"
else
   GREP="egrep -a"
fi

# SCF, MP2 and CCSD energies:
CRIT1=`$GREP "Total SCF   energy: * \-100.00891992" $log | wc -l`
CRIT2=`$GREP "Total MP2   energy: * \-100.19366261" $log | wc -l`
CRIT3=`$GREP "Total CCSD  energy: * \-100.19779093" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3` 
CTRL[1]=7
ERROR[1]="ENERGIES NOT CORRECT"


# static CCS hyperpolarizabilities
CRIT1=`$GREP "ZDIPLEN  \(unrel\.\)  ..0000   ZDIPLEN  \(unrel\.\)  ..0000   ZDIPLEN  \(unrel\.\)  ..0000      16.5732" $log | wc -l`
CRIT2=`$GREP "ZDIPLEN  \(unrel\.\)  ..0000   XDIPLEN  \(unrel\.\)  ..0000   XDIPLEN  \(unrel\.\)  ..0000     ..675553" $log | wc -l`
CRIT3=`$GREP "beta_\|\|    ..0000   ..0000   ..0000     10.7546" $log | wc -l`
CRIT4=`$GREP "beta.K     ..0000   ..0000   ..0000     10.7546" $log | wc -l`
CRIT5=`$GREP "beta_\|_    ..0000   ..0000   ..0000     3.58487" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5` 
CTRL[2]=5
ERROR[2]="STATIC CCS FIRST HYPERPOLARIZABILITIES NOT CORRECT"

# CCS hyperpolarizability disperion coefficients
CRIT1=`$GREP "2    29.55019.       3.861373.       12.84441." $log | wc -l`
CRIT2=`$GREP "4    679.5170.       20.92422.       110.3988." $log | wc -l`
CRIT3=`$GREP "2    167.2555.       55.75185.       55.75185." $log | wc -l`
CRIT4=`$GREP "4    2169.496.       241.0551.       241.0551." $log | wc -l`
CRIT5=`$GREP "beta\(0\)   10.75462" $log | wc -l`
CRIT6=`$GREP "A         2.591995" $log | wc -l`
CRIT7=`$GREP "B         5.603525" $log | wc -l`
CRIT8=`$GREP "A       ( |0).8352723." $log | wc -l`
CRIT9=`$GREP "B        4\.159824.         B.     ( \-|\-0)\.7074301." $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9` 
CTRL[3]=11
ERROR[3]="CCS FIRST HYPERPOLARIZABILITIES DISPERSION COEFFICIENTS NOT CORRECT"


# static CCSD hyperpolarizabilities
CRIT1=`$GREP "ZDIPLEN  \(unrel\.\)  ..0000   ZDIPLEN  \(unrel\.\)  ..0000   ZDIPLEN  \(unrel\.\)  ..0000      15.3808" $log | wc -l`
CRIT2=`$GREP "ZDIPLEN  \(unrel\.\)  ..0000   XDIPLEN  \(unrel\.\)  ..0000   XDIPLEN  \(unrel\.\)  ..0000     ..902738" $log | wc -l`
CRIT3=`$GREP "beta_\|\|    ..0000   ..0000   ..0000     10.3117" $log | wc -l`
CRIT4=`$GREP "beta.K     ..0000   ..0000   ..0000     10.3117" $log | wc -l`
CRIT5=`$GREP "beta_\|_    ..0000   ..0000   ..0000     3.43726" $log | wc -l`
TEST[4]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5` 
CTRL[4]=5
ERROR[4]="STATIC CCSD FIRST HYPERPOLARIZABILITIES NOT CORRECT"

# CCSD hyperpolarizability disperion coefficients
CRIT1=`$GREP "2    45.48266.       6.438778.       19.52194." $log | wc -l`
CRIT2=`$GREP "4    1253.789.       41.95081.       201.1623." $log | wc -l`
CRIT3=`$GREP "2    188.2000.       62.73334.       62.73334." $log | wc -l`
CRIT4=`$GREP "4    2909.705.       323.3006.       323.3006." $log | wc -l`
CRIT5=`$GREP "beta\(0\)   10.31179" $log | wc -l`
CRIT6=`$GREP "A         3.041823" $log | wc -l`
CRIT7=`$GREP "B         7.838124" $log | wc -l`
CRIT8=`$GREP "A        1.268756." $log | wc -l`
CRIT9=`$GREP "B        7.719873.         B.      \-1.277449." $log | wc -l`
TEST[5]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6 \+ $CRIT7 \+ $CRIT8 \+ $CRIT9` 
CTRL[5]=11
ERROR[5]="CCSD FIRST HYPERPOLARIZABILITIES DISPERSION COEFFICIENTS NOT CORRECT"

# symmetry of beta tensor:
CRIT1=`$GREP "beta_ms    ..0000   ..0000   ..0000" $log | \
       awk "\\\$5 < 1.0e-12 {print \\\$0}" | wc -l`
CRIT2=`$GREP "beta_ms                                    0" $log | \
       awk "NF==5 && \\\$3+\\\$4+\\\$5 < 1.0e-12 {print \\\$0}" | wc -l`
TEST[6]=`expr $CRIT1 \+ $CRIT2`
CTRL[6]=4
ERROR[6]="SYMMETRY OF HYPERPOLAZABILITY TENSOR NOT CORRECT"

PASSED=1
for i in 1 2 3 4 5 6
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

' > beta.check
chmod +x beta.check
#######################################################################
