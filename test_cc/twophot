
#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > twophot.mol <<%EOF%
BASIS
6-31G**
Hydrogen flourid
small test basis
    2    1  Y  X      1.00D-15
        9.0   1    
F     0.0000000000000000  0.0000000000000000 1.76320000000000000      
        1.0   1
H     0.0000000000000000  0.0000000000000000 0.00000000000000000      
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > twophot.dal <<%EOF%
**GENERAL
.RUNSIR
**INTEGRAL
.DIPLEN
**SIRIUS
.CC
*ORBITALS 
.NOSUPSYM
*SCF INPUT 
.THRESH
 1.0d-12
*CC INPUT 
.CC2
.NSYM
 2
.THRENR
 1.0d-8
.THRLEQ
 1.0d-8
*CCEXCI
.NCCEXCI
 0 4 
.THREXC
 1.0d-7
*CCLRSD
.DIPOLE
*CCSM
.SELSTA
 2 3 0.0
.OPERATOR
YDIPLEN XDIPLEN YDIPLEN XDIPLEN
XDIPLEN YDIPLEN XDIPLEN YDIPLEN
*END OF
%EOF%
#######################################################################


#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# SCF, MP2 and CCSD energies:
CRIT1=`$GREP "Final    HF energy:" $log | $GREP "\-100.00891992" | wc -l`
CRIT2=`$GREP "Total MP2   energy:                  \-100.19366261" $log | wc -l`
CRIT4=`$GREP "Total CC2   energy:                  \-100.19468693" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT4`
CTRL[1]=5
ERROR[1]="ENERGIES NOT CORRECT"


# CC2 twophoton transition moment
CRIT1=`$GREP "TSM:[ ]*0.337647." $log | wc -l`
CRIT2=`$GREP "ABLMOM[ ]*( |0).815478.*[ ]* CDRMOM[ ]*( |0).414048." $log | wc -l`
CRIT3=`$GREP "CDLMOM[ ]*( |0).815478.*[ ]* ABRMOM[ ]*( |0).414048." $log | wc -l`
CRIT4=`$GREP " w moment product  \(ablmom\*cdlmom\):[ ]+0.337647.." $log | wc -l`
CRIT5=`$GREP "\-w moment product \(cdlmom\*abrmom\):[ ]+0.337647.." $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5`
CTRL[2]=10
ERROR[2]="CC2 TWOPHOTON TRANSITION MOMENTS NOT CORRECT"

# CC2 excitation energies
CRIT1=`$GREP "\^1A.  \|    1   \|     ( |0)\.396682.  \|      10\.7942.  \|     87061\....  \|  96\.73" $log | wc -l`
CRIT2=`$GREP "\^1A.  \|    2   \|     1\.090983.  \|      29\.6871.  \|    239443\....  \|  96\.14" $log | wc -l`
CRIT3=`$GREP "\^1A.  \|    3   \|     1\.518329.  \|      41\.3158.  \|    333234\....  \|  99\.13" $log | wc -l`
CRIT4=`$GREP "\^1A.  \|    4   \|     1\.572808.  \|      42\.7983.  \|    345191\....  \|  98\.34" $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4`
CTRL[3]=4
ERROR[3]="CC2 EXCITATION ENERGIES NOT CORRECT"

# CC2 onephoton transition moments:
CRIT1=`$GREP "\^1A.  \|    1   \|        ( |0)\.052101.      \|      ( |0)\.013778.       \|    Y " $log | wc -l`
CRIT2=`$GREP "\^1A.  \|    2   \|        ( |0)\.075966.      \|      ( |0)\.055252.       \|    Y " $log | wc -l`
CRIT3=`$GREP "\^1A.  \|    3   \|        ( |0)\.000000.      \|      ( |0)\.000000.       \|    \- " $log | wc -l`
CRIT4=`$GREP "\^1A.  \|    4   \|        ( |0)\.008620.      \|      ( |0)\.009038.       \|    Y " $log | wc -l`
TEST[4]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4`
CTRL[4]=4
ERROR[4]="CC2 ONEPHOTON TRANSITON MOMENTS NOT CORRECT"


PASSED=1
for i in 1 2 3 4
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi                
' > twophot.check
chmod +x twophot.check
#######################################################################
