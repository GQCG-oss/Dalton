#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > shield.mol <<%EOF%
BASIS
6-31G**
H3+ 
...test example...
    1  1 0  X  Y      1.00D-25
        1.0   3
H     0.0000000000000000  0.0000000000000000  -1.00000000000
H     0.0000000000000000  1.4476145000000000   0.50000000000
H     0.0000000000000000 -1.4476145000000000   0.50000000000    
%EOF%

#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > shield.dal <<%EOF%
**GENERAL
.RUNSIR
**INTEGRAL
.DIPLEN
.MAGMOM
.NST
.PSO
.S1MAG
.S1MAGR
.GAUGEO
 0.0 0.0 0.0
**SIRIUS
.CC
*ORBITALS
.NOSUPSYM
*SCF INPUT
.THRESH
  1.0d-10
*CC INPUT
.CCSD
.PRINT
   1
.THRLEQ
 1.0d-10
.THRENR
 1.0d-10
.CONNEC
NATURAL
*CCFOP
.OPERATOR
ZDIPLEN
*CCLR
.RELAXED
.OPERATOR
PSO 01  dh/dBX   
PSO 02  dh/dBX
PSO 03  dh/dBX
PSO 01  dh/dBY
PSO 02  dh/dBY
PSO 03  dh/dBY
PSO 01  dh/dBZ
PSO 02  dh/dBZ
PSO 03  dh/dBZ
*END OF
%EOF%

############################################################

 

############################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/ksh
log=$1

# SCF, MP2 and CCSD energies:
CRIT1=`grep "Total SCF   energy:                    \-1.22081265" $log | wc -l`
CRIT2=`grep "Total MP2   energy:                    \-1.25295318" $log | wc -l`
CRIT3=`grep "Total CCSD  energy:                    \-1.26358594" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3` 
CTRL[1]=6
ERROR[1]="ENERGIES NOT CORRECT"


# SCF shieldings
CRIT1=`grep "<<PSO 01  ,dh/dBX  >>( 0.000000) =     ..4096282." $log | wc -l`
CRIT2=`grep "<<PSO 02  ,dh/dBY  >>( 0.000000) =     ..5309353." $log | wc -l`
CRIT3=`grep "<<PSO 03  ,dh/dBZ  >>( 0.000000) =     ..3677086." $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3` 
CTRL[2]=3
ERROR[2]="SCF SHIELDINGS NOT CORRECT"

# CCSD shieldings
CRIT1=`grep "<<PSO 01  ,dh/dBX  >>( 0.000000) =     ..3889442.      20.7118095." $log | wc -l`
CRIT2=`grep "<<PSO 02  ,dh/dBY  >>( 0.000000) =     ..3630439.      19.3325859." $log | wc -l`
CRIT3=`grep "<<PSO 03  ,dh/dBZ  >>( 0.000000) =     ..4260690.      22.6887582." $log | wc -l`
TEST[3]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[3]=3
ERROR[3]="CCSD SHIELDINGS NOT CORRECT"


# SCF and CCSD shieldings
CRIT1=`grep "<<PSO 02  ,dh/dBX  >>( 0.000000) =     ..0000000." $log | wc -l`
CRIT2=`grep "<<PSO 03  ,dh/dBY  >>( 0.000000) =     ..0000000." $log | wc -l`
TEST[4]=`expr $CRIT1 \+ $CRIT2`
CTRL[4]=4
ERROR[4]="SYMMETRY IN SCF AND CCSD SHIELDINGS NOT CORRECT"


PASSED=1
for i in 1 2 3 4
do 
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done 

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM 
  exit 1
fi

' > shield.check
#######################################################################
