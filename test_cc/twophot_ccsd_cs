
#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > twophot_ccsd_cs.mol <<%EOF%
BASIS
6-31G**
Hydrogen flourid
small test basis
    2    1  Y         1.00D-15
        9.0   1    
F     0.0000000000000000  0.0000000000000000 1.76320000000000000      
        1.0   1
H     0.0000000000000000  0.0000000000000000 0.00000000000000000      
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > twophot_ccsd_cs.dal <<%EOF%
**GENERAL
.RUNSIR
**INTEGRAL
.DIPLEN
**SIRIUS
.CC
*ORBITALS 
.NOSUPSYM
*SCF INPUT 
.THRESH
 1.0d-12
*CC INPUT 
.CCSD
.NSYM
 2
.THRENR
 1.0d-8
.THRLEQ
 1.0d-8
.PRINT
  5
! .DEBUG
*CCEXCI
.NCCEXCI
 0 3 
.THREXC
 1.0d-7
*CCSM
.SELSTA
 2 3 0.01
.OPERATOR
YDIPLEN XDIPLEN YDIPLEN XDIPLEN
XDIPLEN YDIPLEN XDIPLEN YDIPLEN
*CCLRSD
.DIPOLE
*END OF
*END OF
%EOF%
#######################################################################

 

#######################################################################

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/ksh
log=$1

if [ `uname` = Linux ]; then
   GREP="egrep -a"
else
   GREP="egrep"
fi

# SCF, MP2 and CCSD energies:
CRIT1=`$GREP "Final    HF energy:" $log | $GREP "\-100.00891992" | wc -l`
CRIT2=`$GREP "Total MP2   energy:                  \-100.19366261" $log | wc -l`
CRIT3=`$GREP "Total CCSD  energy:                  \-100.19779093" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[1]=5
ERROR[1]="ENERGIES NOT CORRECT"


# CCSD twophoton transition moment
CRIT1=`$GREP "TSM:[ ]*(8\.|0\.8|0.008)137633." $log | wc -l`
CRIT2=`$GREP "ABLMOM[ ]*( |\-|0|\-0)\.165298.[0-9]*[ ]* CDRMOM[ ]*( |\-)(4\.|0\.4|0\.04)922989." $log | wc -l`
CRIT3=`$GREP "CDLMOM[ ]*( |\-|0|\-0)\.165298.[0-9]*[ ]* ABRMOM[ ]*( |\-)(4\.|0\.4|0\.04)922989." $log | wc -l`
CRIT4=`$GREP "w moment product * \(ablmom\*cdlmom\):[ ]*(\+| )(8\.|0\.8|0.008)137633." $log | wc -l`
CRIT5=`$GREP "\-w moment product \(cdlmom\*abrmom\):[ ]*(\+| )(8\.|0\.8|0.008)137633." $log | wc -l`
CRIT6=`$GREP "LASER FREQUENCES   W:     ( |0).010000" $log | wc -l`
TEST[2]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3 \+ $CRIT4 \+ $CRIT5 \+ $CRIT6`
CTRL[2]=12
ERROR[2]="CCSD TWOPHOTON TRANSITION MOMENTS NOT CORRECT"

# CCSD excitation energies
CRIT1=`$GREP "\^1A.  \|    3   \|     1\.328216.  \|      36\.1426.  \|    291509\....  \|   ( |0)\.35" $log | wc -l`
TEST[3]=`expr $CRIT1`
CTRL[3]=1
ERROR[3]="CC EXCITATION ENERGIES NOT CORRECT"


PASSED=1
for i in 1 2 3
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi                
' > twophot_ccsd_cs.check
#######################################################################
