#/bin/csh -fx
#
# short tests...
#
set list=`ls *.check`
echo "list of check files:" $list
foreach check ($list)
  echo "--------------------------------"
  echo "check log file for test $check:r"
  if ( ! -es $check:r.log ) then
    echo "file $check:r.log not found..."
  else
    $check $check:r.log
  endif
  echo "--------------------------------"
end
