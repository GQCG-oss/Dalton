#######################################################################
#  INTEGRAL INPUT
#######################################################################
cat > verdet_hf.mol <<%EOF%
BASIS
DunningDZ
Verdet calculations
for HF in CM coor. system
    2    0  X  Y  Z   1.00D-15
        1.0   1
H     0.0000000000000000  0.000000000000000   1.645225080000000       *
        9.0   1
F     0.0000000000000000  0.000000000000000   -.08727570600000        *
%EOF%

#######################################################################
#  DALTON INPUT
#######################################################################
cat > verdet_hf.dal <<%EOF%
**GENERAL
.RUNSIR
**INTEGRAL
.DIPLEN
.ANGMOM
.MAGMOM
.CM-1
XYZ-ALL
.S1MAGR
.GAUGEO
 0.0 0.0 0.0
**SIRIUS
.CC
*ORBITAL
.NOSUPSYM
*HF INPUT
.THRESH
  1.0d-10
*CC INPUT
.CCSD
.THRENR
 1.0d-9
.THRLEQ
 1.0d-9
.THRLDPHF
 1.0d-10
.CONNECTION
NATURAL
*CCFOP
.DIPMOM
*CCQR
.OPERAT
(UNREL) (UNREL) (UNREL)
XDIPLEN YDIPLEN ZANGMOM
ZDIPLEN XDIPLEN YANGMOM
YDIPLEN ZDIPLEN XANGMOM
!
(UNREL) (UNREL) (RELAX)
XDIPLEN YDIPLEN ZANGMOM
ZDIPLEN XDIPLEN YANGMOM
YDIPLEN ZDIPLEN XANGMOM
!
(UNREL) (UNREL) (RELAX)
XDIPLEN YDIPLEN dh/dBZ
ZDIPLEN XDIPLEN dh/dBY
YDIPLEN ZDIPLEN dh/dBX
.MIXFRE
1
0.11391
0.0
*END OF
*END OF
%EOF%

#######################################################################
#  CHECK SCRIPT
#######################################################################
echo '#!/bin/ksh
log=$1

# SCF, MP2 and CCSD energies:
CRIT1=`egrep "Total SCF   energy: * \-100\.0219696975" $log | wc -l`
CRIT2=`egrep "Total MP2   energy: * \-100\.1561878288" $log | wc -l`
CRIT3=`egrep "Total CCSD  energy: * \-100\.1586556745" $log | wc -l`
TEST[1]=`expr $CRIT1 \+ $CRIT2 \+ $CRIT3`
CTRL[1]=6
ERROR[1]="SCF, MP2 OR CCSD ENERGY NOT CORRECT"

# CCSD (unrelaxed) Verdet constant components:
CRIT1=`egrep "( |0)\.1139   ZANGMOM  \(unrel\.\)  ( |0)\.[ 0]+ ( |0)\.51782195" $log | wc -l`
CRIT2=`egrep "( |0)\.1139   YANGMOM  \(unrel\.\)  ( |0)\.[ 0]+ 1\.2780083" $log | wc -l`
CRIT3=`egrep "( |0)\.1139   XANGMOM  \(unrel\.\)  ( |0)\.[ 0]+ 1\.2780083" $log | wc -l`
TEST[2]=`expr $CRIT1  \+ $CRIT2  \+ $CRIT3`  
CTRL[2]=3
ERROR[2]="UNRELAXED CCSD VERDET CONSTANT NOT CORRECT"

# CCSD (relaxed) Verdet constant components:
CRIT1=`egrep "( |0)\.1139   ZANGMOM  \(relax\.\)  ( |0)\.[ 0]+ ( |0)\.51782195" $log | wc -l`
CRIT2=`egrep "( |0)\.1139   YANGMOM  \(relax\.\)  ( |0)\.[ 0]+ 1\.2728313" $log | wc -l`
CRIT3=`egrep "( |0)\.1139   XANGMOM  \(relax\.\)  ( |0)\.[ 0]+ 1\.2728313" $log | wc -l`
TEST[3]=`expr $CRIT1  \+ $CRIT2  \+ $CRIT3`  
CTRL[3]=3
ERROR[3]="RELAXED CCSD VERDET CONSTANT NOT CORRECT"

# CCSD (LAO+relaxed) Verdet constant components:
CRIT1=`egrep "( |0)\.1139   dh/dBZ   \(relax.\)  ( |0)\.[ 0]+ ( |0)\.25891097" $log | wc -l`
CRIT2=`egrep "( |0)\.1139   dh/dBY   \(relax.\)  ( |0)\.[ 0]+ ( |0)\.75223520" $log | wc -l`
CRIT3=`egrep "( |0)\.1139   dh/dBX   \(relax.\)  ( |0)\.[ 0]+ ( |0)\.75223520" $log | wc -l`
TEST[4]=`expr $CRIT1  \+ $CRIT2  \+ $CRIT3` 
CTRL[4]=3
ERROR[4]="LAO+RELAXED CCSD VERDET CONSTANT NOT CORRECT"



PASSED=1
for i in 1 2 3 4
do
   if [ ${TEST[i]} -ne ${CTRL[i]} ]; then
     echo ${ERROR[i]}
     PASSED=0
   fi
done

if [ $PASSED -eq 1 ]
then
  echo TEST ENDED PROPERLY
  exit 0
else
  echo THERE IS A PROBLEM
  exit 1
fi

' > verdet_hf.check

chmod +x verdet_hf.check
